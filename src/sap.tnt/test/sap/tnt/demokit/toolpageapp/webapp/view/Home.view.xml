<mvc:View
	controllerName="sap.ui.demo.toolpageapp.controller.Home"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">

	<Page showHeader="false">
		<l:BlockLayout
			id="BlockLayout"
			background="Light">

			<l:BlockLayoutRow>
				<l:BlockLayoutCell class="sapUiNoContentPadding">
					<Image
						src="{
							path: 'view>/isPhone',
							formatter: '.formatter.srcImageValue'
						}"
						width="100%"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>

			<l:BlockLayoutRow rowColorSet="ColorSet3">
				<l:BlockLayoutCell
					class="sapUiResponsiveContentPadding"
					title="{i18n>shopAdminTitle}"
					backgroundColorSet="ColorSet9"
					backgroundColorShade="ShadeB"
					titleAlignment="Left"/>
			</l:BlockLayoutRow>

			<l:BlockLayoutRow rowColorSet="ColorSet2">
				<l:BlockLayoutCell>
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://role"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>administrationTitle}"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>administrationContent}"
							class="sapUiTinyMarginBottom"/>
						<Link text="{i18n>accessLink}"/>
						<Link text="{i18n>learnLink}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell>
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://add-product"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>productTitle}"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>productContent}"
							class="sapUiTinyMarginBottom"/>
						<Link text="{i18n>accessLink}"/>
						<Link text="{i18n>learnLink}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell>
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://customer-financial-fact-sheet"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>revenueTitle}"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>revenueContent}"
							class="sapUiTinyMarginBottom"/>
						<Link text="{i18n>accessLink}"/>
						<Link text="{i18n>learnLink}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell>
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://supplier"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>supplierTitle}"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>supplierContent}"
							class="sapUiTinyMarginBottom"/>
						<Link text="{i18n>accessLink}"/>
						<Link text="{i18n>learnLink}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>

			<l:BlockLayoutRow rowColorSet="ColorSet3">
				<l:BlockLayoutCell>
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://thumb-up"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>socialMediaTitle}"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>socialMediaContent}"
							class="sapUiTinyMarginBottom"/>
						<Link text="{i18n>accessLink}"/>
						<Link text="{i18n>learnLink}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell
					class="sapUiNoContentPadding"
					backgroundColorSet="ColorSet9"
					backgroundColorShade="ShadeB"
					width="3">
					<Table items="{path:'customer>/customers', templateShareable: false}">
						<headerToolbar>
							<Toolbar design="Transparent">
								<Title text="{i18n>customerOverviewTitle}"/>
							</Toolbar>
						</headerToolbar>
							<columns>
								<Column>
									<Text text="{i18n>customerName}"/>
								</Column>
								<Column minScreenWidth="Tablet">
									<Text text="{i18n>productId}"/>
								</Column>
								<Column minScreenWidth="Desktop" hAlign="End">
									<Text text="{i18n>lastPurchase}"/>
								</Column>
								<Column hAlign="Center">
									<Text text="{i18n>payment}"/>
								</Column>
								<Column hAlign="End">
									<Text text="{i18n>amount}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{customer>name}"/>
										<Text text="{customer>productId}"/>
										<Text text="{customer>lastPurchase}"/>
										<ObjectNumber
											number="{customer>payment}"
											state="{customer>state}"/>
										<ObjectNumber
											number="{
												parts:[{path:'customer>amount'},{path:'customer>currencyCode'}],
												type: 'sap.ui.model.type.Currency',
												formatOptions: {showMeasure: false}
											}"
											unit="{customer>currencyCode}" />
									</cells>
								</ColumnListItem>
							</items>
						</Table>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>

</mvc:View>