<mvc:View
	controllerName="sap.tnt.sample.ToolHeader.C"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	height="100%">
	<tnt:ToolHeader>
		<Button icon="sap-icon://menu2" type="Transparent">
			<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow" />
			</layoutData>
		</Button>
		<MenuButton text="File" type="Transparent">
			<layoutData>
				<OverflowToolbarLayoutData priority="Low" />
			</layoutData>
		</MenuButton>
		<MenuButton text="Edit" type="Transparent" enabled="false">
			<layoutData>
				<OverflowToolbarLayoutData priority="Low" />
			</layoutData>
		</MenuButton>
		<MenuButton text="View" type="Transparent">
			<layoutData>
				<OverflowToolbarLayoutData priority="Low" />
			</layoutData>
		</MenuButton>
		<MenuButton text="Navigate" type="Transparent">
			<layoutData>
				<OverflowToolbarLayoutData priority="Low" />
			</layoutData>
		</MenuButton>
		<MenuButton text="Code" type="Transparent">
			<layoutData>
				<OverflowToolbarLayoutData priority="Low" />
			</layoutData>
		</MenuButton>
		<MenuButton text="Refactor" type="Transparent">
			<layoutData>
				<OverflowToolbarLayoutData priority="Low" />
			</layoutData>
		</MenuButton>
		<MenuButton text="Run" type="Transparent">
			<layoutData>
				<OverflowToolbarLayoutData priority="Low" />
			</layoutData>
		</MenuButton>
		<MenuButton text="Tools" type="Transparent">
			<layoutData>
				<OverflowToolbarLayoutData priority="Low" />
			</layoutData>
		</MenuButton>
		<tnt:ToolHeaderUtilitySeparator />
		<ToolbarSpacer>
			<layoutData>
				<OverflowToolbarLayoutData minWidth="20px" />
			</layoutData>
		</ToolbarSpacer>
		<SearchField width="240px">
		<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow" />
			</layoutData>
		</SearchField>
		<Button text="Alan Smith" type="Transparent" press=".onUserNamePress">
			<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow" />
			</layoutData>
		</Button>
	</tnt:ToolHeader>
</mvc:View>
