<mvc:View
	class="sapUiSizeCompact"
	controllerName="sap.ui.core.internal.samples.odata.v2.SalesOrders.Main"
	height="100%"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:plugins="sap.m.plugins"
	xmlns:t="sap.ui.table">
<App>
	<Page id="page" floatingFooter="true" showHeader="false">
		<content>
			<VBox class="sapUiSmallMargin">
				<Toolbar design="Info">
					<Label design="Bold" labelFor="salesOrderID" text="Sales Order">
						<layoutData>
							<ToolbarLayoutData shrinkable="false" />
						</layoutData>
					</Label>
					<Input submit="onSelectSalesOrder" value="{ui>/salesOrderID}">
						<layoutData>
							<ToolbarLayoutData maxWidth="10em" shrinkable="true" />
						</layoutData>
					</Input>
					<Button press="onSelectSalesOrder" text="Show Sales Order" type="Accept" />
					<ToolbarSpacer/>
					<Link href="MIT.SalesOrders(V2).Messages.html" target="_blank"
						text="Test Cases" />
				</Toolbar>
			</VBox>
			<VBox class="sapUiSmallMargin" id="objectPage">
				<form:SimpleForm ariaLabelledBy="objectPageTitle" backgroundDesign="Transparent"
					editable="true" labelSpanM="2" layout="ResponsiveGridLayout">
					<form:toolbar>
						<Toolbar design="Transparent">
							<Title id="objectPageTitle" level="H2" text="Sales Order Details" />
						</Toolbar>
					</form:toolbar>
					<Toolbar design="Transparent">
						<Title level="H2" text="Sales Order" />
					</Toolbar>
					<Label text="Sales Order ID" />
					<Input editable="false" value="{SalesOrderID}" width="8em" />
					<Label text="Note" />
					<Input value="{Note}" />
					<Label text="Gross Amount" />
					<Input editable="false" value="{
							parts : ['GrossAmount', 'CurrencyCode'],
							type : 'sap.ui.model.odata.Currency'
						}" width="12em" />
					<Label text="Changed At" />
					<Input editable="false" value="{
							path : 'ChangedAt',
							type : 'sap.ui.model.odata.type.DateTime'
						}" width="12em" />
				</form:SimpleForm>
				<t:Table id="ToLineItems" rowActionCount="1" rows="{
						parameters : {transitionMessagesOnly : true},
						path : 'ToLineItems'
					}" threshold="0" visibleRowCount="4">
					<t:dependents>
						<plugins:DataStateIndicator />
					</t:dependents>
					<t:extension>
						<Toolbar>
							<Title level="H2" text="Sales Order Items">
								<layoutData>
									<ToolbarLayoutData shrinkable="false" />
								</layoutData>
							</Title>
							<ToolbarSpacer/>
							<Button press="onFixAllQuantities" text="Fix Quantities" />
							<ToggleButton press="onTransitionMessagesOnly" pressed="true"
								text="Transition Messages Only"
								tooltip="Message handling is done by the parent entity" />
						</Toolbar>
					</t:extension>
					<t:rowSettingsTemplate>
						<t:RowSettings id="rowsettings" />
					</t:rowSettingsTemplate>
					<t:rowActionTemplate>
						<t:RowAction>
							<t:RowActionItem press="onShowProductDetails" type="Navigation" />
						</t:RowAction>
					</t:rowActionTemplate>
					<t:columns>
						<t:Column width="8em">
							<Label text="Sales Order ID" />
							<t:template>
								<Input editable="false" value="{SalesOrderID}" />
							</t:template>
						</t:Column>
						<t:Column width="8em">
							<Label text="Item Position" />
							<t:template>
								<Input editable="false" value="{ItemPosition}" />
							</t:template>
						</t:Column>
						<t:Column width="8em">
							<Label text="Product ID" />
							<t:template>
								<Input editable="false" value="{ProductID}" />
							</t:template>
						</t:Column>
						<t:Column width="8em">
							<Label text="Quantity" />
							<t:template>
								<Input value="{
										constraints : {precision : 13, scale : 3},
										path : 'Quantity',
										type : 'sap.ui.model.odata.type.Decimal'
									}" textAlign="Right" />
							</t:template>
						</t:Column>
						<t:Column width="5em">
							<Label text="Unit" />
							<t:template>
								<Input value="{
										constraints : {maxLength : 3},
										path : 'QuantityUnit',
										type : 'sap.ui.model.odata.type.String'
									}" />
							</t:template>
						</t:Column>
						<t:Column width="10em">
							<Label text="Gross Amount" />
							<t:template>
								<Input value="{
										constraints : {precision : 16, scale : 3},
										path : 'GrossAmount',
										type : 'sap.ui.model.odata.type.Decimal'
									}" textAlign="Right" />
							</t:template>
						</t:Column>
						<t:Column width="6em">
							<Label text="Currency" />
							<t:template>
								<Input value="{
										constraints : {maxLength : 5},
										path : 'CurrencyCode',
										type : 'sap.ui.model.odata.type.String'
									}" />
							</t:template>
						</t:Column>
						<t:Column>
							<Label text="Note" />
							<t:template>
								<Input value="{Note}" />
							</t:template>
						</t:Column>
						<t:Column width="4em">
							<Label text="Actions" />
							<t:template>
								<Button enabled="{= ${ProductID} === 'HT-1000'}"
									press="onFixQuantity" text="Fix" tooltip="Fix quantity issues"
								/>
							</t:template>
						</t:Column>
					</t:columns>
				</t:Table>
			</VBox>
			<VBox>
				<dependents>
					<Dialog binding="{ToProduct}" id="productDetailsDialog" title="Product Details">
						<buttons>
							<Button press="onCloseProductDetails" text="Close" type="Accept" />
						</buttons>
						<form:SimpleForm editable="true" layout="ResponsiveGridLayout">
							<Label text="Product ID" />
							<Input value="{ProductID}" />
							<Label text="Name" />
							<Input value="{Name}" />
						</form:SimpleForm>
					</Dialog>
				</dependents>
			</VBox>
		</content>
		<footer>
			<OverflowToolbar>
				<Button icon="sap-icon://message-popup" id="messagePopoverButton"
					press="onMessagePopoverPress" text="{ui>/messageCount}" tooltip="Show Messages"
					type="Emphasized">
					<dependents>
						<MessagePopover activeTitlePress="onMessageSelected"
							afterClose="onMessagePopoverClosed" id="messagePopover"
							items="{
								events : {
									change : '.updateMessageCount'
								},
								path : 'messages>/'
							}">
							<MessageItem activeTitle="true" description="{messages>message}"
								subtitle="{messages>additionalText}" title="{messages>message}"
								type="{messages>type}" />
						</MessagePopover>
					</dependents>
				</Button>
				<ToolbarSpacer />
				<Button press="onSaveSalesOrder" text="Save" type="Emphasized" />
				<Button press="onResetChanges" text="Reset Changes" />
			</OverflowToolbar>
		</footer>
	</Page>
</App>
</mvc:View>