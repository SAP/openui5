<core:FragmentDefinition
	xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1"
	xmlns:m="sap.m" xmlns:core="sap.ui.core" xmlns:mdcc="sap.ui.mdc"
	xmlns:mdct="sap.ui.mdc.sample.templates">
	<template:if test="{= ${path:'controlroot>list', formatter:'sap.ui.core.FragmentControl.helper.runtimeListBinding'}}">
		<template:then>
			<template:with path="controlroot>list" var="list"
				helper="sap.ui.core.FragmentControl.helper.listMetaContext">
				<template:if test="{= ${controlroot>type} === 'ResponsiveTable'}">
					<template:then>
						<m:Table
							items="{path: 'controlroot>list', formatter:'sap.ui.core.FragmentControl.helper.runtimeListBinding'}"
							id="-innerTable"
							headerText="{path:'controlroot>header', formatter:'sap.ui.core.FragmentControl.helper.runtimeProperty'}"
							mode="SingleSelectLeft" selectionChange="selectionChangeHandler">
							<template:with path="list>com.sap.vocabularies.UI.v1.LineItem"
								var="lineitems">
								<m:columns>
									<template:repeat list="{lineitems>}" var="dataField">
										<m:Column>
											<template:if test="{dataField>Label}">
												<template:then>
													<m:Label
														text="{path: 'dataField>Label', formatter: 'sap.ui.model.odata.AnnotationHelper.format'}"></m:Label>
												</template:then>
												<template:elseif test="dataField>Value">
													<template:with path="dataField>Value"
														helper="sap.ui.model.odata.AnnotationHelper.resolvePath"
														var="dataFieldValue">
														<m:Label
															text="{path:'dataFieldValue>com.sap.vocabularies.Common.v1.Label', formatter: 'sap.ui.model.odata.AnnotationHelper.format'}"></m:Label>
													</template:with>
												</template:elseif>
											</template:if>
										</m:Column>
									</template:repeat>
								</m:columns>
								<m:items>
									<m:ColumnListItem>
										<m:cells>
											<template:repeat list="{lineitems>}" var="dataField">
												<mdcc:Field editable="{path:'controlroot>editable', formatter:'sap.ui.core.FragmentControl.helper.runtimeProperty'}"
													value="{path:'dataField>Value', formatter: 'sap.ui.model.odata.AnnotationHelper.format'}">
												</mdcc:Field>
											</template:repeat>
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</template:with>
						</m:Table>
					</template:then>
					<template:elseif test="{= ${controlroot>type} === 'GridTable'}">
						<m:VBox>
							<m:Text
								text="{path:'controlroot>header', formatter:'sap.ui.core.FragmentControl.helper.runtimeProperty'}" />
							<table:Table xmlns:table="sap.ui.table"
								id="-innerTable"
								rows="{path: 'controlroot>list', formatter:'sap.ui.core.FragmentControl.helper.runtimeListBinding'}"
								rowSelectionChange="selectionChangeHandler">
								<template:with path="list>com.sap.vocabularies.UI.v1.LineItem"
									var="lineitems">
									<table:columns>
										<template:repeat list="{lineitems>}" var="dataField">
											<table:Column width="{path: 'column>width'}"
												sortProperty="{path: 'column>sortby'}">
												<table:label>
													<template:if test="{dataField>Label}">
														<template:then>
															<m:Label
																text="{path: 'dataField>Label', formatter: 'sap.ui.model.odata.AnnotationHelper.format'}"></m:Label>
														</template:then>
														<template:elseif test="dataField>Value">
															<template:with path="dataField>Value"
																helper="sap.ui.model.odata.AnnotationHelper.resolvePath"
																var="dataFieldValue">
																<m:Label
																	text="{path:'dataFieldValue>com.sap.vocabularies.Common.v1.Label', formatter: 'sap.ui.model.odata.AnnotationHelper.format'}"></m:Label>
															</template:with>
														</template:elseif>
													</template:if>
												</table:label>
												<table:template>
													<mdcc:Field editable="{path:'controlroot>editable', formatter:'sap.ui.core.FragmentControl.helper.runtimeProperty'}"
														value="{path:'dataField>Value', formatter: 'sap.ui.model.odata.AnnotationHelper.format'}">
													</mdcc:Field>
												</table:template>
											</table:Column>
										</template:repeat>
									</table:columns>
								</template:with>
							</table:Table>
						</m:VBox>
					</template:elseif>
				</template:if>
			</template:with>
		</template:then>
		<template:else>
			<m:Text text="Table not bound" />
		</template:else>
	</template:if>
</core:FragmentDefinition>
