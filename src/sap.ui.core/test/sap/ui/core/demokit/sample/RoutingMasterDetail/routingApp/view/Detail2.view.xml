<mvc:View
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="sap.ui.core.sample.RoutingMasterDetail.routingApp.controller.Detail2">
	<Page
		title="{productName}"
		showNavButton="true"
		navButtonPress="onNavBack">
		<content>
			<f:SimpleForm title="Product Details">
				<f:content>
					<Label text="Product ID"/>
					<Text text="{productId}" />
					<Label text="Product Name"/>
					<Text text="{productName}" />
				</f:content>
			</f:SimpleForm>
			<layout:VerticalLayout class="sapUiContentPadding">
				<Text text="Static Routes:" />
				<Link text="Go to product 1-C" press="onToProduct1C" />
				<Link text="Go to product 2-D" press="onToProduct2D" />
			</layout:VerticalLayout>
		</content>
	</Page>
</mvc:View>