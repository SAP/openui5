			<Label text="scale: 3" labelFor="I26"/>
			<Input value="{path: 'Decimal', type: 'sap.ui.model.odata.type.Decimal', constraints: {scale: 3}}" id="I26"/>
			<Label text="precision: 10, scale: &quot;variable&quot;, nullable: false"  labelFor="I27"/>
