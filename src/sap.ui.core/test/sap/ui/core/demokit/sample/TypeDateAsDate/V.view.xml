<mvc:View
	controllerName="sap.ui.core.sample.TypeDateAsDate.C"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m">

	<form:SimpleForm
		width="auto"
		class="sapUiResponsiveMargin"
		layout="ResponsiveGridLayout"
		editable="true"
		labelSpanL="3"
		labelSpanM="3"
		columnsL="1"
		columnsM="1"
		emptySpanL="4"
		emptySpanM="4"
		title="Date Input" >
		<form:content>
			<Label text="Date" />
			<DatePicker value="{
				path: '/date',
				type: 'sap.ui.model.type.Date'}" />
		</form:content>
	</form:SimpleForm>

	<form:SimpleForm
		width="auto"
		class="sapUiResponsiveMargin"
		layout="ResponsiveGridLayout"
		labelSpanL="3"
		labelSpanM="3"
		emptySpanL="4"
		emptySpanM="4"
		columnsL="1"
		columnsM="1"
		title="Format Options" >
		<form:content>

			<Label text="Short" />
			<Text text="{
				path: '/date',
				type: 'sap.ui.model.type.Date',
				formatOptions: {
					style: 'short'
				}
			}" />

			<Label text="Medium" />
			<Text text="{
				path: '/date',
				type: 'sap.ui.model.type.Date',
				formatOptions: {
					style: 'medium'
				}
			}" />

			<Label text="Long" />
			<Text text="{
				path : '/date',
				type : 'sap.ui.model.type.Date',
				formatOptions: {
					style : 'long'
				}
			}" />

			<Label text="Full" />
			<Text text="{
				path: '/date',
				type: 'sap.ui.model.type.Date',
				formatOptions: {
					style: 'full'
				}
			}" />

		</form:content>
	</form:SimpleForm>

	<form:SimpleForm
		width="auto"
		class="sapUiResponsiveMargin"
		layout="ResponsiveGridLayout"
		labelSpanL="3"
		labelSpanM="3"
		emptySpanL="4"
		emptySpanM="4"
		columnsL="1"
		columnsM="1"
		title="Relative Time Format" >
		<form:content>

			<Label text="Relative Time" />
			<Text text="{
				path: '/date',
				type: 'sap.ui.model.type.Date',
				formatOptions: {
					relative: true,
					relativeScale: 'auto'
				}
			}" />
		</form:content>
	</form:SimpleForm>
</mvc:View>
