<mvc:View controllerName="sap.ui.demo.HeapOfShards.controller.App"
          xmlns:mvc="sap.ui.core.mvc"
          displayBlock="true"
          xmlns="sap.m">
    <App>
        <pages>
            <Page title="{i18n>title}" class="sapUiContentPadding">
                <content>
                    <MessageStrip
                            text="{i18n>warning}"
                            type="Warning"
                            showIcon="true"
                            showCloseButton="false"
                            class="sapUiMediumMarginBottom">
                    </MessageStrip>
                    <List
                        mode="SingleSelectMaster"
                        select="onSelect">
                       <StandardListItem
                                title="{i18n>item1Text}"
                                info="{i18n>itemInfo}"
                                infoState="Success"
                                counter="17x">
                        </StandardListItem>
                       <StandardListItem
                                title="{i18n>item2Text}"
                                info="{i18n>itemInfo}"
                                infoState="Success"
                                counter="1x">
                        </StandardListItem>
                    </List>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>