<mvc:View
	controllerName="sap.ui.layout.sample.GridInfo.Grid"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:Grid
		binding="{/PersonCollection}"
		class="sapUiSmallMarginTop"
		hSpacing="2"
		defaultSpan="L6 M6 S10">
		<l:content>
			<Image src="{0/ContactPicUrl}" width="100%">
				<layoutData>
					<l:GridData
						span="L3 M3 S8"
						linebreakL="true"
						linebreakM="true"
						linebreakS="true" />
				</layoutData>
			</Image>
			<VBox>
				<Text text="{0/FirstName} {0/LastName}" class="nameTitle" />
				<Text text="{0/Description}" />
			</VBox>
			<Image src="{1/ContactPicUrl}" width="100%">
				<layoutData>
					<l:GridData
						span="L3 M3 S8"
						linebreakL="true"
						linebreakM="true"
						linebreakS="true" />
				</layoutData>
			</Image>
			<VBox>
				<Text text="{1/FirstName} {1/LastName}" class="nameTitle" />
				<Text text="{1/Description}" />
			</VBox>
			<Image src="{2/ContactPicUrl}" width="100%">
				<layoutData>
					<l:GridData
						span="L3 M3 S8"
						linebreakL="true"
						linebreakM="true"
						linebreakS="true" />
				</layoutData>
			</Image>
			<VBox>
				<Text text="{2/FirstName} {2/LastName}" class="nameTitle" />
				<Text text="{2/Description}" />
			</VBox>
		</l:content>
	</l:Grid>
</mvc:View>