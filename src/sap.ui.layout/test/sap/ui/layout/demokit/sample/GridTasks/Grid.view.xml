<mvc:View
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:Grid defaultSpan="L3 M4 S6" class="sapUiSmallMarginTop">
		<l:content>
			<StandardListItem
				title="Active"
				info="Jobs in process"
				infoState="Success"
				icon="sap-icon://status-in-process">
				<layoutData>
					<l:GridData span="L12 M12 S12" />
				</layoutData>
			</StandardListItem>
			<StandardListItem
				title="Job 15"
				description="Payroll" />
			<StandardListItem
				title="Job 62"
				description="Archive" />
			<StandardListItem
				title="Inactive"
				info="Jobs not started"
				infoState="None"
				icon="sap-icon://status-inactive">
				<layoutData>
					<l:GridData span="L12 M12 S12" linebreakL="true" linebreakM="true" linebreakS="true" />
				</layoutData>
			</StandardListItem>
			<StandardListItem
				title="Job 11"
				description="Dunning B" />
			<StandardListItem
				title="Job 44"
				description="MRP" />
			<StandardListItem
				title="Job 45"
				description="Analysis 1" />
			<StandardListItem
				title="Failed"
				info="Jobs with errors"
				infoState="Error"
				icon="sap-icon://status-error">
				<layoutData>
					<l:GridData span="L12 M12 S12" linebreakL="true" linebreakM="true" linebreakS="true" />
				</layoutData>
			</StandardListItem>
			<StandardListItem
				title="Job 93"
				description="Log cleanup" />
		</l:content>
	</l:Grid>
</mvc:View>