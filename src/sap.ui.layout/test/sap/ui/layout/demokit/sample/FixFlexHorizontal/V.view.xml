<mvc:View
	controllerName="sap.ui.layout.sample.FixFlexHorizontal.C"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	height="100%">
	<l:FixFlex class="fixFlexHorizontal" vertical="false">
		<l:fixContent>
			<Image
				src="{img>/products/pic1}"
				densityAware="true" />
		</l:fixContent>
		<l:flexContent>
			<Text class="column1" text="This container is flexible and it will adapts its size to fill the remaining size in the FixFlex contol"></Text>
		</l:flexContent>
	</l:FixFlex>
</mvc:View>
