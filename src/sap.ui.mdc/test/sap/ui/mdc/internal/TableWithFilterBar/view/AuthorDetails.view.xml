<mvc:View displayBlock="true"
	xmlns:uxap="sap.uxap"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:vhfb="sap.ui.mdc.filterbar.vh"
	xmlns:mdc="sap.ui.mdc"
	xmlns:mdcf="sap.ui.mdc.field"
	xmlns:mdcl="sap.ui.mdc.link"
	xmlns:mdcv="sap.ui.mdc.valuehelp"
	xmlns:mdcvc="sap.ui.mdc.valuehelp.content"
	xmlns:ui="sap.ui"
	xmlns:variants="sap.ui.fl.variants"
	xmlns="sap.m" controllerName="sap.ui.v4demo.controller.AuthorDetails">
	<uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" alwaysShowContentHeader="false" preserveHeaderStateOnScroll="false" headerContentPinnable="true" isChildPage="true" upperCaseAnchorBar="false">
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
				<uxap:expandedHeading>
					<Title text="Author: {name}" wrapping="true" class="sapUiSmallMarginEnd" />
				</uxap:expandedHeading>
				<uxap:snappedHeading>
					<FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
						<FlexBox wrap="NoWrap" fitContainer="true" alignItems="Center" class="sapUiTinyMarginEnd">
							<Title text="Author: {name}" wrapping="true" class="sapUiTinyMarginEnd" />
						</FlexBox>
					</FlexBox>
				</uxap:snappedHeading>
				<uxap:actions>
					<ToggleButton text="Edit" type="Emphasized" press="onEditButtonPress" visible="{=!${view>/editMode}}" />
					<Button text="Delete" type="Transparent" press="onDeleteButtonPress" visible="{=!${view>/editMode}}" />

					<Button id="save" text="Save" type="Emphasized" visible="{view>/editMode}" press="onSavePress" />
					<Button id="cancel" text="Cancel" visible="{view>/editMode}" press="onCancelPress" />

				</uxap:actions>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>
		<uxap:sections>
			<uxap:ObjectPageSection title="General information">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<uxap:blocks>
							<f:SimpleForm layout="ColumnLayout" editable="{view>/editMode}" labelSpanXL="5" labelSpanL="5" labelSpanM="4" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false" adjustLabelSpan="false">
								<f:content>
									<core:Title text="Author Details"></core:Title>
									<Label text="Name"></Label>
									<mdc:Field id="fName" delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" value="{path: 'name', type: 'sap.ui.model.odata.type.String', constraints: {maxLength: 111}}" editMode="{=${view>/editMode} ? 'Editable' : 'Display'}" multipleLines="false"/>
									<Label text="Date of birth"></Label>
									<mdc:Field id="fDateOfBirth" delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" value="{path:'dateOfBirth', type:'sap.ui.model.odata.type.Date'}" editMode="{=${view>/editMode} ? 'Editable' : 'Display'}" multipleLines="false"/>
									<Label text="Date of death"></Label>
									<mdc:Field id="fDateOfDeath" delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" value="{path:'dateOfDeath', type:'sap.ui.model.odata.type.Date'}" editMode="{=${view>/editMode} ? 'Editable' : 'Display'}" multipleLines="false"/>
									<Label text="Country"></Label>
									<mdc:Field id="fCountry" delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" value="{path: 'countryOfOrigin_code', type: 'sap.ui.model.odata.type.String', constraints: {maxLength: 3}}" display="ValueDescription" editMode="{=${view>/editMode} ? 'Editable' : 'Display'}" multipleLines="false" fieldHelp="IOFFVHCountry">
										<mdc:dependents>
											<mdc:ValueHelp id="IOFFVHCountry" delegate="{name: 'sap/ui/v4demo/delegate/ValueHelp.delegate', payload: {}}">
												<mdc:typeahead>
													<mdcv:Popover >
														<mdcvc:MTable filterFields="$search" keyPath="code"	descriptionPath="descr">
															<Table items="{path: '/Countries'}" width="30rem" mode="SingleSelectMaster">
																<columns>
																	<Column>
																		<Label text="Country"/>
																	</Column>
																	<Column>
																		<Label text="Name"/>
																	</Column>
																</columns>
																<items>
																	<ColumnListItem type="Active">
																		<Text text="{code}"/>
																		<Text text="{descr}"/>
																	</ColumnListItem>
																</items>
															</Table>
														</mdcvc:MTable>
													</mdcv:Popover >
												</mdc:typeahead>
												<mdc:dialog>
													<mdcv:Dialog title="Countries">
														<mdcvc:MTable filterFields="$search" keyPath="code"	descriptionPath="descr">
															<Table items="{path: '/Countries'}" width="30rem" mode="SingleSelectLeft">
																<columns>
																	<Column>
																		<Label text="Country"/>
																	</Column>
																	<Column>
																		<Label text="Name"/>
																	</Column>
																</columns>
																<items>
																	<ColumnListItem type="Active">
																		<Text text="{code}"/>
																		<Text text="{descr}"/>
																	</ColumnListItem>
																</items>
															</Table>
														</mdcvc:MTable>
													</mdcv:Dialog >
												</mdc:dialog>
											</mdc:ValueHelp>
										</mdc:dependents>
									</mdc:Field>
									<Label text="Region"></Label>
									<mdc:Field id="fRegion" delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" value="{path: 'regionOfOrigin_code', type: 'sap.ui.model.odata.type.String', constraints: {maxLength: 3}}" additionalValue="{regionOfOrigin/text}" display="ValueDescription" editMode="{=${view>/editMode} ? 'Editable' : 'Display'}" multipleLines="false" fieldHelp="IOFFVHRegion">
										<mdc:dependents>
											<mdc:ValueHelp id="IOFFVHRegion" delegate="{name: 'sap/ui/v4demo/delegate/FieldInOutValueHelp.delegate',
 												payload: {
													inParameters: [{contentId:'container-v4demo---authordetails--regions', sourceFieldId:'container-v4demo---authordetails--fCountry', target:'country_code'},
																	{contentId:'container-v4demo---authordetails--regionsTypeAhead', sourceFieldId:'container-v4demo---authordetails--fCountry', target:'country_code'}],
													outParameters: [{source: 'country_code', targetFieldId: 'container-v4demo---authordetails--fCountry', mode:'Always'}],
													payloadInfos: [{contentId:'container-v4demo---authordetails--regions', path:'country_code'},
										   							{contentId:'container-v4demo---authordetails--regionsTypeAhead', path:'country_code'}]
												}}">
												<!-- <mdc:inParameters>
													<mdcf:InParameter id="IOFFVHRegion-In-Country" value="{countryOfOrigin_code}" helpPath="country_code" />
												</mdc:inParameters>
												<mdc:outParameters>
													<mdcf:OutParameter id="IOFFVHRegion-Out-Country" value="{countryOfOrigin_code}" helpPath="country_code" />
												</mdc:outParameters> -->
												<mdc:typeahead>
													<mdcv:Popover>
														<mdcvc:MTable id="regionsTypeAhead" keyPath="code" descriptionPath="text" filterFields="$search">
															<Table items="{path: '/Regions', length: 10}" width="30rem" mode="SingleSelectMaster">
																<columns>
																	<Column>
																		<Label text="Region"/>
																	</Column>
																	<Column>
																		<Label text="Name"/>
																	</Column>
																	<Column>
																		<Label text="Country"/>
																	</Column>
																</columns>
																<items>
																	<ColumnListItem type="Active">
																		<Text text="{code}"/>
																		<Text text="{text}"/>
																		<Text text="{country_code}"/>
																	</ColumnListItem>
																</items>
															</Table>
														</mdcvc:MTable>
													</mdcv:Popover>
												</mdc:typeahead>
												<mdc:dialog>
													<mdcv:Dialog title="Regions">
														<mdcvc:MTable id="regions" keyPath="code" descriptionPath="text" filterFields="$search">
															<mdcvc:filterBar>
																<vhfb:FilterBar liveMode="false" delegate="{name: 'delegates/GenericVhFilterBarDelegate', payload: {collectionName: ''}}" >
																	<mdc:FilterField delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" id="VHFFBTextFFCountry"
																		label="Country"
																		editMode="Editable"
																		display="ValueDescription"
																		dataType="sap.ui.model.type.String"
																		width="100%"
																		conditions="{$filters>/conditions/country_code}"
																		operators="EQ,NE"
																		valueState="{ path: '$filters>/fieldPath/country_code/valueState'}"
																		valueStateText="{ path:'$filters>/fieldPath/country_code/valueStateText'}"
																		fieldHelp="IOFFVHCountry">
																	</mdc:FilterField>
																</vhfb:FilterBar>
															</mdcvc:filterBar>

															<Table items="{path: '/Regions'}" width="100%" growing="true" growingScrollToLoad="true" growingThreshold="20" mode="SingleSelectLeft">
																<columns>
																	<Column>
																		<Label text="Region"/>
																	</Column>
																	<Column>
																		<Label text="Name"/>
																	</Column>
																	<Column>
																		<Label text="Country"/>
																	</Column>
																</columns>
																<items>
																	<ColumnListItem type="Active">
																		<Text text="{code}"/>
																		<Text text="{text}"/>
																		<Text text="{country_code}"/>
																	</ColumnListItem>
																</items>
															</Table>
														</mdcvc:MTable>
													</mdcv:Dialog>
												</mdc:dialog>
											</mdc:ValueHelp>
										</mdc:dependents>
									</mdc:Field>
									<Label text="City"></Label>
									<mdc:Field id="fCity" delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" value="{path: 'cityOfOrigin_city', type: 'sap.ui.model.odata.type.String', constraints: {maxLength: 3}}" additionalValue="{cityOfOrigin/text}" display="ValueDescription"  editMode="{=${view>/editMode} ? 'Editable' : 'Display'}" multipleLines="false" fieldHelp="IOFFVHCity">
										<mdc:dependents>
											<mdc:ValueHelp id="IOFFVHCity" delegate="{name: 'sap/ui/v4demo/delegate/FieldInOutValueHelp.delegate',
 												payload: {
													inParameters: [{contentId:'container-v4demo---authordetails--cities', sourceFieldId:'container-v4demo---authordetails--fCountry', target:'country_code'},
																	{contentId:'container-v4demo---authordetails--cities', sourceFieldId:'container-v4demo---authordetails--fRegion', target:'region_code'},
																	{contentId:'container-v4demo---authordetails--citiesTypeAhead', sourceFieldId:'container-v4demo---authordetails--fCountry', target:'country_code'},
																	{contentId:'container-v4demo---authordetails--citiesTypeAhead', sourceFieldId:'container-v4demo---authordetails--fRegion', target:'region_code'}],
													outParameters: [{source: 'country_code', targetFieldId: 'container-v4demo---authordetails--fCountry', mode:'Always'},
																	{source: 'region_code', targetFieldId: 'container-v4demo---authordetails--fRegion', mode:'Always'}],
													payloadInfos: [{contentId:'container-v4demo---authordetails--cities', path:['country_code', 'region_code']},
										   							{contentId:'container-v4demo---authordetails--citiesTypeAhead', path:['country_code', 'region_code']}]
												}}">
												<!-- <mdc:inParameters>
													<mdcf:InParameter id="IOFFVHCity_In-Country" value="{countryOfOrigin_code}" helpPath="country_code" />
													<mdcf:InParameter id="IOFFVHCity_In-Region" value="{regionOfOrigin_code}" helpPath="region_code" />
												</mdc:inParameters>
												<mdc:outParameters>
													<mdcf:OutParameter id="IOFFVHCity_Out-Country" value="{countryOfOrigin_code}" helpPath="country_code" mode="Always" />
													<mdcf:OutParameter id="IOFFVHCity_Out-Region" value="{regionOfOrigin_code}" helpPath="region_code" mode="Always" />
												</mdc:outParameters> -->
												<mdc:typeahead>
													<mdcv:Popover>
													<mdcvc:MTable id="citiesTypeAhead" keyPath="city" descriptionPath="text" filterFields="$search">
														<Table items="{path: '/Cities', length: 10}" width="30rem" mode="SingleSelectMaster">
															<columns>
																<Column>
																	<Label text="City"/>
																</Column>
																<Column>
																	<Label text="Name"/>
																</Column>
																<Column>
																	<Label text="Country"/>
																</Column>
																<Column>
																	<Label text="Region"/>
																</Column>
															</columns>
															<items>
																<ColumnListItem type="Active">
																	<Text text="{city}"/>
																	<Text text="{text}"/>
																	<Text text="{country_code}"/>
																	<Text text="{region_code}"/>
																</ColumnListItem>
															</items>
														</Table>
													</mdcvc:MTable>
													</mdcv:Popover>
												</mdc:typeahead>
												<mdc:dialog>
													<mdcv:Dialog title= "Cities">
													<mdcvc:MTable id="cities" keyPath="city" descriptionPath="text" filterFields="$search">
														<mdcvc:filterBar>
															<vhfb:FilterBar liveMode="false" delegate="{name: 'delegates/GenericVhFilterBarDelegate', payload: {collectionName: ''}}" >
																<mdc:FilterField delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" id="VHFFBTextFFCountry2" label="Country" editMode="Editable" display="ValueDescription" dataType="sap.ui.model.type.String" width="100%" conditions="{$filters>/conditions/country_code}" operators="EQ,NE" />
																<mdc:FilterField delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" id="VHFFBTextFFRegion2" label="Region" editMode="Editable" display="ValueDescription" dataType="sap.ui.model.type.String" width="100%" conditions="{$filters>/conditions/region_code}" />
															</vhfb:FilterBar>
														</mdcvc:filterBar>
														<Table items="{path: '/Cities'}" width="100%" growing="true" growingScrollToLoad="true" growingThreshold="20" mode="SingleSelectLeft">
															<columns>
																<Column>
																	<Label text="City"/>
																</Column>
																<Column>
																	<Label text="Name"/>
																</Column>
																<Column>
																	<Label text="Country"/>
																</Column>
																<Column>
																	<Label text="Region"/>
																</Column>
															</columns>
															<items>
																<ColumnListItem type="Active">
																	<Text text="{city}"/>
																	<Text text="{text}"/>
																	<Text text="{country_code}"/>
																	<Text text="{region_code}"/>
																</ColumnListItem>
															</items>
														</Table>
													</mdcvc:MTable>
													</mdcv:Dialog>
												</mdc:dialog>
											</mdc:ValueHelp>
										</mdc:dependents>
									</mdc:Field>

									<Label text="Genres"></Label>
									<mdc:MultiValueField id="fGenres" items="{genres}" editMode="{=${view>/editMode} ? 'Editable' : 'Display'}" change="onMultiChange" display= "Description" fieldHelp="FHAuthorGenre">
										<mdcf:MultiValueFieldItem key="{path: 'genre/code', type: 'sap.ui.model.odata.type.String'}" description="{genre_label}" />
										<mdc:dependents>
											<mdc:ValueHelp id="FHAuthorGenre" delegate="{name: 'sap/ui/v4demo/delegate/ValueHelp.delegate', payload: {}}">
												<mdc:typeahead>
													<mdcv:Popover title="Genre">
														<mdcvc:MTable keyPath="code" descriptionPath="title" filterFields="$search">
															<Table id="mTable1_genre" items='{path : "/Genres", length: 10}' width="30rem" mode="SingleSelectMaster">
																<columns>
																	<Column width="10rem">
																		<header>
																			<Text text="Code"/>
																		</header>
																	</Column>
																	<Column>
																		<header>
																			<Text text="Title"/>
																		</header>
																	</Column>
																	<Column>
																		<header>
																			<Text text="Classification"/>
																		</header>
																	</Column>
																</columns>
																<items>
																	<ColumnListItem type="Active">
																		<cells>
																			<Text text="{code}"/>
																			<Text text="{title}"/>
																			<Text text="{classification_code}"/>
																		</cells>
																	</ColumnListItem>
																</items>
															</Table>
														</mdcvc:MTable>
													</mdcv:Popover>
												</mdc:typeahead>
												<mdc:dialog>
													<mdcv:Dialog title="Genre">
														<mdcvc:MTable keyPath="code" descriptionPath="title" filterFields="$search">
															<Table id="mTable2_genre" items='{path : "/Genres"}' width="100%" growing="true" growingScrollToLoad="true" growingThreshold="20" mode="MultiSelect">
																<columns>
																	<Column width="10rem">
																		<header>
																			<Text text="Code" />
																		</header>
																	</Column>
																	<Column>
																		<header>
																			<Text text="Title" />
																		</header>
																	</Column>
																	<Column>
																		<header>
																			<Text text="Classification" />
																		</header>
																	</Column>
																</columns>
																<items>
																	<ColumnListItem type="Active">
																		<cells>
																			<Text text="{code}" />
																			<Text text="{title}" />
																			<Text text="{classification_code}" />
																		</cells>
																	</ColumnListItem>
																</items>
															</Table>
														</mdcvc:MTable>
													</mdcv:Dialog>
												</mdc:dialog>
											</mdc:ValueHelp>
										</mdc:dependents>
									</mdc:MultiValueField>

								</f:content>
							</f:SimpleForm>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Genres">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<uxap:blocks>
							<List growing="true" growingScrollToLoad="true" growingThreshold="20" items="{path: 'genres', templateShareable: false}">
								<CustomListItem>
									<mdc:Field id="F_genre_label" delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" value="{path: 'ID', type: 'sap.ui.model.odata.type.Int32', constraints: {nullable: false}}" additionalValue="{genre_label}" editMode="Display" display="Description" multipleLines="false"/>
								</CustomListItem>
							</List>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
	</uxap:ObjectPageLayout>
</mvc:View>
