<mvc:View
		xmlns="sap.m"
		xmlns:mdc="sap.ui.mdc"
		xmlns:mdcf="sap.ui.mdc.field"
		xmlns:vhfb="sap.ui.mdc.filterbar.vh"
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:form="sap.ui.layout.form"
		controllerName="sap.ui.mdc.sample.ValueHelp.Controller">
	<OverflowToolbar>
		<Title text="different ValueHelps"></Title>
		<ToolbarSpacer/>
	</OverflowToolbar>

	<form:SimpleForm id="Form1" layout="ColumnLayout" >
		<core:Title text="Field/FilterField with FieldHelps"></core:Title>

		<Label text="Field List" />
		<mdc:Field id="F1" value="{path: 'author_ID', type: 'sap.ui.model.odata.type.Int32'}" fieldHelp="FH1" display="DescriptionValue" editMode="Editable" delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}">
			<mdc:dependents>
				<mdcf:ListFieldHelp
					id="FH1"
					items="{path: '/Authors'}" >
					<core:ListItem key="{ID}" text="{name}"/>
				</mdcf:ListFieldHelp>
			</mdc:dependents>
		</mdc:Field>

		<Label text="Field List with additionalText (select-like)" />
		<mdc:Field id="F2" value="{path: 'author_ID', type: 'sap.ui.model.odata.type.Int32'}" fieldHelp="FH2" display="DescriptionValue" editMode="Editable" delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}">
			<mdc:dependents>
				<mdcf:ListFieldHelp
					id="FH2"
					filterList="false"
					useFirstMatch="true"
					items="{path: '/Authors'}" >
					<core:ListItem key="{ID}" text="{name}" additionalText="{ID}"/>
				</mdcf:ListFieldHelp>
			</mdc:dependents>
		</mdc:Field>

		<Label text="Field (Combobox)" />
		<mdc:Field id="F3" value="{path: 'author_ID', type: 'sap.ui.model.odata.type.Int32'}" fieldHelp="FH3" display="DescriptionValue" editMode="Editable" delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}">
			<mdc:dependents>
				<mdcf:FieldValueHelp
					id="FH3"
					noDialog="true"
					filterFields="$search"
					keyPath="ID"
					descriptionPath="name"
					delegate="{name: 'sap/ui/mdc/odata/v4/FieldValueHelpDelegate', payload: {}}">
					<mdcf:content>
						<mdcf:FieldValueHelpMTableWrapper>
							<mdcf:table>
								<Table items='{path : "/Authors"}' width="30rem" growing="true" growingScrollToLoad="true" growingThreshold="20">
									<columns>
										<Column width="5rem">
											<header>
												<Text text="ID" />
											</header>
										</Column>
										<Column>
											<header>
												<Text text="Name" />
											</header>
										</Column>
										<Column width="9rem">
											<header>
												<Text text="Date of Birth" />
											</header>
										</Column>
									</columns>
									<items>
										<ColumnListItem type="Active">
											<cells>
												<Text text="{ID}" />
												<Text text="{name}" />
												<Text text="{dateOfBirth}" />
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</mdcf:table>
						</mdcf:FieldValueHelpMTableWrapper>
					</mdcf:content>
				</mdcf:FieldValueHelp>
			</mdc:dependents>
		</mdc:Field>

		<Label text="Field ValueHelp using mTableWrapper" />
		<mdc:Field id="F4" value="{path: 'author_ID', type: 'sap.ui.model.odata.type.Int32'}" fieldHelp="FH4" display="DescriptionValue" editMode="Editable" delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}">
			<mdc:dependents>
				<mdcf:FieldValueHelp
					id="FH4"
					noDialog="false"
					title="Author"
					filterFields="$search"
					keyPath="ID"
					descriptionPath="name"
					delegate="{name: 'sap/ui/mdc/odata/v4/FieldValueHelpDelegate', payload: {}}">
					<mdcf:filterBar>
						<vhfb:FilterBar liveMode="false" delegate="{name: 'delegates/GenericVhFilterBarDelegate', payload: {}}" >
							<vhfb:filterItems>
								<mdc:FilterField delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" label="ID" dataType="Edm.Int32"  conditions="{$filters>/conditions/ID}"/>
								<mdc:FilterField delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" label="Name" conditions="{$filters>/conditions/name}"/>
								<mdc:FilterField delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" label="Date of Birth" dataType="Edm.Date" maxConditions="-1" conditions="{$filters>/conditions/dateOfBirth}" fieldHelp="FH2-2">
									<mdc:dependents>
										<mdcf:FieldValueHelp id="FH2-2" title="Date of Birth" showConditionPanel="true" delegate="{name: 'sap/ui/mdc/odata/v4/FieldValueHelpDelegate', payload: {}}" />
									</mdc:dependents>
								</mdc:FilterField>
							</vhfb:filterItems>
						</vhfb:FilterBar>
					</mdcf:filterBar>
					<mdcf:content>
						<mdcf:FieldValueHelpMTableWrapper>
							<mdcf:table>
								<Table items='{path : "/Authors"}' width="30rem" growing="true" growingScrollToLoad="true" growingThreshold="20">
									<columns>
										<Column width="5rem">
											<header>
												<Text text="ID" />
											</header>
										</Column>
										<Column>
											<header>
												<Text text="Name" />
											</header>
										</Column>
										<Column width="9rem">
											<header>
												<Text text="Date of Birth" />
											</header>
										</Column>
									</columns>
									<items>
										<ColumnListItem type="Active">
											<cells>
												<Text text="{ID}" />
												<Text text="{name}" />
												<Text text="{dateOfBirth}" />
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</mdcf:table>
						</mdcf:FieldValueHelpMTableWrapper>
					</mdcf:content>
				</mdcf:FieldValueHelp>
			</mdc:dependents>
		</mdc:Field>

		<Label text="Field ValueHelp using m/mdcTableWrapper" />
		<mdc:Field id="F5" fieldHelp="FH5" value="{path: 'author_ID', type: 'sap.ui.model.odata.type.Int32'}" display="DescriptionValue" editMode="Editable" delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}">
			<mdc:dependents>
				<mdcf:FieldValueHelp
					filterFields="$search"
					title="Author"
					id="FH5"
					noDialog="false"
					keyPath="ID"
					descriptionPath="name"
					delegate="{name: 'sap/ui/mdc/odata/v4/FieldValueHelpDelegate', payload: {}}">
					<mdcf:filterBar>
						<vhfb:FilterBar liveMode="false" delegate="{name: 'delegates/GenericVhFilterBarDelegate', payload: {}}" >
							<vhfb:filterItems>
								<mdc:FilterField delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" label="ID" dataType="Edm.Int32" conditions="{$filters>/conditions/ID}"/>
								<mdc:FilterField delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" label="Name" conditions="{$filters>/conditions/name}"/>
							</vhfb:filterItems>
						</vhfb:FilterBar>
					</mdcf:filterBar>
					<mdcf:suggestContent>
						<mdcf:FieldValueHelpMTableWrapper>
							<mdcf:table>
								<Table items='{path : "/Authors"}' width="30rem" growing="true" growingScrollToLoad="true" growingThreshold="20">
									<columns>
										<Column width="5rem">
											<header>
												<Text text="ID" />
											</header>
										</Column>
										<Column>
											<header>
												<Text text="Name" />
											</header>
										</Column>
										<Column width="9rem">
											<header>
												<Text text="Date of Birth" />
											</header>
										</Column>
									</columns>
									<items>
										<ColumnListItem type="Active">
											<cells>
												<Text text="{ID}" />
												<Text text="{name}" />
												<Text text="{dateOfBirth}" />
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</mdcf:table>
						</mdcf:FieldValueHelpMTableWrapper>
					</mdcf:suggestContent>
					<mdcf:dialogContent>
						<mdcf:FieldValueHelpMdcTableWrapper>
							<mdcf:table>
								<mdc:Table autoBindOnInit="true" id="FF5-gridtable" width="30rem" selectionMode="Single" p13nMode="Column,Sort"
									delegate="{name: 'sap/ui/mdc/sample/ValueHelp/GridTable.delegate', payload: {collectionName: 'Authors'}}"
									threshold="50">

									<mdc:columns>
										<mdc:table.Column id="id" header="ID" dataProperty="ID" initialIndex="1">
											<mdc:Field delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" value="{ID}" editMode="Display"/>
										</mdc:table.Column>
										<mdc:table.Column id="name" header="Name" dataProperty="name" initialIndex="2">
											<mdc:Field delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" value="{name}" editMode="Display"/>
										</mdc:table.Column>
										<mdc:table.Column id="dateofBirth" header="Date of Birth" dataProperty="descr" initialIndex="2">
											<mdc:Field delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" value="{dateOfBirth}" editMode="Display"/>
										</mdc:table.Column>
									</mdc:columns>
									<mdc:type>
										<mdc:table.GridTableType rowCountMode="Auto"/>
									</mdc:type>
								</mdc:Table>
							</mdcf:table>
						</mdcf:FieldValueHelpMdcTableWrapper>
					</mdcf:dialogContent>
				</mdcf:FieldValueHelp>
			</mdc:dependents>
		</mdc:Field>

		<Label text="FilterField (multi combo)"></Label>
		<mdc:FilterField
			id="F6"
			conditions="{cm>/conditions/title}"
			display="ValueDescription"
			maxConditions="-1"
			fieldHelp="FVH6"
			delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}">
			<mdc:dependents>
				<mdcf:FieldValueHelp
					id="FVH6"
					noDialog="true"
					title="Book Title"
					filterFields="*ID*"
					keyPath="ID"
					descriptionPath="title"
					showConditionPanel="true">
					<mdcf:suggestContent>
						<mdcf:FieldValueHelpMTableWrapper>
							<Table items='{path : "/Books"}' width="40rem" growing="true" growingScrollToLoad="true" growingThreshold="20">
								<columns>
									<Column>
										<header>
											<Text text="ID" />
										</header>
									</Column>
									<Column>
										<header>
											<Text text="Title" />
										</header>
									</Column>
								</columns>
								<items>
									<ColumnListItem type="Active">
										<cells>
											<Text text="{ID}" />
											<Text text="{title}" />
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</mdcf:FieldValueHelpMTableWrapper>
					</mdcf:suggestContent>
				</mdcf:FieldValueHelp>
			</mdc:dependents>
		</mdc:FilterField>

		<Label text="FilterField (multi with VH and single mTableW)"></Label>
		<mdc:FilterField
			id="F7"
			conditions="{cm>/conditions/title}"
			display="ValueDescription"
			maxConditions="-1"
			fieldHelp="FVH7"
			delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}">
			<mdc:dependents>
				<mdcf:FieldValueHelp
					id="FVH7"
					title="Book Title"
					filterFields="*ID*"
					keyPath="ID"
					descriptionPath="title"
					showConditionPanel="true">
					<mdcf:FieldValueHelpMTableWrapper id="FVH1-W">
						<Table items='{path : "/Books"}' width="40rem" growing="true" growingScrollToLoad="true" growingThreshold="20">
							<columns>
								<Column>
									<header>
										<Text text="ID" />
									</header>
								</Column>
								<Column>
									<header>
										<Text text="Title" />
									</header>
								</Column>
							</columns>
							<items>
								<ColumnListItem type="Active">
									<cells>
										<Text text="{ID}" />
										<Text text="{title}" />
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</mdcf:FieldValueHelpMTableWrapper>
				</mdcf:FieldValueHelp>
			</mdc:dependents>
		</mdc:FilterField>

		<Label text="FilterField (multi with VH with mTable and mdcTable)"></Label>
		<mdc:FilterField
			id="F8"
			conditions="{cm>/conditions/title}"
			display="ValueDescription"
			maxConditions="-1"
			fieldHelp="FVH8"
			delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}">
			<mdc:dependents>
				<mdcf:FieldValueHelp
					filterFields="$search"
					title="Book Title"
					id="FVH8"
					noDialog="false"
					keyPath="ID"
					descriptionPath="title"
					delegate="{name: 'sap/ui/mdc/odata/v4/FieldValueHelpDelegate', payload: {}}">
					<mdcf:filterBar>
						<vhfb:FilterBar liveMode="false" delegate="{name: 'delegates/GenericVhFilterBarDelegate', payload: {}}" >
							<vhfb:filterItems>
								<mdc:FilterField delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" label="ID" dataType="Edm.Int32" conditions="{$filters>/conditions/ID}"/>
								<mdc:FilterField delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" label="Name" conditions="{$filters>/conditions/name}"/>
							</vhfb:filterItems>
						</vhfb:FilterBar>
					</mdcf:filterBar>
					<mdcf:suggestContent>
						<mdcf:FieldValueHelpMTableWrapper>
							<mdcf:table>
								<Table items='{path : "/Books"}' width="30rem" growing="true" growingScrollToLoad="true" growingThreshold="20">
									<columns>
										<Column width="5rem">
											<header>
												<Text text="ID" />
											</header>
										</Column>
										<Column>
											<header>
												<Text text="Title" />
											</header>
										</Column>
									</columns>
									<items>
										<ColumnListItem type="Active">
											<cells>
												<Text text="{ID}" />
												<Text text="{title}" />
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</mdcf:table>
						</mdcf:FieldValueHelpMTableWrapper>
					</mdcf:suggestContent>
					<mdcf:dialogContent>
						<mdcf:FieldValueHelpMdcTableWrapper>
							<mdcf:table>
								<mdc:Table autoBindOnInit="true" id="FF8-gridtable" width="30rem" selectionMode="Single" p13nMode="Column,Sort"
									delegate="{name: 'sap/ui/mdc/sample/ValueHelp/GridTable.delegate', payload: {collectionName: 'Books'}}"
									threshold="50">

									<mdc:columns>
										<mdc:table.Column id="id8" header="ID" dataProperty="ID" initialIndex="1">
											<mdc:Field delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" value="{ID}" editMode="Display"/>
										</mdc:table.Column>
										<mdc:table.Column id="name8" header="Title" dataProperty="name" initialIndex="2">
											<mdc:Field delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" value="{title}" editMode="Display"/>
										</mdc:table.Column>
									</mdc:columns>
									<mdc:type>
										<mdc:table.GridTableType rowCountMode="Auto"/>
									</mdc:type>
								</mdc:Table>
							</mdcf:table>
						</mdcf:FieldValueHelpMdcTableWrapper>
					</mdcf:dialogContent>
				</mdcf:FieldValueHelp>
			</mdc:dependents>
		</mdc:FilterField>


	</form:SimpleForm>
</mvc:View>
