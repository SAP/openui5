<core:View height="100%" controllerName="appUnderTestAdditionalContent.Test" xmlns:m="sap.m" xmlns:mdcField="sap.ui.mdc.field" xmlns:mdc="sap.ui.mdc" xmlns:l="sap.ui.layout" xmlns:mdcLink="sap.ui.mdc.link" xmlns:core="sap.ui.core">
	<m:App id="MyApp" defaultTransitionName="show">
		<m:ScrollContainer height="100%" width="100%" horizontal="true" vertical="true" focusable="true">
			<l:VerticalLayout class="sapUiContentPadding" width="100%">

				<m:Table id="idTable" items="{path: '/ProductCollection'}">
					<m:columns>
						<m:Column>
							<m:Text text="{/#Product/ProductId/@sap:label}" />
						</m:Column>
					</m:columns>
					<m:items>
						<m:ColumnListItem>
							<m:cells>
								<mdc:Field value="{ProductId}" editMode="Display">
									<mdc:fieldInfo>
										<mdc:Link
											delegate='{ name: "appUnderTestAdditionalContent/TestDelegate" }'>
										</mdc:Link>
									</mdc:fieldInfo>
								</mdc:Field>
							</m:cells>
						</m:ColumnListItem>
					</m:items>
				</m:Table>
			</l:VerticalLayout>
		</m:ScrollContainer>
	</m:App>
</core:View>
