<mvc:View displayBlock="true"
	xmlns:uxap="sap.uxap"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:mdc="sap.ui.mdc"
	xmlns:mdcf="sap.ui.mdc.field"
	xmlns:mdcl="sap.ui.mdc.link"
	xmlns:ui="sap.ui"
	xmlns:variants="sap.ui.fl.variants"
	xmlns="sap.m" controllerName="sap.ui.v4demo.controller.OrderItemDetails">
	<uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" alwaysShowContentHeader="false" preserveHeaderStateOnScroll="false" headerContentPinnable="true" isChildPage="true" upperCaseAnchorBar="false">
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
				<uxap:expandedHeading>
					<Title text="Order: {ID}" wrapping="true" class="sapUiSmallMarginEnd" />
				</uxap:expandedHeading>
				<uxap:snappedHeading>
					<FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
						<FlexBox wrap="NoWrap" fitContainer="true" alignItems="Center" class="sapUiTinyMarginEnd">
							<Title text="Order: {ID}" wrapping="true" class="sapUiTinyMarginEnd" />
						</FlexBox>
					</FlexBox>
				</uxap:snappedHeading>
				<uxap:actions>
					<ToggleButton text="Edit" type="Emphasized" press="onEditButtonPress" visible="{=!${view>/editMode}}" />
					<Button text="Delete" type="Transparent" press="onDeleteButtonPress" visible="{=!${view>/editMode}}" />
					<Button id="save" text="Save" type="Emphasized" visible="{view>/editMode}" press="onSavePress" />
					<Button id="cancel" text="Cancel" visible="{view>/editMode}" press="onCancelPress" />
				</uxap:actions>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>
		<uxap:sections>
			<uxap:ObjectPageSection>
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<uxap:blocks>
							<f:SimpleForm layout="ColumnLayout" editable="true" labelSpanXL="5" labelSpanL="5" labelSpanM="4" columnsXL="3" columnsL="2" columnsM="1" singleContainerFullSize="false" adjustLabelSpan="false">
								<core:Title text="Order Item Details"></core:Title>

								<Label text="ID"></Label>
								<mdc:Field delegate="{name: 'sap/ui/mdc/odata/v4/FieldBaseDelegate', payload: {}}" value="{ID}" editMode="{=${view>/editMode} ? 'Editable' : 'Display'}"></mdc:Field>

								<Label text="amount"></Label>
								<mdc:Field delegate="{name: 'sap/ui/mdc/odata/v4/FieldBaseDelegate', payload: {}}" value="{amount}" editMode="{=${view>/editMode} ? 'Editable' : 'Display'}"></mdc:Field>

								<Label text="netAmount"></Label>
								<mdc:Field delegate="{name: 'sap/ui/mdc/odata/v4/FieldBaseDelegate', payload: {}}" value="{netAmount}" editMode="{=${view>/editMode} ? 'Editable' : 'Display'}"></mdc:Field>

								<Label text="Book"></Label>
								<mdc:Field delegate="{name: 'sap/ui/mdc/odata/v4/FieldBaseDelegate', payload: {}}" value="{book_ID}" editMode="{=${view>/editMode} ? 'Editable' : 'Display'}" fieldHelp="FH4" display="Description">
									<mdc:dependents>
										<mdcf:FieldValueHelp title="Book Value Help" id="FH4" noDialog="false" keyPath="ID" descriptionPath="title" delegate="{name: 'sap/ui/mdc/odata/v4/FieldValueHelpDelegate', payload: {}}">
											<mdcf:content>
												<mdcf:FieldValueHelpMTableWrapper>
													<mdcf:table>
														<Table items='{path : "/Books"}' width="30rem">
															<columns>
																<Column width="5rem">
																	<header>
																		<Text text="Title" />
																	</header>
																</Column>
															</columns>
															<items>
																<ColumnListItem type="Active">
																	<cells>
																		<Text text="{title}" />
																	</cells>
																</ColumnListItem>
															</items>
														</Table>
													</mdcf:table>
												</mdcf:FieldValueHelpMTableWrapper>
											</mdcf:content>
										</mdcf:FieldValueHelp>
									</mdc:dependents>
								</mdc:Field>
								<Label text="Parent ID"></Label>
								<mdc:Field delegate="{name: 'sap/ui/mdc/odata/v4/FieldBaseDelegate', payload: {}}" value="{parent_ID}" editMode="{=${view>/editMode} ? 'Editable' : 'Display'}" fieldHelp="FH5">
									<mdc:dependents>
										<mdcf:FieldValueHelp title="Parent Value Help" id="FH5" noDialog="false" keyPath="ID" delegate="{name: 'sap/ui/mdc/odata/v4/FieldValueHelpDelegate', payload: {}}">
											<mdcf:content>
												<mdcf:FieldValueHelpMTableWrapper>
													<mdcf:table>
														<Table items='{path : "/Orders"}' width="30rem">
															<columns>
																<Column width="5rem">
																	<header>
																		<Text text="Title" />
																	</header>
																</Column>
															</columns>
															<items>
																<ColumnListItem type="Active">
																	<cells>
																		<Text text="{ID}" />
																	</cells>
																</ColumnListItem>
															</items>
														</Table>
													</mdcf:table>
												</mdcf:FieldValueHelpMTableWrapper>
											</mdcf:content>
										</mdcf:FieldValueHelp>
									</mdc:dependents>
								</mdc:Field>
							</f:SimpleForm>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>



		</uxap:sections>

	</uxap:ObjectPageLayout>
</mvc:View>
