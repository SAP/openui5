<layout:VerticalLayout id="notSuspendedLayout"
	xmlns:layout="sap.ui.layout"
	width="100%"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:f2="sap.f"
	xmlns:mdc="sap.ui.mdc"
	xmlns:table="sap.ui.mdc"

	xmlns:vhfb="sap.ui.mdc.filterbar.vh"
	xmlns:mdcv="sap.ui.mdc.valuehelp"
	xmlns:mdcvc="sap.ui.mdc.valuehelp.content"
	xmlns:mdcf="sap.ui.mdc.field"
	xmlns:mdct="sap.ui.mdc.table"
	xmlns:ui="sap.ui"
	xmlns:uit="sap.ui.table"
	xmlns:variants="sap.ui.fl.variants"
	xmlns:types="sap.ui.v4demo.types"
	xmlns:demo="sap.ui.v4demo.controls">

	<Title class="sapUiSmallMarginBottom" level="H3" text="Simple Scenario" />

	<Text text="This scenario covers the following entities: FilterBar, FilterField, ValueHelp, MTable, MDCTable (ResponsiveTableType), ConditionsPanel"/>

	<mdc:FilterBar id="FB0" p13nMode="Value" liveMode="false" delegate="{name: 'delegates/odata/v4/FilterBarDelegate', payload: {collectionName: 'Books'}}">
		<mdc:dependents>
			<mdc:ValueHelp
				id="FB0-FH1-10"
				delegate="{name: 'sap/ui/v4demo/delegate/ValueHelp.delegate', payload: {}}">
				<mdc:typeahead>
					<mdcv:Popover title="Test1">
						<mdcvc:MTable keyPath="ID" descriptionPath="name" filterFields="$search" useAsValueHelp="false">
							<Table items='{path : "/Authors", length: 10}' width="30rem" mode="SingleSelectMaster">
								<columns>
									<Column width="5rem">
										<header>
											<Text text="ID" />
										</header>
									</Column>
									<Column>
										<header>
											<Text text="Name" />
										</header>
									</Column>
								</columns>
								<items>
									<ColumnListItem type="Active">
										<cells>
											<Text text="{ID}" />
											<Text text="{name}" />
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</mdcvc:MTable>
					</mdcv:Popover>
				</mdc:typeahead>
				<mdc:dialog>
					<mdcv:Dialog title="MDC Table with ui.Table">
						<mdcvc:MDCTable id="mdcTableContent1" keyPath="ID" descriptionPath="name" filterFields="$search" group="group1" title="Default Search Template" forceBind="true">
							<mdcvc:filterBar>
								<vhfb:FilterBar id="mdcFilterbar1" liveMode="false" delegate="{name: 'delegates/GenericVhFilterBarDelegate', payload: {}}">
									<vhfb:basicSearchField>
										<mdc:FilterField
											delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}"
											dataType= "Edm.String"
											conditions= "{$filters>/conditions/$search}"
											width="50%"
											maxConditions="1"
											placeholder="Search" />
									</vhfb:basicSearchField>
									<vhfb:filterItems>
										<mdc:FilterField delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" label="Name" conditions="{$filters>/conditions/name}" />
									</vhfb:filterItems>
								</vhfb:FilterBar>
							</mdcvc:filterBar>

								<!-- type="ResponsiveTable" -->
							<mdc:Table autoBindOnInit="false"
								id="mdcTable1"
								width="100%"
								height="100%"
								headerVisible="true"
								selectionMode="{= ${settings>/maxConditions} === -1 ? 'Multi' : 'Single'}"
								p13nMode="Column,Sort"
								delegate="{name: 'sap/ui/v4demo/delegate/GridTable.delegate', payload: {collectionName: 'Authors'}}"
								threshold="50">
								<mdc:type>
									<mdc:table.GridTableType rowCountMode="Auto"/>
								</mdc:type>
								<mdc:columns>
									<mdc:table.Column id="mdcTable1_col_ID" header="ID" dataProperty="ID">
										<Text text="{ID}" />
									</mdc:table.Column>
									<mdc:table.Column id="mdcTable1_col_name" header="Name" dataProperty="name">
										<Text text="{name}" />
									</mdc:table.Column>
									<mdc:table.Column id="mdcTable1_col_dateOfBirth" header="Date of birth" dataProperty="dateOfBirth">
										<Text text="{dateOfBirth}" />
									</mdc:table.Column>
								</mdc:columns>
							</mdc:Table>
						</mdcvc:MDCTable>
						<mdcvc:MDCTable id="mdcTableContent2" keyPath="ID" descriptionPath="name" filterFields="$search" group="group1" title="Search Template 1" forceBind="true">
							<mdcvc:filterBar>
								<vhfb:FilterBar id="mdcFilterbar2" liveMode="false" delegate="{name: 'delegates/GenericVhFilterBarDelegate', payload: {}}">
									<vhfb:basicSearchField>
										<mdc:FilterField
											delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}"
											dataType= "Edm.String"
											conditions= "{$filters>/conditions/$search}"
											width="50%"
											maxConditions="1"
											placeholder="Search" />
									</vhfb:basicSearchField>
									<vhfb:filterItems>
										<mdc:FilterField delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}" label="Country of Origin" conditions="{$filters>/conditions/countryOfOrigin_code}" />
									</vhfb:filterItems>
								</vhfb:FilterBar>
							</mdcvc:filterBar>

								<!-- type="ResponsiveTable" -->
							<mdc:Table autoBindOnInit="false"
								id="mdcTable2"
								width="100%"
								height="100%"
								headerVisible="true"
								selectionMode="{= ${settings>/maxConditions} === -1 ? 'Multi' : 'SingleMaster'}"
								p13nMode="Column,Sort"
								delegate="{name: 'sap/ui/v4demo/delegate/GridTable.delegate', payload: {collectionName: 'Authors'}}"
								threshold="50">
								<mdc:type>
									<mdc:table.GridTableType rowCountMode="Auto"/>
								</mdc:type>
								<mdc:columns>
									<mdc:table.Column id="mdcTable2_col_ID" header="ID" dataProperty="ID">
										<Text text="{ID}" />
									</mdc:table.Column>
									<mdc:table.Column id="mdcTable2_col_name" header="Name" dataProperty="name">
										<Text text="{name}" />
									</mdc:table.Column>
									<mdc:table.Column id="mdcTable2_col_country" header="Country" dataProperty="countryOfOrigin_code">
										<Text text="{countryOfOrigin_code}" />

									</mdc:table.Column>
									<mdc:table.Column id="mdcTable2_col_region" header="Region" dataProperty="regionOfOrigin_code">
										<Text text="{regionOfOrigin_code}" />
									</mdc:table.Column>
									<mdc:table.Column id="mdcTable2_col_city" header="City" dataProperty="cityOfOrigin_city">
										<Text text="{cityOfOrigin_code}" />
									</mdc:table.Column>
								</mdc:columns>
							</mdc:Table>
						</mdcvc:MDCTable>
					</mdcv:Dialog>
				</mdc:dialog>
			</mdc:ValueHelp>

			<mdc:ValueHelp id="FH4_DEFCOND"
								validateInput="false"
								delegate="{name: 'sap/ui/v4demo/delegate/ValueHelp.delegate', payload: {}}">
								<mdc:typeahead>
									<mdcv:Popover title="Title">
										<mdcvc:MTable keyPath="ID" descriptionPath="name" filterFields="$search">
											<Table id="mTable1_2_title" items='{path : "/Authors"}' growing="true" growingScrollToLoad="true" growingThreshold="20" width="50rem" mode="SingleSelectMaster">
												<columns>
													<Column>
														<header>
															<Text text="Name" />
														</header>
													</Column>
												</columns>
												<items>
													<ColumnListItem type="Active">
														<cells>
															<Text text="{name}" />
														</cells>
													</ColumnListItem>
												</items>
											</Table>
										</mdcvc:MTable>
									</mdcv:Popover>
								</mdc:typeahead>
							</mdc:ValueHelp>

		</mdc:dependents>
		<mdc:filterItems>

			<mdc:FilterField delegate="{name: 'delegates/odata/v4/FieldBaseDelegate', payload: {}}"
				id="FB0-FF1-10"
				label="TestField"
				conditions="{$filters>/conditions/author_ID}"
				dataType="Edm.Int32"
				required="false"
				fieldHelp="FB0-FH1-10"
				display="DescriptionValue"
				maxConditions="{settings>/maxConditions}" />
		</mdc:filterItems>
	</mdc:FilterBar>




</layout:VerticalLayout>
