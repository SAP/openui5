<mvc:View
		xmlns="sap.m"
		xmlns:mdc="sap.ui.mdc"
		xmlns:mdcf="sap.ui.mdc.field"
		xmlns:vhfb="sap.ui.mdc.filterbar.vh"
		xmlns:mdcv="sap.ui.mdc.valuehelp"
		xmlns:mdcvc="sap.ui.mdc.valuehelp.content"
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:form="sap.ui.layout.form"
		controllerName="sap.ui.mdc.sample.FieldValueHelp.Controller">
	<OverflowToolbar>
		<Title text="Fields with different ValueHelp"></Title>
		<ToolbarSpacer/>
	</OverflowToolbar>

	<form:SimpleForm layout="ColumnLayout" editable="true">
		<core:Title text="Field"></core:Title>

		<Label text="List" />
		<mdc:Field id="F1" value="{path: 'author_ID', type: 'sap.ui.model.odata.type.Int32'}" valueHelp="VH1" display="DescriptionValue" editMode="Editable" delegate='\{"name": "delegates/odata/v4/FieldBaseDelegate", "payload": \{\}\}'>
			<mdc:dependents>
				<mdc:ValueHelp id="VH1"
					delegate='\{"name": "delegates/odata/v4/ValueHelpDelegate", "payload": \{\}\}'>
					<mdc:typeahead>
						<mdcv:Popover>
							<mdcvc:FixedList items="{/Authors}" useAsValueHelp="true">
								<mdcvc:FixedListItem key="{ID}" text="{name}"/>
							</mdcvc:FixedList>
						</mdcv:Popover>
					</mdc:typeahead>
				</mdc:ValueHelp>
			</mdc:dependents>
		</mdc:Field>

		<Label text="List with additionalText (select-like)" />
		<mdc:Field id="F2" value="{path: 'author_ID', type: 'sap.ui.model.odata.type.Int32'}" valueHelp="VH2" display="DescriptionValue" editMode="Editable" delegate='\{"name": "delegates/odata/v4/FieldBaseDelegate", "payload": \{\}\}'>
			<mdc:dependents>
				<mdc:ValueHelp id="VH2"
					delegate='\{"name": "delegates/odata/v4/ValueHelpDelegate", "payload": \{\}\}'>
					<mdc:typeahead>
						<mdcv:Popover id="VH2-Pop">
							<mdcvc:FixedList id="VH2-FL" items="{/Authors}" useAsValueHelp="true" filterList="false" useFirstMatch="true">
								<mdcvc:FixedListItem key="{ID}" text="{name}" additionalText="{ID}"/>
							</mdcvc:FixedList>
						</mdcv:Popover>
					</mdc:typeahead>
				</mdc:ValueHelp>
			</mdc:dependents>
		</mdc:Field>

		<Label text="Combobox (Suggest)" />
		<mdc:Field id="F3" value="{path: 'author_ID', type: 'sap.ui.model.odata.type.Int32'}" valueHelp="VH3" display="DescriptionValue" editMode="Editable" delegate='\{"name": "delegates/odata/v4/FieldBaseDelegate", "payload": \{\}\}'>
			<mdc:dependents>
				<mdc:ValueHelp id="VH3"
					delegate='\{"name": "delegates/odata/v4/ValueHelpDelegate", "payload": \{\}\}'>
					<mdc:typeahead>
						<mdcv:Popover id="VH3-Pop" title="Author">
							<mdcvc:MTable id="VH3-Pop-Cont" keyPath="ID" descriptionPath="name" filterFields="$search" useAsValueHelp="true">
								<Table id="VH3-Pop-Table" items='{path : "/Authors"}' width="30rem" growing="true" growingScrollToLoad="true" growingThreshold="20" mode="SingleSelectMaster">
									<columns>
										<Column width="5rem">
											<header>
												<Text text="ID" />
											</header>
										</Column>
										<Column>
											<header>
												<Text text="Name" />
											</header>
										</Column>
										<Column width="9rem">
											<header>
												<Text text="Date of Birth" />
											</header>
										</Column>
									</columns>
									<items>
										<ColumnListItem type="Active">
											<cells>
												<Text text="{ID}" />
												<Text text="{name}" />
												<Text text="{dateOfBirth}" />
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</mdcvc:MTable>
						</mdcv:Popover>
					</mdc:typeahead>
				</mdc:ValueHelp>
			</mdc:dependents>
		</mdc:Field>

		<Label text="ValueHelp using mTable in dialog" />
		<mdc:Field id="F4" value="{path: 'author_ID', type: 'sap.ui.model.odata.type.Int32'}" valueHelp="VH4" display="DescriptionValue" editMode="Editable" delegate='\{"name": "delegates/odata/v4/FieldBaseDelegate", "payload": \{\}\}'>
			<mdc:dependents>
				<mdc:ValueHelp id="VH4"
					delegate='\{"name": "delegates/odata/v4/ValueHelpDelegate", "payload": \{\}\}'>
					<mdc:typeahead>
						<mdcv:Popover id="VH4-Pop" title="Author">
							<mdcvc:MTable id="VH4-Pop-Cont" keyPath="ID" descriptionPath="name" filterFields="$search" useAsValueHelp="false">
								<Table id="VH4-Pop-Table" items='{path : "/Authors", length: 10}' width="30rem" mode="SingleSelectMaster">
									<columns>
										<Column width="5rem">
											<header>
												<Text text="ID" />
											</header>
										</Column>
										<Column>
											<header>
												<Text text="Name" />
											</header>
										</Column>
										<Column width="9rem">
											<header>
												<Text text="Date of Birth" />
											</header>
										</Column>
									</columns>
									<items>
										<ColumnListItem type="Active">
											<cells>
												<Text text="{ID}" />
												<Text text="{name}" />
												<Text text="{dateOfBirth}" />
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</mdcvc:MTable>
						</mdcv:Popover>
					</mdc:typeahead>
					<mdc:dialog>
						<mdcv:Dialog id="VH4-Dia" title="Author">
							<mdcvc:MTable id="VH4-Dia-Cont" keyPath="ID" descriptionPath="name" filterFields="$search" useAsValueHelp="false">
								<mdcvc:filterBar>
									<vhfb:FilterBar id="VH4-Dia-FB" liveMode="false" delegate='\{"name": "delegates/GenericVhFilterBarDelegate", "payload": \{"collectionName": ""\}\}' >
										<vhfb:filterItems>
											<mdc:FilterField delegate='\{"name": "delegates/odata/v4/FieldBaseDelegate", "payload": \{\}\}' label="ID" dataType="Edm.Int32"  conditions="{$filters>/conditions/ID}"/>
											<mdc:FilterField delegate='\{"name": "delegates/odata/v4/FieldBaseDelegate", "payload": \{\}\}' label="Name" conditions="{$filters>/conditions/name}"/>
											<mdc:FilterField delegate='\{"name": "delegates/odata/v4/FieldBaseDelegate", "payload": \{\}\}' label="Date of Birth" dataType="Edm.Date" maxConditions="-1" conditions="{$filters>/conditions/dateOfBirth}" valueHelp="VH2-2">
												<mdc:dependents>
													<mdc:ValueHelp id="VH2-2" delegate='\{"name": "delegates/odata/v4/ValueHelpDelegate", "payload": \{\}\}'>
														<mdc:dialog>
															<mdcv:Dialog title="Date of Birth">
																<mdcvc:Conditions label="Date of Birth"/>
															</mdcv:Dialog>
														</mdc:dialog>
													</mdc:ValueHelp>
												</mdc:dependents>
											</mdc:FilterField>
										</vhfb:filterItems>
									</vhfb:FilterBar>
								</mdcvc:filterBar>
								<Table id="VH4-Dia-Table" items='{path : "/Authors"}' width="30rem" growing="true" growingScrollToLoad="true" growingThreshold="20" mode="SingleSelectMaster">
									<columns>
										<Column width="5rem">
											<header>
												<Text text="ID" />
											</header>
										</Column>
										<Column>
											<header>
												<Text text="Name" />
											</header>
										</Column>
										<Column width="9rem">
											<header>
												<Text text="Date of Birth" />
											</header>
										</Column>
									</columns>
									<items>
										<ColumnListItem type="Active">
											<cells>
												<Text text="{ID}" />
												<Text text="{name}" />
												<Text text="{dateOfBirth}" />
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</mdcvc:MTable>
						</mdcv:Dialog>
					</mdc:dialog>
				</mdc:ValueHelp>
			</mdc:dependents>
		</mdc:Field>

		<Label text="ValueHelp using mdcTable in dialog" />
		<mdc:Field id="F5" valueHelp="VH5" value="{path: 'author_ID', type: 'sap.ui.model.odata.type.Int32'}" display="DescriptionValue" editMode="Editable" delegate='\{"name": "delegates/odata/v4/FieldBaseDelegate", "payload": \{\}\}'>
			<mdc:dependents>
				<mdc:ValueHelp id="VH5"
					delegate='\{"name": "delegates/odata/v4/ValueHelpDelegate", "payload": \{\}\}'>
					<mdc:typeahead>
						<mdcv:Popover id="VH5-Pop" title="Author">
							<mdcvc:MTable id="VH5-Pop-Cont" keyPath="ID" descriptionPath="name" filterFields="$search" useAsValueHelp="false">
								<Table id="VH5-Pop-Table" items='{path : "/Authors", length: 10}' width="30rem" mode="SingleSelectMaster">
									<columns>
										<Column width="5rem">
											<header>
												<Text text="ID" />
											</header>
										</Column>
										<Column>
											<header>
												<Text text="Name" />
											</header>
										</Column>
										<Column width="9rem">
											<header>
												<Text text="Date of Birth" />
											</header>
										</Column>
									</columns>
									<items>
										<ColumnListItem type="Active">
											<cells>
												<Text text="{ID}" />
												<Text text="{name}" />
												<Text text="{dateOfBirth}" />
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</mdcvc:MTable>
						</mdcv:Popover>
					</mdc:typeahead>
					<mdc:dialog>
						<mdcv:Dialog id="VH5-Dia" title="Author">
							<mdcvc:MDCTable id="VH5-Dia-Cont" keyPath="ID" descriptionPath="name" filterFields="$search">
								<mdcvc:filterBar>
									<vhfb:FilterBar id="VH5-Dia-FB" liveMode="false" delegate='\{"name": "delegates/GenericVhFilterBarDelegate", "payload": \{"collectionName": ""\}\}' >
										<vhfb:filterItems>
											<mdc:FilterField delegate='\{"name": "delegates/odata/v4/FieldBaseDelegate", "payload": \{\}\}' label="ID" dataType="Edm.Int32"  conditions="{$filters>/conditions/ID}"/>
											<mdc:FilterField delegate='\{"name": "delegates/odata/v4/FieldBaseDelegate", "payload": \{\}\}' label="Name" conditions="{$filters>/conditions/name}"/>
										</vhfb:filterItems>
									</vhfb:FilterBar>
								</mdcvc:filterBar>
								<mdc:Table id="VH5-Dia-Table" autoBindOnInit="true" selectionMode="SingleMaster" p13nMode="Column,Sort" width="100%" height="100%"
									delegate='\{"name": "sap/ui/mdc/sample/FieldValueHelp/GridTable.delegate", "payload": \{"collectionName": "Authors"\}\}'
									threshold="50">
									<mdc:columns>
										<mdc:table.Column id="VH5-Dia-ColId" header="ID" dataProperty="ID">
											<mdc:Field delegate='\{"name": "delegates/odata/v4/FieldBaseDelegate", "payload": \{\}\}' value="{ID}" editMode="Display"/>
										</mdc:table.Column>
										<mdc:table.Column id="VH5-Dia-ColName" header="Name" dataProperty="name">
											<mdc:Field delegate='\{"name": "delegates/odata/v4/FieldBaseDelegate", "payload": \{\}\}' value="{name}" editMode="Display"/>
										</mdc:table.Column>
										<mdc:table.Column id="VH5-Dia-ColDateofBirth" header="Date of Birth" dataProperty="dateOfBirth">
											<mdc:Field delegate='\{"name": "delegates/odata/v4/FieldBaseDelegate", "payload": \{\}\}' value="{dateOfBirth}" editMode="Display"/>
										</mdc:table.Column>
									</mdc:columns>
									<mdc:type>
										<mdc:table.GridTableType rowCountMode="Auto"/>
									</mdc:type>
								</mdc:Table>
							</mdcvc:MDCTable>
						</mdcv:Dialog>
					</mdc:dialog>
				</mdc:ValueHelp>
			</mdc:dependents>
		</mdc:Field>

	</form:SimpleForm>
</mvc:View>
