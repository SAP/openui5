{
	"sap.app": {
		"id": "card.explorer.actions.showHideCard",
		"type": "card",
		"title": "Sample of a Bite Card",
		"subTitle": "Sample of a Bite Card",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"shortTitle": "A short title for this Card",
		"info": "Additional information about this Card",
		"description": "A long description for this Card",
		"tags": {
			"keywords": [
				"Object",
				"Card",
				"Sample",
				"Bite"
			]
		}
	},
	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "sap-icon://switch-classes"
		}
	},
	"sap.card": {
		"type": "Object",
		"configuration": {
			"destinations": {
				"myDestination": {
					"name": "Northwind_V4"
				}
			},
			"parameters": {
				"orderId": {
					"value": 10249
				}
			}
		},
		"data": {
			"request": {
				"url": "{{destinations.myDestination}}/Orders",
				"parameters": {
					"$format": "json",
					"$filter": "OrderID eq {parameters>/orderId/value}"
				}
			},
			"path": "/value/0"
		},
		"header": {
			"data": {
				"path": "/value/0"
			},
			"icon": {
				"src": "sap-icon://sap-ui5"
			},
			"title": "Order for {ShipName}",
			"subTitle": "ID {parameters>/orderId/value}"
		},
		"content": {
			"groups": [
				{
					"items": [
						{
							"label": "Name",
							"value": "{ShipName}"
						}
					]
				},
				{
					"items": [
						{
							"label": "Address",
							"value": "{ShipAddress}"
						}
					]
				}
			]
		},
		"footer": {
			"actionsStrip": [
				{
					"text": "Show More",
					"buttonType": "Accept",
					"actions": [
						{
							"type": "ShowCard",
							"parameters": {
								"manifest": "./detailsManifest.json",
								"parameters": {
									"orderId": "{parameters>/orderId/value}"
								},
								"data": {
									"orderData": "{/value/0}"
								}
							}
						}
					]
				}
			]
		}
	}
}