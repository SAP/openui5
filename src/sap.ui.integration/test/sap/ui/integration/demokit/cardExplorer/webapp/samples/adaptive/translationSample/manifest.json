{
	"_version": "1.48.0",
	"sap.app": {
		"id": "card.explorer.format.text.card",
		"type": "card",
		"i18n": "i18n/i18n.properties",
		"title": "Sample of Adaptive Card translations",
		"subTitle": "Sample of Adaptive Card translations",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"shortTitle": "A short title for this Card",
		"info": "Additional information about this Card",
		"description": "A long description for this Card",
		"tags": {
			"keywords": [
				"Translation",
				"Card",
				"Sample"
			]
		}
	},
	"sap.card": {
		"data": {
			"json": {
			    "title": "{i18n>title}",
			    "description": "{i18n>description}"
			}
	    },
        "type": "AdaptiveCard",
        "header": {
			"title": "{title}",
			"icon": {
				"src": "sap-icon://translate"
			}
        },
        "content": {
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "type": "AdaptiveCard",
        "version": "1.0",
        "body": [
				{
					"type": "TextBlock",
					"text": "${description}"
				}
            ]
		}
	}
}