<mvc:View
	controllerName="sap.ui.integration.sample.ConfigurationChanges.ConfigurationChanges"
	xmlns:w="sap.ui.integration.widgets"
	xmlns:f="sap.f"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<ScrollContainer horizontal="false" vertical="false" class="sapUiLargeMarginBeginEnd">
		<Button text="Refresh cards" press=".refreshCards" class="sapUiSmallMarginEnd" />
		<Button text="Set filters to the last-changed values" press=".changeFilters" />
	</ScrollContainer>
	<f:GridContainer>
		<w:Card id="card1" manifest="./cardManifest.json">
			<w:layoutData>
				<f:GridContainerItemLayoutData columns="3" />
			</w:layoutData>
		</w:Card>
		<w:Card id="card2" manifest="./cardManifest.json">
			<w:layoutData>
				<f:GridContainerItemLayoutData columns="3" />
			</w:layoutData>
		</w:Card>
	</f:GridContainer>
</mvc:View>