{
	"sap.app": {
		"id": "card.explorer.actions.showHideDetailsCard",
		"type": "card",
		"title": "Sample of an Snack Card",
		"subTitle": "Sample of an Snack Card",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"shortTitle": "A short title for this Card",
		"info": "Additional information about this Card",
		"description": "A long description for this Card",
		"tags": {
			"keywords": [
				"Object",
				"Card",
				"Sample",
				"Snack"
			]
		}
	},
	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "sap-icon://switch-classes"
		}
	},
	"sap.card": {
		"type": "Object",
		"configuration": {
			"destinations": {
				"myDestination": {
					"name": "Northwind_V4"
				}
			},
			"parameters": {
				"orderId": {
					"value": ""
				},
				"closeButtonVisible": {
					"value": false
				}
			}
		},
		"header": {
			"icon": {
				"src": "sap-icon://sap-ui5"
			},
			"closeButton": {
				"visible": "{parameters>/closeButtonVisible/value}"
			},
			"data": {
				"path": "orderData>/"
			},
			"title": "Order for {orderData>ShipName}",
			"subTitle": "ID {parameters>/orderId/value}"
		},
		"content": {
			"data": {
				"path": "orderData>/"
			},
			"groups": [
				{
					"items": [
						{
							"label": "Name",
							"value": "{orderData>ShipName}"
						},
						{
							"label": "Address",
							"value": "{orderData>ShipAddress}"
						},
						{
							"label": "Country",
							"value": "{orderData>ShipCountry}"
						},
						{
							"label": "City",
							"value": "{orderData>ShipCity}"
						},
						{
							"label": "Postal code",
							"value": "{orderData>ShipPostalCode}"
						}
					]
				}
			]
		},
		"footer": {
			"actionsStrip": [
				{
					"text": "Close",
					"buttonType": "Emphasized",
					"actions": [
						{
							"type": "HideCard"
						}
					]
				}
			]
		}
	}
}