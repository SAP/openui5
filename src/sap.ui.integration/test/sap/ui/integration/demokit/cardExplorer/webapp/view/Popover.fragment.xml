<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="configurationEditorPopover"
		placement="Bottom"
		contentWidth="16%"
		showHeader="false"
		afterClose=".onhandleClosePopover">
		<content>
			<FlexBox
				alignItems="End"
				justifyContent="End">
				<core:Icon
				    id="popoverCloseIcon"
				    class="StyleMessageIcon"
					useIconTooltip="false"
					src="sap-icon://decline"
					press=".onhandleClosePopover">
				</core:Icon>
			</FlexBox>
			<FlexBox
				class="sapUiTinyMarginBegin sapUiTinyMarginEnd sapUiSmallMarginBottom"
				alignItems="Center"
				justifyContent="Center">
				<FormattedText
					htmlText="Click on this button to show card configuration options."
					width="100%"
					height="40px">
				</FormattedText>
			</FlexBox>
		</content>
	</Popover>
</core:FragmentDefinition>