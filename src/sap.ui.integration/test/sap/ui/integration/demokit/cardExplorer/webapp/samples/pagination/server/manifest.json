{
	"_version": "1.14.0",
	"sap.app": {
		"id": "card.explorer.data.list.card",
		"type": "card",
		"title": "Sample for Server-Side Pagination in Cards",
		"subTitle": "Sample for Server-Side Pagination in Cards",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"shortTitle": "A short title for this Card",
		"info": "Additional information about this Card",
		"description": "A long description for this Card",
		"tags": {
			"keywords": [
				"Data",
				"Pagination",
				"Card",
				"Sample"
			]
		}
	},
	"sap.card": {
		"type": "List",
		"configuration": {
			"parameters": {
				"top": {
					"value": 5,
					"type": "integer"
				}
			}
		},
		"data": {
			"request": {
				"url": "https://services.odata.org/V4/Northwind/Northwind.svc/Products",
				"parameters": {
					"$format": "json",
					"$count": true,
					"$skip": "{paginator>/skip}",
					"$top": "{parameters>/top/value}"
				}
			},
			"path": "/value"
		},
		"header": {
			"title": "Products",
			"subTitle": "In Stock Information",
			"icon": {
				"src": "sap-icon://product"
			},
			"status": {
				"text": "{= format.text(${i18n>CARD.COUNT_X_OF_Y}, [${paginator>/skip} + ${parameters>/visibleItems}, ${/@odata.count}]) }"
			}
		},
		"content": {
			"item": {
				"title": "{ProductName}",
				"description": "{UnitsInStock} units in stock",
				"highlight": "{= ${Discontinued} ? 'Error' : 'Success'}"
			}
		},
		"footer": {
			"paginator": {
				"totalCount": "{/@odata.count}",
				"pageSize": "{parameters>/top/value}"
			}
		}
	}
}