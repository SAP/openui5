{
	"_version": "1.20.0",
	"sap.app": {
		"id": "card.explorer.features.dateRange",
		"type": "card",
		"title": "Sample of destinations",
		"subTitle": "Sample of destinations",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"shortTitle": "A short title for this card",
		"info": "Additional information about this card",
		"description": "A long description for this card",
		"tags": {
			"keywords": [
				"Destinations",
				"Card",
				"Sample"
			]
		}
	},
	"sap.card": {
		"type": "List",
		"designtime": "dt/Configuration",
		"data": {
			"request": {
				"url": "{{destinations.myDestination}}/Products",
				"parameters": {
					"$format": "json",
					"$top": "{{parameters.maxItems}}",
					"$orderby": "ProductID asc"
				}
			}
		},
		"configuration": {
			"destinations": {
				"myDestination": {
					"name": "Northwind"
				},
				"myDestinationForImages": {
					"name": "NorthwindImages"
				}
			},
			"parameters": {
				"maxItems": {
					"value": 3,
					"type": "integer",
					"label": "Maximum Items",
					"description": "Defines how many items will be displayed at most."
				}
			}
		},
		"header": {
			"title": "Destinations sample",
			"subTitle": "First {{parameters.maxItems}} products from destination 'Northwind'",
			"status": {
				"text": "top {{parameters.maxItems}}"
			}
		},
		"content": {
			"data": {
				"path": "/value/"
			},
			"maxItems": "{{parameters.maxItems}}",
			"item": {
				"title": "{ProductName}",
				"description": "Unit Price {= format.currency(${UnitPrice}, 'EUR')}",
				"icon": {
					"src": "{{destinations.myDestinationForImages}}/Product_{ProductID}.png"
				}
			}
		}
	}
}