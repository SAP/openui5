<mvc:View 
	controllerName="sap.ui.integration.sample.CardsLayout.componentCard.ComponentCard"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	width="100%"
	displayBlock="true">
	<HBox class="sapUiSmallMargin">
		<ComboBox placeholder="Peach Valley" selectedKey="peachValley">
			<items>
				<core:Item key="peachValley" text="Peach Valley" />
			</items>
		</ComboBox>
		<Button text="Get Directions" type="Emphasized" class="sapUiSmallMarginBegin" />
	</HBox>
	<Image src="{/mapImageUrl}" alt="Sales manager" width="100%" />
</mvc:View>