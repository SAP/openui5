<mvc:View
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:f="sap.f"
		xmlns:w="sap.ui.integration.widgets"
		controllerName="sap.ui.integration.sample.CardsLoading.CardLoading"
		xmlns:form="sap.ui.layout.form">

	<form:SimpleForm editable="true" width="40rem">
		<Label text="Loading time" />
		<Input id="loadingMinSeconds" width="8rem" type="Number" description="seconds" value="-1"/>
		<Button text="Start loading" type="Emphasized" press="onFormSubmit"/>
	</form:SimpleForm>

	<f:GridContainer id="grd" class="sapUiSmallMargin">
		<w:Card  id="listTest">
			<w:layoutData>
				<f:GridContainerItemLayoutData columns="4"/>
			</w:layoutData>
		</w:Card>
		<w:Card  id="list">
			<w:layoutData>
				<f:GridContainerItemLayoutData columns="3"/>
			</w:layoutData>
		</w:Card>
		<w:Card id="error">
			<w:layoutData>
				<f:GridContainerItemLayoutData columns="4"/>
			</w:layoutData>
		</w:Card>
		<w:Card id="all">
			<w:layoutData>
				<f:GridContainerItemLayoutData columns="4"/>
			</w:layoutData>
		</w:Card>
		<w:Card id="descriptionTitle">
			<w:layoutData>
				<f:GridContainerItemLayoutData columns="3"/>
			</w:layoutData>
		</w:Card>
		<w:Card id="iconTitle">
			<w:layoutData>
				<f:GridContainerItemLayoutData columns="4"/>
			</w:layoutData>
		</w:Card>
		<w:Card id="table">
			<w:layoutData>
				<f:GridContainerItemLayoutData columns="5"/>
			</w:layoutData>
		</w:Card>
		<w:Card id="analytical">
			<w:layoutData>
				<f:GridContainerItemLayoutData columns="6"/>
			</w:layoutData>
		</w:Card>
		<w:Card id="calendar">
			<w:layoutData>
				<f:GridContainerItemLayoutData columns="4"/>
			</w:layoutData>
		</w:Card>
		<w:Card id="object">
			<w:layoutData>
				<f:GridContainerItemLayoutData columns="5"/>
			</w:layoutData>
		</w:Card>
		<w:Card id="timeline">
			<w:layoutData>
				<f:GridContainerItemLayoutData columns="3"/>
			</w:layoutData>
		</w:Card>
	</f:GridContainer>
</mvc:View>
