<mvc:View controllerName="sap.ui.webc.main.sample.Switch.C" xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" height="100%">
    <Toast id="demoToast" duration="1000"></Toast>

    <fiori:Page>
        <fiori:content>
        <l:HorizontalLayout
                class="sapUiContentPadding"
                width="100%"
                allowWrapping="true">
                <l:content>
                    <l:VerticalLayout class="sapUiContentPadding">
                        <l:content>
                            <Label id="regularSwitchLabel" text="Regular" />
                            <Switch accessibleNameRef="regularSwitchLabel" textOff="Off" textOn="On" change="handleChange"></Switch>
                            <Switch accessibleNameRef="regularSwitchLabel" textOff="Off" textOn="On" change="handleChange" checked="true"></Switch>
                            <Switch accessibleNameRef="regularSwitchLabel" change="handleChange"></Switch>
                            <Switch accessibleNameRef="regularSwitchLabel" checked="true"></Switch>
                            <Switch textOff="Off" textOn="On" change="handleChange" enabled="false"></Switch>
                            <Switch textOff="Off" textOn="On" change="handleChange" checked="true" enabled="false"></Switch>
                        </l:content>
                    </l:VerticalLayout>
                    <l:VerticalLayout class="sapUiContentPadding">
                        <l:content>
                            <Label id="graphicalSwitchLabel" text="Graphical" />
                            <Switch accessibleNameRef="graphicalSwitchLabel" textOff="Off" textOn="On" change="handleChange" design="Graphical"></Switch>
                            <Switch accessibleNameRef="graphicalSwitchLabel" textOff="Off" textOn="On" change="handleChange" checked="true" design="Graphical"></Switch>
                            <Switch accessibleNameRef="graphicalSwitchLabel" change="handleChange" design="Graphical"></Switch>
                            <Switch accessibleNameRef="graphicalSwitchLabel" checked="true" design="Graphical"></Switch>
                            <Switch textOff="Off" textOn="On" change="handleChange" enabled="false" design="Graphical"></Switch>
                            <Switch textOff="Off" textOn="On" change="handleChange" checked="true" enabled="false" design="Graphical"></Switch>
                        </l:content>
                    </l:VerticalLayout>
                </l:content>
            </l:HorizontalLayout>
            
        </fiori:content>
    </fiori:Page>
</mvc:View>