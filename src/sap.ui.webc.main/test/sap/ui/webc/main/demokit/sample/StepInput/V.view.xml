<mvc:View controllerName="sap.ui.webc.main.sample.StepInput.C" xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" height="100%">
	<Toast id="demoToast" duration="1000"></Toast>
	<fiori:Page>
		<fiori:content>
			<l:VerticalLayout class="sapUiContentPadding" width="100%">
				<l:content>
					<Label text="Basic Step Input"/>
					<StepInput placeholder="Enter number" width="200px" change="handleChange"></StepInput>
					<Label text="Read-only Step Input"/>
					<StepInput placeholder="Enter number" width="200px" readonly="true" change="handleChange"></StepInput>
					<Label text="Disabled Step Input"/>
					<StepInput placeholder="Enter number" width="200px" enabled="false" change="handleChange"></StepInput>
					<Label text="Step Input with min and max"/>
					<StepInput placeholder="Enter number" width="200px" min="0" max="10" change="handleChange"></StepInput>
					<Label text="Step Input with step"/>
					<StepInput placeholder="Enter number" width="200px" step="5" change="handleChange"></StepInput>
					<Label text="Step Input with value precision"/>
					<StepInput placeholder="Enter number" width="200px" step="0.05" valuePrecision="2" change="handleChange"></StepInput>
					<Label text="Step Input with value state"/>
					<StepInput placeholder="Enter number" width="200px" valueState="Success" valueStateMessage="Success State Message" change="handleChange"></StepInput>
					<StepInput placeholder="Enter number" width="200px" valueState="Warning" valueStateMessage="Warning State Message" change="handleChange"></StepInput>
					<StepInput placeholder="Enter number" width="200px" valueState="Error" valueStateMessage="Error State Message" change="handleChange"></StepInput>
					<StepInput placeholder="Enter number" width="200px" valueState="Information" valueStateMessage="Information State Message" change="handleChange"></StepInput>
				</l:content>
			</l:VerticalLayout>
		</fiori:content>
	</fiori:Page>
</mvc:View>