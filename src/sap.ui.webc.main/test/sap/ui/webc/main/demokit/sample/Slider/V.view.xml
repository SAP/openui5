<mvc:View controllerName="sap.ui.webc.main.sample.Slider.C" xmlns:l="sap.ui.layout" xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" height="100%">
	<l:VerticalLayout class="sapUiContentPadding" width="100%">
		<l:content>
			<Toast id="demoToast" duration="1000"></Toast>
			<Label text="Slider"/>
			<Slider width="80%" class="sapUiTinyMargin" change="handleChange" min="0" max="100"></Slider>
			<Label text="Disabled Slider"/>
			<Slider width="80%" class="sapUiTinyMargin" input="handleInput" min="0" max="100" enabled="false"></Slider>
			<Label text="Slider with tooltips"/>
			<Slider width="80%" class="sapUiTinyMargin" change="handleChange" showTooltip="true"></Slider>
			<Label text="Slider with value"/>
			<Slider width="80%" class="sapUiTinyMargin" change="handleChange" min="0" max="100" value="10" showTooltip="true"></Slider>
			<Label text="Slider with a defined step and tickmarks"/>
			<Slider width="80%" class="sapUiTinyMargin" change="handleChange" min="0" max="100" step="10" showTickmarks="true"></Slider>
			<Label text="Slider with tickmarks and labels"/>
			<Slider width="80%" class="sapUiTinyMargin" change="handleChange" value="50" min="0" max="100" step="2" showTickmarks="true" labelInterval="2"></Slider>
		</l:content>
	</l:VerticalLayout>
</mvc:View>