<mvc:View
	controllerName="sap.ui.webc.main.sample.ResponsivePopover.C"
	xmlns="sap.ui.webc.main"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	height="100%">
	<l:VerticalLayout class="sapUiContentPadding" width="100%">
		<Button click=".handleOpen" text="Show Responsive Popover" id="openResponsivePopoverButton" />
		<ResponsivePopover id="helloResponsivePopover" headerText="Newsletter Subscription">
			<Label text="Email" required="true" showColon="true" />
			<Input placeholder="Enter Email" />
			<footer>
				<Button design="Emphasized" text="Subscribe" click=".handleClose"
					class="sapUiTinyMarginTop sapUiTinyMarginBottom" />
			</footer>
		</ResponsivePopover>
	</l:VerticalLayout>
</mvc:View>