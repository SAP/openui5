<mvc:View controllerName="sap.ui.webc.main.sample.ListBasic.C" xmlns="sap.ui.webc.main" xmlns:mvc="sap.ui.core.mvc" height="100%">
	<Toast id="demoToast" duration="1000" />
	<Title level="H3"
		text="Basic List"
		class="sapUiTinyMargin"
		wrappingType="Normal"/>
	<List itemClick="handleItemClick">
		<StandardListItem
			text="Pineapple"
			icon="nutrition-activity"
			description="Tropical plant with an edible fruit"
			additionalText="In-stock"
			additionalTextState="Success" />
		<StandardListItem
			text="Orange"
			icon="nutrition-activity"
			description="Occurs between red and yellow"
			additionalText="Expires"
			additionalTextState="Warning" />
		<StandardListItem
			text="Blueberry"
			icon="nutrition-activity"
			description="The yellow lengthy fruit"
			additionalText="Re-stock"
			additionalTextState="Information" />
		<StandardListItem
			text="Mango"
			icon="nutrition-activity"
			description="The tropical stone fruit"
			additionalText="Re-stock"
			additionalTextState="Error" />
	</List>
</mvc:View>