<mvc:View controllerName="sap.ui.webc.main.sample.Breadcrumbs.C" xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" height="100%">
	<Toast id="demoToast" duration="1000"></Toast>

	<fiori:Page>
		<fiori:header>
			<fiori:Bar>
				<fiori:middleContent>
					<Title text="Breadcrumbs"></Title>
				</fiori:middleContent>
			</fiori:Bar>
		</fiori:header>

		<fiori:content>

			<Title level="H3"
				text="Standard Breadcrumbs with click event"
				class="sapUiTinyMarginBottom"
				wrappingType="Normal"/>
			<Breadcrumbs itemClick="handleItemClick">
				<items>
					<BreadcrumbsItem text="Some text..."/>
					<BreadcrumbsItem text="Some text..."/>
					<BreadcrumbsItem text="Some text..."/>
				</items>
			</Breadcrumbs>

			<Title level="H3"
				text="Standard Breadcrumbs"
				class="sapUiMediumMarginTop sapUiTinyMarginBottom"
				wrappingType="Normal"/>
			<Breadcrumbs>
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Root Page"/>
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Parent Page"/>
				<BreadcrumbsItem text="Current Page"/>
			</Breadcrumbs>

			<Title level="H3"
				text="Breadcrumbs with no current page"
				class="sapUiMediumMarginTop sapUiTinyMarginBottom"
				wrappingType="Normal"/>
			<Breadcrumbs design="NoCurrentPage">
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Root Page"/>
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Parent Page"/>
			</Breadcrumbs>

			<Title level="H3"
				text="Breadcrumbs with specific separator"
				class="sapUiMediumMarginTop sapUiTinyMarginBottom"
				wrappingType="Normal"/>
			<Breadcrumbs separatorStyle="Slash">
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Root Page"/>
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Parent Page"/>
				<BreadcrumbsItem text="Current Page"/>
			</Breadcrumbs>
			<Breadcrumbs separatorStyle="BackSlash">
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Root Page"/>
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Parent Page"/>
				<BreadcrumbsItem text="Current Page"/>
			</Breadcrumbs>
			<Breadcrumbs separatorStyle="DoubleBackSlash">
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Root Page"/>
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Parent Page"/>
				<BreadcrumbsItem text="Current Page"/>
			</Breadcrumbs>
			<Breadcrumbs separatorStyle="DoubleGreaterThan">
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Root Page"/>
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Parent Page"/>
				<BreadcrumbsItem text="Current Page"/>
			</Breadcrumbs>
			<Breadcrumbs separatorStyle="DoubleSlash">
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Root Page"/>
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Parent Page"/>
				<BreadcrumbsItem text="Current Page"/>
			</Breadcrumbs>
			<Breadcrumbs separatorStyle="GreaterThan">
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Root Page"/>
				<BreadcrumbsItem href="https://www.sap.com" target="_blank" text="Parent Page"/>
				<BreadcrumbsItem text="Current Page"/>
			</Breadcrumbs>

		</fiori:content>
	</fiori:Page>
</mvc:View>