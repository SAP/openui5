<mvc:View controllerName="sap.ui.webc.main.sample.RangeSlider.C" xmlns:l="sap.ui.layout" xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" height="100%">
	<l:VerticalLayout class="sapUiContentPadding" width="100%">
		<l:content>
			<Toast id="demoToast" duration="1000"></Toast>
			<Label text="Range Slider"/>
			<RangeSlider width="80%" class="sapUiTinyMargin" change="handleChange" min="0" max="100"></RangeSlider>
			<Label text="Disabled Range Slider"/>
			<RangeSlider width="80%" class="sapUiTinyMargin" input="handleInput" min="0" max="100" enabled="false"></RangeSlider>
			<Label text="Range Slider with tooltips"/>
			<RangeSlider width="80%" class="sapUiTinyMargin" change="handleChange" showTooltip="true"></RangeSlider>
			<Label text="Range Slider with start and end values"/>
			<RangeSlider width="80%" class="sapUiTinyMargin" change="handleChange" min="0" max="100" startValue="10" endValue="90" showTooltip="true"></RangeSlider>
			<Label text="Range Slider with a defined step and tickmarks"/>
			<RangeSlider width="80%" class="sapUiTinyMargin" change="handleChange" min="0" max="100" step="10" showTickmarks="true"></RangeSlider>
			<Label text="Range Slider with tickmarks and labels"/>
			<RangeSlider width="80%" class="sapUiTinyMargin" change="handleChange" startValue="10" endValue="20" min="0" max="100" step="2" showTickmarks="true" labelInterval="2"></RangeSlider>
		</l:content>
	</l:VerticalLayout>
</mvc:View>