<mvc:View xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" height="100%">

	<fiori:Page>
		<fiori:header>
			<fiori:Bar>
				<fiori:middleContent>
					<Title text="Different Icon variations"></Title>
				</fiori:middleContent>
			</fiori:Bar>
		</fiori:header>

		<fiori:content>

			<Title level="H3"
				text="Basic Icons"
				class="sapUiMediumMarginTop sapUiTinyMarginBottom"
				wrappingType="Normal"/>
			<Icon class="sapUiTinyMargin" name="activate" />
			<Icon class="sapUiTinyMargin" name="activities" />
			<Icon class="sapUiTinyMargin" name="add-equipment" />
			<Icon class="sapUiTinyMargin" name="add-document" />
			<Icon class="sapUiTinyMargin" name="add-employee" />

			<Title level="H3"
				text="SAP Fiori Tools Icons"
				class="sapUiMediumMarginTop sapUiTinyMarginBottom"
				wrappingType="Normal"/>
			<Icon class="sapUiTinyMargin" name="tnt/antenna" />
			<Icon class="sapUiTinyMargin" name="tnt/api" />
			<Icon class="sapUiTinyMargin" name="tnt/modem" />
			<Icon class="sapUiTinyMargin" name="tnt/data-store" />
			<Icon class="sapUiTinyMargin" name="tnt/flow" />

			<Title level="H3"
				text="Icons with different colors"
				class="sapUiMediumMarginTop sapUiTinyMarginBottom"
				wrappingType="Normal"/>
			<Icon class="sapUiTinyMargin" color="pink" name="tnt/antenna" />
			<Icon class="sapUiTinyMargin" color="orange" name="tnt/api" />
			<Icon class="sapUiTinyMargin" color="magenta" name="tnt/modem" />
			<Icon class="sapUiTinyMargin" color="lime" name="tnt/data-store" />
			<Icon class="sapUiTinyMargin" color="yellow" name="tnt/flow" />

			<Title level="H3"
				text="Icons with different background colors"
				class="sapUiMediumMarginTop sapUiTinyMarginBottom"
				wrappingType="Normal"/>
			<Icon class="sapUiTinyMargin" color="black" backgroundColor="pink" name="tnt/antenna" />
			<Icon class="sapUiTinyMargin" color="black" backgroundColor="orange" name="tnt/api" />
			<Icon class="sapUiTinyMargin" color="black" backgroundColor="magenta" name="tnt/modem" />
			<Icon class="sapUiTinyMargin" color="black" backgroundColor="lime" name="tnt/data-store" />
			<Icon class="sapUiTinyMargin" color="black" backgroundColor="yellow" name="tnt/flow" />

			<Title level="H3"
				text="Icons with different width"
				class="sapUiMediumMarginTop sapUiTinyMarginBottom"
				wrappingType="Normal"/>
			<Icon class="sapUiTinyMargin" width="2rem" name="tnt/antenna" />
			<Icon class="sapUiTinyMargin" width="50px" name="tnt/api" />
			<Icon class="sapUiTinyMargin" width="1em" name="tnt/modem" />

		</fiori:content>
	</fiori:Page>
</mvc:View>