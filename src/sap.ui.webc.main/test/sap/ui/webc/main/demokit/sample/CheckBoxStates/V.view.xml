<mvc:View xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" height="100%">
	<Toast id="demoToast" duration="1000"></Toast>

	<fiori:Page>
		<fiori:header>
			<fiori:Bar>
				<fiori:middleContent>
					<Title text="CheckBox 'valueState' property"></Title>
				</fiori:middleContent>
			</fiori:Bar>
		</fiori:header>

		<fiori:content>

			<CheckBox text="Success" valueState="Success" />
			<CheckBox text="Error" valueState="Error" />
			<CheckBox text="Warning" valueState="Warning" />
			<CheckBox text="Information" valueState="Information" />
			<CheckBox text="Disabled" enabled="false" checked="true" />
			<CheckBox text="Readonly" readonly ="true" checked="true" />
			<CheckBox text="Success disabled" enabled="false" valueState="Success" checked="true" />
			<CheckBox text="Error disabled" enabled="false" valueState="Error" checked="true" />
			<CheckBox text="Warning disabled" enabled="false" valueState="Warning" checked="true" />
			<CheckBox text="Information disabled" enabled="false" valueState="Information" checked="true" />
			<CheckBox text="Success readonly" readonly ="true" valueState="Success" checked="true" />
			<CheckBox text="Error readonly" readonly ="true" valueState="Error" checked="true" />
			<CheckBox text="Warning readonly" readonly ="true" valueState="Warning" checked="true" />
			<CheckBox text="Information readonly" readonly ="true" valueState="Information" checked="true" />
			<CheckBox text="Success indeterminate" valueState="Success" indeterminate="true" checked="true" />
			<CheckBox text="Error indeterminate" valueState="Error" indeterminate="true" checked="true" />
			<CheckBox text="Warning indeterminate" valueState="Warning" indeterminate="true" checked="true" />
			<CheckBox text="Information indeterminate" valueState="Information" indeterminate="true" checked="true" />

		</fiori:content>
	</fiori:Page>
</mvc:View>