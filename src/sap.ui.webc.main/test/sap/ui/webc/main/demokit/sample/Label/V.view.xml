<mvc:View
	xmlns="sap.ui.webc.main"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	height="100%">
	<l:VerticalLayout class="sapUiContentPadding">
		<Title text="Standard Label:" level="H6" />
		<Label text="Username" />
		<Title text="Required Label:" level="H6" />
		<Label text="Password" required="true" />
		<Title text="Required Label with Colon:" level="H6" />
		<Label text="Email" required="true" showColon="true" />
		<Title text="Wrapped Label:" level="H6" />
		<Label width="200px" text="Long labels can wrap if the 'wrappingType is set to 'Normal' property is set."
				wrappingType="Normal" />
		<Title text="Truncated Label:" level="H6" />
		<Label width="200px" text="Long labels are truncated by default." />
	</l:VerticalLayout>
</mvc:View>