<mvc:View controllerName="sap.ui.webc.main.sample.Button.C" xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" height="100%">
    <Toast id="demoToast" duration="1000"></Toast>

    <fiori:Page>
        <fiori:header>
            <fiori:Bar>
                <fiori:middleContent>
                    <Title text="Button"></Title>
                </fiori:middleContent>
            </fiori:Bar>
        </fiori:header>

        <fiori:content>
            <l:HorizontalLayout
                    class="sapUiContentPadding"
                    width="100%">
                    <l:content>
                        <Button icon="employee" text="Some text..." click="handleClick"></Button>
                        <Button icon="employee" text="Disabled" click="handleClick" enabled="false"></Button>
                        <Button text="Click me!" click="handleClick" design="Transparent"></Button>
                        <Button text="Success" click="handleClick" design="Positive"></Button>
                        <Button text="Error" click="handleClick" design="Negative"></Button>
                        <Button text="Warning" click="handleClick" design="Attention"></Button>
                        <Button text="Subscribe" click="handleClick" design="Emphasized"></Button>
                    </l:content>
            </l:HorizontalLayout>
        </fiori:content>
    </fiori:Page>
</mvc:View>