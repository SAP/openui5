<mvc:View controllerName="sap.ui.webc.main.sample.ColorPalette.C" xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" height="100%">
    <Toast id="demoToast" duration="1000"></Toast>
    <fiori:Page>
        <fiori:content>
            <l:HorizontalLayout
                    class="sapUiContentPadding"
                    width="100%">
                    <l:content>
                        <Label text="Chose color: "/>
                        <ColorPalette itemClick="handleItemClick">
                            <colors>
                                <ColorPaletteItem value="blue"></ColorPaletteItem>
                                <ColorPaletteItem value="pink"></ColorPaletteItem>
                                <ColorPaletteItem value="green"></ColorPaletteItem>
                                <ColorPaletteItem value="purple"></ColorPaletteItem>
                                <ColorPaletteItem value="black"></ColorPaletteItem>
                                <ColorPaletteItem value="red"></ColorPaletteItem>
                                <ColorPaletteItem value="gray"></ColorPaletteItem>
                                <ColorPaletteItem value="yellow"></ColorPaletteItem>
                                <ColorPaletteItem value="darkblue"></ColorPaletteItem>
                                <ColorPaletteItem value="cyan"></ColorPaletteItem>
                                <ColorPaletteItem value="magenta"></ColorPaletteItem>
                                <ColorPaletteItem value="lightblue"></ColorPaletteItem>
                                <ColorPaletteItem value="darkred"></ColorPaletteItem>
                                <ColorPaletteItem value="brown"></ColorPaletteItem>
                                <ColorPaletteItem value="white"></ColorPaletteItem>
                            </colors>
                        </ColorPalette>
                    </l:content>
            </l:HorizontalLayout>
        </fiori:content>
    </fiori:Page>
</mvc:View>