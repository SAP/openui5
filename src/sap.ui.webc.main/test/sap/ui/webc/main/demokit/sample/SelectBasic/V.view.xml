<mvc:View xmlns:m="sap.m" xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" height="100%">
	<Toast id="demoToast" duration="1000"></Toast>

	<fiori:Page>
		<fiori:header>
			<fiori:Bar>
				<fiori:middleContent>
					<Title text="Basic Select"></Title>
				</fiori:middleContent>
			</fiori:Bar>
		</fiori:header>

		<fiori:content>

			<m:VBox class="sapUiSmallMarginTop">
				<Label text="Basic Select: " />
				<Select>
					<Option icon="iphone" text="Phone" />
					<Option icon="ipad" text="Tablet" />
					<Option icon="laptop" selected="true" text="Desktop" />
				</Select>
			</m:VBox>
			<m:VBox class="sapUiSmallMarginTop">
				<Label text="Disabled Select: " />
				<Select enabled="false">
					<Option icon="iphone" selected="true" text="Phone" />
					<Option icon="ipad" text="Tablet" />
					<Option icon="laptop" text="Desktop" />
				</Select>
			</m:VBox>

		</fiori:content>
	</fiori:Page>
</mvc:View>