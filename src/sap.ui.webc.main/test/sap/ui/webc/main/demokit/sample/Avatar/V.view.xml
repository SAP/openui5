<mvc:View
		controllerName="sap.ui.webc.main.sample.Avatar.C"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:main="sap.ui.webc.main"
		height="100%">

	<main:Toast id="demoToast" duration="2000" />

	<ScrollContainer
			height="100%"
			width="100%"
			horizontal="false"
			vertical="true">
		<Text
				text="The Avatar Control allows usage of different shapes, sizes and content:"
				width="100%"
				class="sapUiSmallMarginTop sapUiSmallMarginBegin sapUiMediumMarginBottom"/>
		<l:Grid
				defaultSpan="XL2 L3 M6 S6">
			<l:content>
				<VBox alignItems="Center">
					<main:Avatar
							size="XL"
							shape="Square"
							interactive="true"
							click="handleClick">
							<Image src="{/Speakers}" />
					</main:Avatar>
					<Text
							text="Avatar of a product"
							class="sapUiSmallMarginTop"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							size="XL"
							interactive="true"
							click="handleClick">
							<Image src="{/Woman01}" />
					</main:Avatar>
					<Text
							text="Avatar of a person"
							class="sapUiSmallMarginTop"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							initials="IS"
							size="XL"
							shape="Square"
							interactive="true"
							click="handleClick"/>
					<Text
							text="Square with initials"
							class="sapUiSmallMarginTop"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							icon="product"
							size="XL"
							colorScheme="Placeholder"
							shape="Square"
							interactive="true"
							click="handleClick"/>
					<Text
							text="Placeholder background"
							class="sapUiSmallMarginTop"/>
				</VBox>
			</l:content>
		</l:Grid>
		<Text
				text="The Avatar can be set to a square or circular shape with a predefined size:"
				width="100%"
				class="sapUiSmallMarginBegin sapUiMediumMarginTop sapUiMediumMarginBottom"/>
		<l:Grid
				defaultSpan="XL2 L2 M3 S12">
			<l:content>
				<VBox
						alignItems="Center"
						alignContent="End">
					<main:Avatar
							size="XL"
							shape="Square">
							<Image src="{/Screw}" />
					</main:Avatar>
					<Text
							text="XL"
							class="sapUiSmallMarginTop"/>
				</VBox>
				<VBox
						alignItems="Center"
						alignContent="End">
					<main:Avatar
							size="L"
							shape="Square">
							<Image src="{/Screw}" />
					</main:Avatar>
					<Text
							text="L"
							class="sapUiSmallMarginTop"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							size="M"
							shape="Square">
							<Image src="{/Screw}" />
					</main:Avatar>
					<Text
							text="M"
							class="sapUiSmallMarginTop"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							size="S"
							shape="Square">
							<Image src="{/Screw}" />
					</main:Avatar>
					<Text
							text="S"
							class="sapUiSmallMarginTop"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							size="XS"
							shape="Square">
							<Image src="{/Screw}" />
					</main:Avatar>
					<Text
							text="XS"
							class="sapUiSmallMarginTop"/>
				</VBox>
			</l:content>
		</l:Grid>
		<l:Grid
				defaultSpan="XL2 L2 M3 S12"
				class="sapUiMediumMarginTop">
			<l:content>
				<VBox alignItems="Center">
					<main:Avatar
							size="XL">
							<Image src="{/Woman02}" />
					</main:Avatar>
					<Text
							text="XL"
							class="sapUiSmallMarginTop"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							size="L">
							<Image src="{/Woman02}" />
					</main:Avatar>
					<Text
							text="L"
							class="sapUiSmallMarginTop"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							size="M">
							<Image src="{/Woman02}" />
					</main:Avatar>
					<Text
							text="M"
							class="sapUiSmallMarginTop"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							size="S">
							<Image src="{/Woman02}" />
					</main:Avatar>
					<Text
							text="S"
							class="sapUiSmallMarginTop"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							size="XS">
							<Image src="{/Woman02}" />
					</main:Avatar>
					<Text
							text="XS"
							class="sapUiSmallMarginTop"/>
				</VBox>
			</l:content>
		</l:Grid>
		<l:Grid
				defaultSpan="XL2 L2 M3 S12"
				class="sapUiMediumMarginTop">
			<l:content>
				<VBox alignItems="Center">
					<main:Avatar
							initials="IS"
							size="XL"
							colorScheme="Accent1"/>
					<Text
							text="XL"
							class="sapUiSmallMarginTop"/>
					<Text text="Accent1"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							initials="IS"
							size="L"
							colorScheme="Accent2"/>
					<Text
							text="L"
							class="sapUiSmallMarginTop"/>
					<Text text="Accent2"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							initials="IS"
							size="M"
							colorScheme="Accent3"/>
					<Text
							text="M"
							class="sapUiSmallMarginTop"/>
					<Text text="Accent3"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							initials="IS"
							size="S"
							colorScheme="Accent4"/>
					<Text
							text="S"
							class="sapUiSmallMarginTop"/>
					<Text text="Accent4"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							initials="IS"
							size="XS"
							colorScheme="Accent5"/>
					<Text
							text="XS"
							class="sapUiSmallMarginTop"/>
					<Text text="Accent5"/>
				</VBox>
			</l:content>
		</l:Grid>
		<l:Grid
				defaultSpan="XL2 L2 M3 S12"
				class="sapUiMediumMarginTop">
			<l:content>
				<VBox alignItems="Center">
					<main:Avatar
							icon="lab"
							size="XL"
							colorScheme="Accent6"/>
					<Text
							text="XL"
							class="sapUiSmallMarginTop"/>
					<Text text="Accent6"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							icon="lab"
							size="L"
							colorScheme="Accent7"/>
					<Text
							text="L"
							class="sapUiSmallMarginTop"/>
					<Text text="Accent7"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							icon="lab"
							size="M"
							colorScheme="Accent8"/>
					<Text
							text="M"
							class="sapUiSmallMarginTop"/>
					<Text text="Accent8"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							icon="lab"
							size="S"
							colorScheme="Accent9"/>
					<Text
							text="S"
							class="sapUiSmallMarginTop"/>
					<Text text="Accent9"/>
				</VBox>
				<VBox alignItems="Center">
					<main:Avatar
							icon="lab"
							size="XS"
							colorScheme="Accent10"/>
					<Text
							text="XS"
							class="sapUiSmallMarginTop"/>
					<Text text="Accent10"/>
				</VBox>
			</l:content>
		</l:Grid>
	</ScrollContainer>
</mvc:View>