<mvc:View xmlns="sap.ui.webc.main" xmlns:m='sap.m' xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" height="100%">
	<Toast id="demoToast" duration="1000"></Toast>

	<fiori:Page>
		<fiori:header>
			<fiori:Bar>
				<fiori:middleContent>
					<Title text="Select 'valueState' property"></Title>
				</fiori:middleContent>
			</fiori:Bar>
		</fiori:header>

		<fiori:content>
			<m:HBox wrap='Wrap'>
				<m:VBox class="sapUiSmallMarginTop">
					<Label text="Success valueState: " />
					<Select class="sapUiSmallMarginEnd" valueState="Success">
						<Option icon="meal" selected="true" text="Apple" />
						<Option icon="meal" text="Avocado" />
						<Option icon="meal" text="Mango" />
					</Select>
				</m:VBox>
				<m:VBox class="sapUiSmallMarginTop">
					<Label text="Warning valueState: " />
					<Select class="sapUiSmallMarginEnd" valueState="Warning" valueStateMessage="Value State Message">
						<Option icon="meal" text="Orange" />
						<Option icon="meal" selected="true" text="Pumpkin" />
						<Option icon="meal" text="Carrot" />
					</Select>
				</m:VBox>
				<m:VBox class="sapUiSmallMarginTop">
					<Label text="Error valueState: " />
					<Select class="sapUiSmallMarginEnd" valueState="Error" valueStateMessage="Value State Message">
						<Option icon="meal" text="Strawberry" />
						<Option icon="meal" text="Tomato" />
						<Option icon="meal" selected="true" text="Red Chili Pepper" />  
					</Select>
				</m:VBox>
				<m:VBox class="sapUiSmallMarginTop">
					<Label text="Information valueState: " />
					<Select valueState="Information" valueStateMessage="Value State Message">
						<Option icon="meal" text="Blueberry" />
						<Option icon="meal" text="Grape" />
						<Option icon="meal" selected="true" text="Plum" />
					</Select>
				</m:VBox>
			</m:HBox>
		</fiori:content>
	</fiori:Page>
</mvc:View>