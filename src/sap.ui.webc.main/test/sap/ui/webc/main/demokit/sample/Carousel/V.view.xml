<mvc:View
	controllerName="sap.ui.webc.main.sample.Carousel.C"
	xmlns="sap.ui.webc.main"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	height="100%">
	<Toast id="demoToast" />
	<l:VerticalLayout class="sapUiContentPadding" width="100%">
		<Carousel navigate=".handleNavigate" cyclic="true">
			<Card width="400px">
				<header>
					<CardHeader titleText="Team Space" subtitleText="Direct Reports">
						<avatar>
							<Icon name="group" />
						</avatar>
					</CardHeader>
				</header>
				<List separators="None" style="width: 100%; margin-bottom: 0.75rem;">
					<StandardListItem description="User Researcher" icon="employee" text="Alain Chevalier" />
					<StandardListItem description="Artist" icon="employee" text="Monique Legrand" />
					<StandardListItem description="UX Specialist" icon="employee" text="Isabella Adams" />
				</List>
			</Card>
			<Card width="400px">
				<header>
					<CardHeader titleText="Products" subtitleText="It Equipment">
						<avatar>
							<Icon name="laptop" />
						</avatar>
					</CardHeader>
				</header>
				<List separators="None" style="width: 100%; margin-bottom: 0.75rem;">
					<StandardListItem icon="laptop" text="Notebooks" description="Professional notebooks" />
					<StandardListItem icon="sys-monitor" text=" Monitors" description="HD Monitors" />
					<StandardListItem icon="popup-window" text="Desktops" description="Working Stations" />
				</List>
			</Card>
			<Card width="400px">
				<header>
					<CardHeader titleText="Orders" subtitleText="Top 3 Products">
						<avatar>
							<Icon name="desktop-mobile" />
						</avatar>
					</CardHeader>
				</header>
				<List separators="None" style="width: 100%; margin-bottom: 0.75rem;">
					<StandardListItem description="Digital Assistant" icon="iphone" text="Comfort Easy" />
					<StandardListItem description="Digital Organizer" icon="iphone" text="ITelO Vault" />
					<StandardListItem description="Print 2400 dpi image quality color documents"
						icon="print" text="Laser Professional Eco" />
				</List>
			</Card>
		</Carousel>
	</l:VerticalLayout>
</mvc:View>