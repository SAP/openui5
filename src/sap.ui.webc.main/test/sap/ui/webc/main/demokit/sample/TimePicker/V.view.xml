<mvc:View controllerName="sap.ui.webc.main.sample.TimePicker.C" xmlns="sap.ui.webc.main" xmlns:l="sap.ui.layout" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" height="100%">
    <Toast id="demoToast" duration="1000"></Toast>

    <fiori:Page>
        <fiori:content>
            <l:VerticalLayout class="sapUiContentPadding">
                <Label text="Simple TimePicker" labelFor="TP1"/>
                <TimePicker id="TP1" change="handleChange" input="handleInput" formatPattern="HH:mm:ss"></TimePicker>
                <Label text="ТimePicker with twelve hour format" labelFor="TP2"/>
                <TimePicker id="TP2" change="handleChange" input="handleInput" formatPattern="hh:mm:ss a"></TimePicker>
                <Label text="ТimePicker with only minutes and seconds format" labelFor="TP3"/>
                <TimePicker id="TP3" change="handleChange" input="handleInput" formatPattern="mm:ss"></TimePicker>
                <Label text="Disabled ТimePicker" labelFor="TP4"/>
                <TimePicker id="TP4" change="handleChange" input="handleInput" enabled="false"></TimePicker>
            </l:VerticalLayout>
        </fiori:content>
    </fiori:Page>
</mvc:View>