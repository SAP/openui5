<mvc:View controllerName="sap.ui.webc.main.sample.FileUploader.C" xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" height="100%">
    <Toast id="demoToast" duration="1000"></Toast>

    <fiori:Page>
        <fiori:content>
            <l:HorizontalLayout
                    class="sapUiContentPadding">
                    <l:content>
                        <Label text="File Uploader" />
                        <FileUploader placeholder="Upload file..." value="Control value" change="handleChange">
                            <content>
                                <Button text="Upload"></Button>
                            </content>
                        </FileUploader>
                    </l:content>
            </l:HorizontalLayout>
        </fiori:content>
    </fiori:Page>
</mvc:View>