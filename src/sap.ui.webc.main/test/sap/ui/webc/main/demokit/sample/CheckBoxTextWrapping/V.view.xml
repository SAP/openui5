<mvc:View xmlns:m="sap.m" xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" height="100%">
	<Toast id="demoToast" duration="1000"></Toast>

	<fiori:Page>
		<fiori:header>
			<fiori:Bar>
				<fiori:middleContent>
					<Title text="CheckBox 'wrappingType' property"></Title>
				</fiori:middleContent>
			</fiori:Bar>
		</fiori:header>

		<fiori:content>

			<m:HBox width="400px">
				<CheckBox text="CheckBox with 'wrappingType=Normal' set and some long text." wrappingType="Normal" />
				<CheckBox text="Another CheckBox with very long text here" wrappingType="Normal" />
			</m:HBox>

		</fiori:content>
	</fiori:Page>
</mvc:View>