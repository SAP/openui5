<mvc:View controllerName="sap.ui.webc.main.sample.ToggleButton.C" xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" height="100%">
    <Toast id="demoToast" duration="1000"></Toast>

    <fiori:Page>
        <fiori:content>
            <l:VerticalLayout
                    class="sapUiContentPadding"
                    width="100%">
                <l:content>
                    <l:HorizontalLayout
                            class="sapUiContentPadding"
                            width="100%">
                            <l:content>
                                <ToggleButton icon="employee" text="New employee" click="handleClick" accessibleName="Add new employee"></ToggleButton>
                                <ToggleButton icon="employee" text="Disabled" click="handleClick" enabled="false" accessibleName="Add new employee"></ToggleButton>
                            </l:content>
                    </l:HorizontalLayout>
                    <l:HorizontalLayout
                            class="sapUiContentPadding"
                            width="100%">
                            <l:content>
                                <Label id="labelDesignTypes" text="Design types"/>
                                <ToggleButton text="Transparent" click="handleClick" design="Transparent" accessibleNameRef="labelDesignTypes"></ToggleButton>
                                <ToggleButton text="Success" click="handleClick" design="Positive" accessibleNameRef="labelDesignTypes"></ToggleButton>
                                <ToggleButton text="Error" click="handleClick" design="Negative" accessibleNameRef="labelDesignTypes"></ToggleButton>
                                <ToggleButton text="Warning" click="handleClick" design="Attention" accessibleNameRef="labelDesignTypes"></ToggleButton>
                                <ToggleButton text="Subscribe" click="handleClick" design="Emphasized" accessibleNameRef="labelDesignTypes"></ToggleButton>
                            </l:content>
                    </l:HorizontalLayout>
                </l:content>
            </l:VerticalLayout>
        </fiori:content>
    </fiori:Page>
</mvc:View>