<mvc:View controllerName="sap.ui.webc.main.sample.MessageStrip.C" xmlns:l="sap.ui.layout" xmlns="sap.ui.webc.main" xmlns:fiori="sap.ui.webc.fiori" xmlns:mvc="sap.ui.core.mvc" height="100%">
	<l:VerticalLayout class="sapUiContentPadding" width="100%">
		<l:content>
			<Toast id="demoToast" duration="2000"></Toast>
			<MessageStrip
				text="Default (Information) with no icon and close button"
				hideIcon="true"
				class="sapUiMediumMarginBottom"
				close="handleClose">
			</MessageStrip>
			<MessageStrip
				text="Negative with default icon and close button"
				design="Negative"
				class="sapUiMediumMarginBottom"
				close="handleClose">
			</MessageStrip>
			<MessageStrip
				text="Warning with default icon and close button"
				design="Warning"
				class="sapUiMediumMarginBottom"
				close="handleClose">
			</MessageStrip>
			<MessageStrip
				text="Positive with default icon and close button"
				design="Positive"
				class="sapUiMediumMarginBottom"
				close="handleClose">
			</MessageStrip>
			<MessageStrip
				text="Information with default icon and no close button"
				hideCloseButton="true"
				design="Information"
				class="sapUiMediumMarginBottom">
			</MessageStrip>
			<MessageStrip
				class="sapUiMediumMarginBottom"
				text="Information with custom icon"
				close="handleClose">
				<icon>
					<Icon name="locked"></Icon>
				</icon>
			</MessageStrip>
		</l:content>
	</l:VerticalLayout>
</mvc:View>