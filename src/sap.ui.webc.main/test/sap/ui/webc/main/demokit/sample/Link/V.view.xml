<mvc:View
	controllerName="sap.ui.webc.main.sample.Link.C"
	xmlns="sap.ui.webc.main"
	xmlns:fiori="sap.ui.webc.fiori"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	height="100%">
	<Toast id="demoToast" duration="1000"></Toast>

	<fiori:Page>
		<fiori:content>
			<l:VerticalLayout
				class="sapUiContentPadding"
				width="100%">
				<l:content>
					<Link text="Show message toast" click="handleClick">
					</Link>
					<Link text="Disabled link" enabled="false">
					</Link>
					<Link text="Open SAP Homepage" target="_blank" href="https://www.sap.com">
					</Link>
					<Link text="Subtle link" design="Subtle" click="handleClick">
					</Link>
					<Link text="Emphasized link" design="Emphasized" click="handleClick">
					</Link>
				</l:content>
			</l:VerticalLayout>
		</fiori:content>
	</fiori:Page>

</mvc:View>