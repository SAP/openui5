<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:f="sap.ui.layout.form"
		xmlns:core="sap.ui.core">
	<Dialog
			title="{i18n>settingsTitle}"
			class="sapUiPopupWithPadding"
			contentWidth="350px"
			id="AppSettingsDialog">
		<content>
			<l:Grid
					class="sapUiSmallMarginTop"
					hSpacing="0.5"
					vSpacing="0.5"
					defaultSpan="L6 M6 S10">
				<l:content>
					<Label text="{i18n>settingsTheme}" design="Standard" id="ThemeLabel">
						<layoutData>
							<l:GridData span="L12 M12 S12"/>
						</layoutData>
					</Label>

					<Select id="ThemeButtons" width="100%">
						<core:Item key="sap_belize" text="{i18n>themeBelize}"/>
						<core:Item key="sap_belize_plus" text="{i18n>themeBelizeDeep}"/>
						<core:Item key="sap_belize_hcb" text="{i18n>themeHCB}"/>
						<core:Item key="sap_belize_hcw" text="{i18n>themeHCW}"/>
						<layoutData>
							<l:GridData span="L12 M12 S12"/>
						</layoutData>
					</Select>

					<Label id="CompactModeLabel" text="{i18n>settingsCompactMode}" design="Standard">
						<layoutData>
							<l:GridData span="L8 M8 S8"/>
						</layoutData>
					</Label>
					<Switch id="CompactModeButtons" state="false">
						<layoutData>
							<l:GridData span="L4 M4 S4"/>
						</layoutData>
					</Switch>

					<Label id="RTLLabel" text="{i18n>settingsRTL}" design="Standard">
						<layoutData>
							<l:GridData span="L8 M8 S8"/>
						</layoutData>
					</Label>
					<Switch id="RTLButtons" state="false">
						<layoutData>
							<l:GridData span="L4 M4 S4"/>
						</layoutData>
					</Switch>
				</l:content>
			</l:Grid>
		</content>
		<beginButton>
			<Button text="{i18n>settingsOK}" press="onSaveAppSettings"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>settingsCancel}" press="onDialogCloseButton"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>

