<mvc:View
		controllerName="sap.ui.unified.sample.CalendarSpecialDaysLegend.CalendarSpecialDaysLegend"
		xmlns:l="sap.ui.layout"
		xmlns:u="sap.ui.unified"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		class="viewPadding">
	<l:VerticalLayout>
		<u:Calendar
				id="calendar1" legend="legend1"/>
		<u:CalendarLegend
				id="legend1" />
		<u:Calendar
				id="calendar2" legend="legend2"/>
		<u:CalendarLegend
				id="legend2" standardItems="Today"/>
		<ToggleButton text="Special Days" press="handleShowSpecialDays"/>
	</l:VerticalLayout>
</mvc:View>
