<mvc:View
	controllerName="sap.ui.unified.sample.ColorPickerSimplified.Controller"
	height="100%"
	xmlns="sap.ui.unified"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<m:Page showHeader="false" class="sapUiContentPadding" showNavButton="false">
		<m:content>
			<m:VBox class="sapUiSmallMargin">
				<ColorPicker id="cp" mode="HSL" displayMode="Simplified"/>
				<m:Button text="Open ColorPicker in a ResponsivePopover" press="openPopover"/>
			</m:VBox>
		</m:content>
	</m:Page>
</mvc:View>
