<mvc:View
		xmlns:mvc="sap.ui.core.mvc"
		controllerName="sap.ui.unified.sample.ColorPickerPopover.ColorPickerPopover"
		xmlns="sap.m">
	<Table id="samplesTable" headerText="Color Picker in a Popover" class="sapUiLargeMarginBottom">
		<columns>
			<Column width="30%">
				<Text text="Description"/>
			</Column>
			<Column>
				<Text text="Click 'Value help' icon to select color"/>
			</Column>
			<Column>
				<Text text="Value from liveChange event"/>
			</Column>
		</columns>
		<ColumnListItem>
			<cells>
				<Label text='Default displayMode'/>
				<Input id="colorD"
					type="Text"
					width="200px"
					placeholder="Enter Color ..."
					showValueHelp="true"
					valueHelpRequest="openDefaultModeSample"
					change="handleInputChange"/>
			</cells>
		</ColumnListItem>
		<ColumnListItem>
			<cells>
				<Label text='Large displayMode'/>
				<Input id="colorL"
					type="Text"
					width="200px"
					placeholder="Enter Color ..."
					showValueHelp="true"
					valueHelpRequest="openLargeModeSample"
					change="handleInputChange"/>
			</cells>
		</ColumnListItem>
		<ColumnListItem>
			<cells>
				<Label text='Simplified displayMode'/>
				<Input id="colorS"
					type="Text"
					width="200px"
					placeholder="Enter Color ..."
					showValueHelp="true"
					valueHelpRequest="openSimplifiedModeSample"
					change="handleInputChange"/>
			</cells>
		</ColumnListItem>
		<ColumnListItem>
			<cells>
				<Label text='With liveChange'/>
				<Input id="colorLC"
					type="Text"
					width="200px"
					placeholder="Enter Color ..."
					showValueHelp="true"
					valueHelpRequest="openLiveChangeSample"
					change="handleInputChange"/>
				<Text id="liveChangeText"/>
			</cells>
		</ColumnListItem>
	</Table>
</mvc:View>