<mvc:View
	controllerName="sap.ui.unified.sample.ColorPickerLarge.Controller"
	height="100%"
	xmlns="sap.ui.unified"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<m:Page showHeader="false" class="sapUiContentPadding" showNavButton="false">
		<m:VBox class="sapUiSmallMargin">
			<ColorPicker id="cp" mode="HSL" displayMode="Large"/>
			<m:Button text="Open ColorPicker in a ResponsivePopover" press="openPopover"/>
		</m:VBox>
	</m:Page>
</mvc:View>
