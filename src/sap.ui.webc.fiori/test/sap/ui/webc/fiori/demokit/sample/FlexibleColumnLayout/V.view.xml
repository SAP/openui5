<mvc:View controllerName="sap.ui.webc.fiori.sample.FlexibleColumnLayout.C"
	xmlns:m="sap.m"
	xmlns:main="sap.ui.webc.main"
	xmlns="sap.ui.webc.fiori"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	height="100%">

	<main:Toast id="demoToast" duration="1000" />

	<FlexibleColumnLayout id="fcl" layout="StartColumnFullScreen">

		<startColumn>
			<core:Fragment
				fragmentName="sap.ui.webc.fiori.sample.FlexibleColumnLayout.fragments.StartColumn"
				type="XML"/>
		</startColumn>

		<midColumn>
			<core:Fragment
				fragmentName="sap.ui.webc.fiori.sample.FlexibleColumnLayout.fragments.MidColumn"
				type="XML"/>
		</midColumn>

		<endColumn>
			<core:Fragment
				fragmentName="sap.ui.webc.fiori.sample.FlexibleColumnLayout.fragments.EndColumn"
				type="XML"/>
		</endColumn>

	</FlexibleColumnLayout>
</mvc:View>