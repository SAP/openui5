<mvc:View
		height="100%"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.uxap"
		xmlns:blockcolor="sap.uxap.sample.SharedBlocks"
		controllerName="sap.uxap.sample.ObjectPageBlockBase.controller.ObjectPageBlockBase"
		>
	<ObjectPageLayout id="ObjectPageLayout" subSectionLayout="{ConfigModel>/subSectionLayout}" upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageHeader objectTitle="ObjectPage BlockBase">
				<actions>
					<ObjectPageHeaderActionButton icon="sap-icon://synchronize" press="toggleTitle"
												  text="toggle title" tooltip="synchronize"/>
				</actions>
			</ObjectPageHeader>
		</headerTitle>
		<sections>
			<ObjectPageSection>
				<subSections>
					<ObjectPageSubSection title="Blocks with columnLayout 1" titleUppercase="false">
						<blocks>
							<blockcolor:BlockBlue columnLayout="auto"/>
							<blockcolor:BlockBlue columnLayout="1"/>
							<blockcolor:BlockBlue columnLayout="1"/>
						</blocks>
					</ObjectPageSubSection>

					<ObjectPageSubSection title="Blocks with columnLayout 2" titleUppercase="false">
						<blocks>
							<blockcolor:BlockBlueWithInfo showSubSectionMore="true" columnLayout="2"/>
							<blockcolor:BlockBlue columnLayout="2"/>
						</blocks>
					</ObjectPageSubSection>
					<ObjectPageSubSection title="Blocks with columnLayout 3" titleUppercase="false">
						<blocks>
							<blockcolor:BlockBlue columnLayout="3"/>
							<blockcolor:BlockBlue columnLayout="3"/>
							<blockcolor:BlockBlue columnLayout="3"/>
						</blocks>
					</ObjectPageSubSection>

				</subSections>
			</ObjectPageSection>

		</sections>
	</ObjectPageLayout>
</mvc:View>
