<mvc:View
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:forms="sap.ui.layout.form"
		xmlns="sap.m">

	<forms:Form width="100%" editable="false">
		<forms:layout>
			<forms:GridLayout/>
		</forms:layout>
		<forms:formContainers>
			<forms:FormContainer title="Phone Numbers">
				<forms:formElements>

					<forms:FormElement label="Home">
						<forms:fields>
							<Text text="+ 1 415-321-1234"/>
						</forms:fields>
					</forms:FormElement>

					<forms:FormElement label="Office phone">
						<forms:fields>
							<Text text="+ 1 415-321-5555"/>
						</forms:fields>
					</forms:FormElement>

				</forms:formElements>
			</forms:FormContainer>


			<forms:FormContainer title="Social Accounts">
				<forms:formElements>

					<forms:FormElement label="LinkedIn">
						<forms:fields>
							<Text text="/DeniseSmith"/>
						</forms:fields>
					</forms:FormElement>

					<forms:FormElement label="Twitter">
						<forms:fields>
							<Text text="@DeniseSmith"/>
						</forms:fields>
					</forms:FormElement>

				</forms:formElements>
			</forms:FormContainer>


			<forms:FormContainer title="Addresses">
				<forms:formElements>

					<forms:FormElement label="Home Address">
						<forms:fields>
							<Text text="2096 Mission Street"/>
						</forms:fields>
					</forms:FormElement>

					<forms:FormElement label="Mailing Address">
						<forms:fields>
							<Text text="PO Box 32114"/>
						</forms:fields>
					</forms:FormElement>

				</forms:formElements>
			</forms:FormContainer>


			<forms:FormContainer title="Mailing Address">
				<forms:formElements>

					<forms:FormElement label="Work">
						<forms:fields>
							<Text text="DeniseSmith@sap.com"/>
						</forms:fields>
					</forms:FormElement>

				</forms:formElements>
			</forms:FormContainer>

		</forms:formContainers>

	</forms:Form>

</mvc:View>
