<mvc:View
	controllerName="sap.ui.documentation.demoapps.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:custom="sap.ui.documentation.sdk.controls"
	displayBlock="true">
	<App
		id="app"
		class="sapUiDemoApps">
		<Page showHeader="false" enableScrolling="false">
			<ScrollContainer vertical="true" width="100%" height="100%">
				<l:BlockLayout
					id="headerLayout"
					background="Light">
					<l:BlockLayoutRow>
						<l:BlockLayoutCell
								class="sapUiDemokitLandingImageCell sapUiNoContentPadding">
							<Image
									id="phoneImage"
									src="./resources/sap/ui/documentation/demoapps/img/DemoApps_S_cropped.jpg"
									width="100%"
									densityAware="false"/>
							<Image
									id="desktopImage"
									class="desktopImage"
									src="./resources/sap/ui/documentation/demoapps/img/DemoApps_M_and_L_cropped.jpg"
									width="100%"/>
							<l:Grid
									width="100%"
									class="headerGrid"
									hSpacing="0"
									defaultSpan="L6 M6 S12">
								<l:VerticalLayout width="100%" class="sapUiTinyMarginEnd">
									<Text class="headerText" text="{i18n>pageTitle}" width="100%" textAlign="Left"/>
									<Button
											class="actionButton headerButton"
											id="download"
											text="{i18n>downloadButtonText}"
											type="Emphasized"
											press="onDownloadButtonPress"
											icon="sap-icon://download">
									</Button>
								</l:VerticalLayout>
								<Image
										src="resources/sap/ui/documentation/demoapps/img/demoAppsTeaser.png"
										densityAware="false"
										width="100%"/>
							</l:Grid>
						</l:BlockLayoutCell>
					</l:BlockLayoutRow>
				</l:BlockLayout>
				<l:BlockLayout
					id="demoAppsLayout"
					content="{
						path: '/demoAppsByCategory'
					}"
					background="Light">
					<l:BlockLayoutRow content="{
						path: '',
						factory: '.createDemoAppRow'
					}"/>
				</l:BlockLayout>
				<l:BlockLayout
					id="demoAppsFooter">
					<l:BlockLayoutRow>
						<l:BlockLayoutCell
								class="demokitInitialPagesColorPatternFContrast">
							<HBox
									justifyContent="SpaceBetween"
									alignItems="Center">
								<Image
										src="./resources/sap/ui/documentation/sdk/images/logo_sap.png"
										height="2.5rem">
								</Image>
								<HBox
										width="100%"
										justifyContent="End"
										wrap="Wrap"
										visible="{=!${appView>/isOpenUI5}}">
									<Link
											class="demokitInitialPagesBrightLink sapUiLargeMarginEnd"
											text="Legal Disclosure"
											href="https://www.sap.com/corporate/en/legal/impressum.html"
											target="_blank"/>
									<Link
											class="demokitInitialPagesBrightLink sapUiLargeMarginEnd"
											text="Privacy"
											href="https://help.hana.ondemand.com/privacy.htm"
											target="_blank"/>
									<Link
											class="demokitInitialPagesBrightLink"
											text="Terms of use"
											href="https://help.hana.ondemand.com/terms_of_use.html"
											target="_blank"/>
								</HBox>
							</HBox>
						</l:BlockLayoutCell>
					</l:BlockLayoutRow>
				</l:BlockLayout>
			</ScrollContainer>
			<dependents>
				<SelectDialog id="downloadDialog"
					items="{/demoApps}"
					title="{i18n>downloadDialogTitle}"
					liveChange="onSearch"
					confirm="onDownloadPress">
					<InputListItem
						visible="{= !!${config} }"
						label="{name}"
						type="Active">
						<customData>
							<core:CustomData key="config" value="{config}"/>
						</customData>
						<Button
							text="{i18n>downloadButtonText}"
							type="Emphasized"
							press="onDownloadPress"/>
					</InputListItem>
				</SelectDialog>
			</dependents>
		</Page>
	</App>
</mvc:View>
