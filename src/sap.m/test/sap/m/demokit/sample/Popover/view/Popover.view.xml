<mvc:View
	controllerName="sap.m.sample.Popover.controller.Popover"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Button
				text="Show Popover"
				press=".handlePopoverPress"
				ariaHasPopup="Dialog" />
			<Button press=".handleResizablePopoverPress"
					text="Show Resizable Popover"
					ariaHasPopup="Dialog" />
		</l:content>
	</l:VerticalLayout>
</mvc:View>
