<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="myResizablePopover"
		title="{Name}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Right"
		resizable="true"
		initialFocus="close">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="close"
					text="Close"
					press=".handleClose" />
			</OverflowToolbar>
		</footer>
		<Image src="{ProductPicUrl}" width="15em" densityAware="false" />
	</Popover>
</core:FragmentDefinition>
