<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		title="{Name}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="email">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="email"
					text="Email"
					press="handleEmailPress" />
			</OverflowToolbar>
		</footer>
		<Image src="{ProductPicUrl}" width="15em" densityAware="false" />
	</Popover>
</core:FragmentDefinition>
