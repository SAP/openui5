<mvc:View
	controllerName="sap.m.sample.ListDeletion.List"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<List
		id="list"
		mode="Delete"
		delete="handleDelete"
		enableBusyIndicator="true"
		headerText="Products"
		growing="true"
		items="{
			path: '/Products'
		}" >
		<StandardListItem
			title="{Name}"
			info="{Price} EUR"
			description="{ShortDescription}" />
	</List>
</mvc:View>