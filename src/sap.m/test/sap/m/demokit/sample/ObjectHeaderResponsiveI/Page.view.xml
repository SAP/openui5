<mvc:View
	height="100%"
	controllerName="sap.m.sample.ObjectHeaderResponsiveI.Page"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<ObjectHeader
		id="oh1"
		responsive="true"
		fullScreenOptimized="true"
		binding="{/ProductCollection/0}"
		intro="{Description}"
		title="Long title truncated to 80 chars on all devices and to 50 chars on phone portrait"
		number="{Price}"
		numberUnit="{CurrencyCode}"
		showMarkers="true"
		markFlagged="true"
		markFavorite="true"
		numberState="Success"
		backgroundDesign="Translucent">
		<attributes>
			<ObjectAttribute
				title="Manufacturer"
				text="{SupplierName}"/>
		</attributes>
		<statuses>
			<ObjectStatus
				title="Approval"
				text="Pending"
				state="Warning"/>
		</statuses>
		<headerContainer>
			<IconTabBar
				id="itb1"
				selectedKey="key3"
				upperCase="true">
				<items>
				<IconTabFilter
					text="Info"
					count="{Quantity}"
					key="key1">
					<content>
						<l:VerticalLayout
							class="sapUiContentPadding"
							width="100%">
							<l:content>
								<Image src="{ProductPicUrl}"/>
								<Text text="{Width} x {Depth} x {Height} {DimUnit}"/>
							</l:content>
						</l:VerticalLayout>					
					</content>
				</IconTabFilter>
				<IconTabFilter
					text="Activities"
					count="10"
					key="key2">
					<content>
						<l:VerticalLayout
							class="sapUiContentPadding"
							width="100%">
							<l:content>
								<Text text="Activity content goes here ..."/>
							</l:content>
						</l:VerticalLayout>
					</content>
				</IconTabFilter>
				<IconTabFilter
					text="Attachments"
					count="1"
					key="key3">
					<content>
						<l:VerticalLayout
							class="sapUiContentPadding"
							width="100%">
							<l:content>
								<Link text="Attachment" press="onPress"/>
							</l:content>
						</l:VerticalLayout>
					</content>
				</IconTabFilter>
				<IconTabFilter
					text="PartnerInfo"
					key="key4"
					count="1">
					<content>
						<l:VerticalLayout
							class="sapUiContentPadding"
							width="100%">
							<l:content>
								<Link
									text="Partner SAP SE"
									target="_blank"
									href="http://www.sap.com/"/>
							</l:content>
						</l:VerticalLayout>
					</content>
				</IconTabFilter>
				</items>
			</IconTabBar>
		</headerContainer>
	</ObjectHeader>
</mvc:View>