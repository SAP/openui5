<mvc:View
	height="100%"
	controllerName="sap.m.sample.ObjectHeaderResponsiveI.Page"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<ObjectHeader
		id="oh1"
		responsive="true"
		fullScreenOptimized="true"
		binding="{/ProductCollection/0}"
		intro="{Description}"
		title="Long title truncated to 80 chars on all devices and to 50 chars on phone portrait"
		number="{
			parts:[{path:'Price'},{path:'CurrencyCode'}],
			type: 'sap.ui.model.type.Currency',
			formatOptions: {showMeasure: false}
		}"
		numberUnit="{CurrencyCode}"
		showMarkers="true"
		markFlagged="true"
		markFavorite="true"
		numberState="Success"
		backgroundDesign="Translucent"
		class="sapUiResponsivePadding--header" >
		<ObjectAttribute
			title="Manufacturer"
			text="{SupplierName}"/>
		<statuses>
			<ObjectStatus
				title="Approval"
				text="Pending"
				state="Warning"/>
		</statuses>
		<headerContainer>
			<IconTabBar
				id="itb1"
				selectedKey="key3"
				upperCase="true"
				class="sapUiResponsiveContentPadding">
				<items>
				<IconTabFilter
					text="Info"
					count="{Quantity}"
					key="key1">
						<l:VerticalLayout
							class="sapUiContentPadding"
							width="100%">
							<l:content>
								<Image src="{ProductPicUrl}"/>
								<Text text="{Width} x {Depth} x {Height} {DimUnit}"/>
							</l:content>
						</l:VerticalLayout>
				</IconTabFilter>
				<IconTabFilter
					text="Activities"
					count="10"
					key="key2">
						<l:VerticalLayout
							class="sapUiContentPadding"
							width="100%">
							<l:content>
								<Text text="Activity content goes here ..."/>
							</l:content>
						</l:VerticalLayout>
				</IconTabFilter>
				<IconTabFilter
					text="Attachments"
					count="1"
					key="key3">
					<Link text="Attachment" press="onPress"/>
				</IconTabFilter>
				<IconTabFilter
					text="PartnerInfo"
					key="key4"
					count="1">
						<Link
							text="Partner SAP SE"
							target="_blank"
							href="http://www.sap.com/"/>
				</IconTabFilter>
				</items>
			</IconTabBar>
		</headerContainer>
	</ObjectHeader>
</mvc:View>