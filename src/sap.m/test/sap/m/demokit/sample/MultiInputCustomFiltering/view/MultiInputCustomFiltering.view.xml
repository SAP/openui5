<mvc:View
	height="100%"
	controllerName="sap.m.sample.MultiInputCustomFiltering.controller.MultiInputCustomFiltering"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<Label text="MultiInput with &quot;start with&quot; filtering: enter a search term, e.g. &quot;A&quot;, and see filtered list" width="100%" labelFor="multiInput1"/>
		<MultiInput width="70%"
			id="multiInput1"
			suggestionItems="{
				path: '/ProductCollection',
				sorter: { path: 'Name' }
			}"
			showValueHelp="false">
			<core:Item key="{ProductId}" text="{Name}" />
		</MultiInput>
		<Label text="MultiInput with &quot;contains&quot; filtering: enter a search term, e.g. &quot;40&quot;, and see filtered list" width="100%" labelFor="multiInput2"/>
		<MultiInput width="70%"
			id="multiInput2"
			suggestionItems="{
				path: '/ProductCollection',
				sorter: { path: 'Name' }
			}"
			showValueHelp="false">
			<core:Item key="{ProductId}" text="{Name}" />
		</MultiInput>
	</l:VerticalLayout>
</mvc:View>
