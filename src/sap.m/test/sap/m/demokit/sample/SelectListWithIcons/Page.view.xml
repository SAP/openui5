<mvc:View
	height="100%"
	controllerName="sap.m.sample.SelectListWithIcons.Page"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
		<Page showHeader="false">
			<content>
				<SelectList
					items="{
						path: '/ProductCollection',
						sorter: { path: 'Name' }
					}">
					<core:ListItem key="{ProductId}" text="{Name}" icon="sap-icon://add-product"/>
				</SelectList>
			</content>
		</Page>
</mvc:View>