<mvc:View
	height="100%"
	controllerName="sap.m.sample.Select.Page"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		showHeader="false"
		class="sapUiContentPadding">
		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Select
                    forceSelection="false"
                    selectedKey="1239102"
					items="{
						path: '/ProductCollection',
						sorter: { path: 'Name' }
					}">
					<core:Item key="{ProductId}" text="{Name}" />
				</Select>
			</Toolbar>
		</subHeader>
		<content>
			<VBox>
				<Select
                    forceSelection="false"
                    selectedKey="2212-121-828"
					items="{
						path: '/ProductCollection',
						sorter: { path: 'Name' }
					}">
					<core:Item key="{ProductId}" text="{Name}" />
				</Select>
			</VBox>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Select
                    forceSelection="false"
                    selectedKey="K47322.1"
					type="IconOnly"
					icon="sap-icon://filter"
					autoAdjustWidth="true"
					items="{
						path: '/ProductCollection',
						sorter: { path: 'Name' }
					}">
					<core:Item key="{ProductId}" text="{Name}" />
				</Select>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>