<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		id="myFooterPopover"
		title="{Name}"
		class="sapUiContentPadding"
		placement="Bottom"
		contentWidth="320px"
		horizontalScrolling="false">
		<content>
			<Image src="{ProductPicUrl}" width="15em" />
		</content>
		<footer>
			<OverflowToolbar>
				<content>
					<ToolbarSpacer />
					<Button text="OK" />
					<Button text="Cancel" press="handleCloseFooterButton" />
				</content>
			</OverflowToolbar>
		</footer>
	</ResponsivePopover>
</core:FragmentDefinition>