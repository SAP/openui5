<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		title="{Name}"
		class="sapUiPopupWithPadding"
		placement="Bottom" >
		<beginButton>
			<Button text="Action-A" press="handleCloseButton" />
		</beginButton>
		<endButton>
			<Button text="Action-B" press="handleCloseButton" />
		</endButton>
		<content>
			<Image src="{ProductPicUrl}" width="15em" />
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>