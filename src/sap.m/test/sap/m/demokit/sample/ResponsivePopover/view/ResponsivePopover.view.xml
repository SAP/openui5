<mvc:View
	controllerName="sap.m.sample.ResponsivePopover.controller.ResponsivePopover"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Button
				text="Show Dialog (phone) or Popover (Other)"
				press="handleResponsivePopoverPress"
				ariaHasPopup="Dialog" />

			<Button
				text="Popover with Custom Footer"
				press="handleResponsivePopoverFooterPress"
				ariaHasPopup="Dialog" />
		</l:content>
	</l:VerticalLayout>
</mvc:View>
