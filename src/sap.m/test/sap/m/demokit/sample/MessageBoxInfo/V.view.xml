<mvc:View
	controllerName="sap.m.sample.MessageBoxInfo.C"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout">
	<l:VerticalLayout class="sapUiContentPadding" width="100%">
		<Button
			text="Show Details - Text"
			press=".onShowTextInfo"
			width="250px"
			class="sapUiSmallMarginBottom" />
		<Button
			text="Show Details - FormattedText"
			press=".onShowFormattedTextInfo"
			width="250px"
			class="sapUiSmallMarginBottom" />
		<Button
			text="Show Details - JSON"
			press=".onShowJSONInfo"
			width="250px"
			class="sapUiSmallMarginBottom" />
	</l:VerticalLayout>
</mvc:View>
