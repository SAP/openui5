							class="sapUiSmallMarginBottom"
							text="Inverted Indication3 active"
							inverted="true"
							active="true"
							state="Indication03" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Inverted Indication4"
							inverted="true"
							state="Indication04" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Inverted Indication5 active"
							inverted="true"
							active="true"
							state="Indication05" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Inverted Indication6 active"
							active="true"
							inverted="true"
							icon="sap-icon://attachment"
							state="Indication06" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Inverted Indication7 active"
							active="true"
							inverted="true"
							state="Indication07" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Inverted Indication8 active"
							active="true"
							inverted="true"
							state="Indication08" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Inverted Indication9 active"
							active="true"
							inverted="true"
							state="Indication09" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Inverted Indication10"
							inverted="true"
							state="Indication10" />
					</l:VerticalLayout>	
				</l:BlockLayoutCell>
				<l:BlockLayoutCell>
					<l:VerticalLayout width="100%">
						<Label text="Inverted ObjectStatus with different indication states." design="Bold" wrapping="true" class="sapUiSmallMarginBottom"/>
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Inverted Indication11"
							inverted="true"
							state="Indication11" />
