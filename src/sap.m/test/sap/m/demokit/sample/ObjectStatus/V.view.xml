							class="sapUiSmallMarginBottom"
							text="Inverted Indication13 active"
							active="true"
							inverted="true"
							state="Indication13" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Inverted Indication14 active"
							active="true"
							inverted="true"
							icon="sap-icon://notes"
							state="Indication14" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Inverted Indication15 active"
							active="true"
							inverted="true"
							state="Indication15" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Inverted Indication16"
							inverted="true"
							state="Indication16" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Inverted Indication17 active"
							active="true"
