<mvc:View
	controllerName="sap.m.sample.ObjectStatus.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<Label text="ObjectStatus with different value states" design="Bold" wrapping="true" class="sapUiSmallMarginTop"/>
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Unknown"
			icon="sap-icon://status-inactive"
			state="None" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Currently closed"
			icon="sap-icon://hint"
			state="Information" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Product Shipped"
			icon="sap-icon://status-positive"
			state="Success" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Product Missing"
			icon="sap-icon://status-critical"
			state="Warning" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Product Damaged"
			icon="sap-icon://status-negative"
			state="Error" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Product Damaged"
			state="Error" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			title="Product status"
			text="Damaged"
			active="true"
			state="Error"
			press="handleStatusPressed"
			icon="sap-icon://alert" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			title="Test"
			active="true"
			state="Error"
			icon="sap-icon://alert" />
	</l:VerticalLayout>
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<Label text="ObjectStatus with different indication states" design="Bold" wrapping="true" class="sapUiSmallMarginTop"/>
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 1"
			state="Indication01" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 2"
			state="Indication02" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 3"
			state="Indication03" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 4"
			state="Indication04" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 5"
			state="Indication05" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 6"
			state="Indication06" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 7"
			state="Indication07" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 8"
			state="Indication08" />
	</l:VerticalLayout>
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<Label text="Inverted ObjectStatus with different states and indication states." design="Bold" wrapping="true" class="sapUiSmallMarginTop"/>
		<Label text="Note: Inverted ObjectStatus, looks as none-inverted status in HCW and HCB themes" design="Bold" wrapping="true"/>
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Unknown"
			inverted="true"
			state="None" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Inverted Indication1"
			inverted="true"
			state="Indication01" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication active"
			inverted="true"
			active="true"
			state="Indication03" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Product Shipped"
			inverted="true"
			icon="sap-icon://status-positive"
			state="Success" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Currently closed (click)"
			inverted="true"
			active="true"
			icon="sap-icon://hint"
			state="Information" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			active="true"
			inverted="true"
			state="Error"
			icon="sap-icon://alert" />

		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Inverted Indication6"
			active="true"
			inverted="true"
			state="Indication06" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Inverted Indication7"
			active="true"
			inverted="true"
			state="Indication07" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Inverted Indication8"
			active="true"
			inverted="true"
			state="Indication08" />
	</l:VerticalLayout>
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<Label text="ObjectStatus with style sapMObjectStatusLarge applied" design="Bold" wrapping="true" class="sapUiSmallMarginTop"/>
		<ObjectStatus
			class="sapMObjectStatusLarge"
			title="Product status"
			text="Shipped"
			state="Success"
			icon="sap-icon://status-positive" />
	</l:VerticalLayout>
</mvc:View>