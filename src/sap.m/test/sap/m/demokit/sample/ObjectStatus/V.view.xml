<mvc:View
	controllerName="sap.m.sample.ObjectStatus.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		width="100%">
		<l:BlockLayout>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell>
					<l:VerticalLayout class="sapUiContentPadding" width="100%">
						<Label text="ObjectStatus with different value states" design="Bold" wrapping="true" class="sapUiSmallMarginTop"/>
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Unknown"
							state="None" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Currently closed"
							icon="sap-icon://information"
							state="Information" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Product Shipped"
							icon="sap-icon://sys-enter-2"
							state="Success" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Product Missing"
							icon="sap-icon://alert"
							state="Warning" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Product Damaged"
							icon="sap-icon://error"
							state="Error" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Product Damaged"
							state="Error" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							title="Product status"
							text="Damaged"
							active="true"
							state="Error"
							press="handleStatusPressed"
							icon="sap-icon://error" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							title="Test"
							active="true"
							state="Error"
							icon="sap-icon://error" />
					</l:VerticalLayout>	
				</l:BlockLayoutCell>
				<l:BlockLayoutCell>
					<l:VerticalLayout class="sapUiContentPadding" width="100%">
						<Label text="Inverted ObjectStatus with different value states." design="Bold" wrapping="true" class="sapUiSmallMarginTop"/>
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Unknown"
							inverted="true"
							state="None" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Currently closed (click)"
							inverted="true"
							active="true"
							icon="sap-icon://information"
							state="Information" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Product Shipped"
							inverted="true"
							icon="sap-icon://sys-enter-2"
							state="Success" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Product Missing"
							inverted="true"
							icon="sap-icon://alert"
							state="Warning" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Product Damaged"
							active="true"
							inverted="true"
							state="Error"
							icon="sap-icon://error" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							active="true"
							inverted="true"
							state="Error"
							icon="sap-icon://error" />
					</l:VerticalLayout>	
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</l:VerticalLayout>
	<l:VerticalLayout class="sapUiContentPadding" width="100%">
		<l:BlockLayout>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell>
					<Label text="ObjectStatus with different indication states." design="Bold" wrapping="true" class="sapUiSmallMarginBottom"/>
					<l:VerticalLayout width="100%">	
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Indication 1"
							state="Indication01" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Indication 2"
							state="Indication02" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Indication 3"
							state="Indication03" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Indication 4 active"
							active="true"
							state="Indication04" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Indication 5"
							state="Indication05" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Indication 6"
							state="Indication06" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Indication 7"
							state="Indication07" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Indication 8"
							state="Indication08" />
					</l:VerticalLayout>	
				</l:BlockLayoutCell>
				<l:BlockLayoutCell>
					<Label text="Inverted ObjectStatus with different indication states." design="Bold" wrapping="true" class="sapUiSmallMarginBottom"/>
					<l:VerticalLayout width="100%">
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Inverted Indication1"
							inverted="true"
							state="Indication01" />
						<ObjectStatus
							class="sapUiSmallMarginBottom"
							text="Inverted Indication2"
							inverted="true"
							state="Indication02" />
