<mvc:View
	controllerName="sap.m.sample.ObjectStatus.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<Label text="ObjectStatus with different value states" design="Bold" wrapping="true" class="sapUiSmallMarginTop"/>
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Unknown"
			state="None" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Currently closed"
			icon="sap-icon://information"
			state="Information" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Product Shipped"
			icon="sap-icon://sys-enter-2"
			state="Success" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Product Missing"
			icon="sap-icon://alert"
			state="Warning" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Product Damaged"
			icon="sap-icon://error"
			state="Error" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Product Damaged"
			state="Error" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			title="Product status"
			text="Damaged"
			active="true"
			state="Error"
			press="handleStatusPressed"
			icon="sap-icon://error" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			title="Test"
			active="true"
			state="Error"
			icon="sap-icon://error" />
	</l:VerticalLayout>
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<Label text="ObjectStatus with different indication states" design="Bold" wrapping="true" class="sapUiSmallMarginTop"/>
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 1"
			state="Indication01" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 2"
			state="Indication02" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 3"
			state="Indication03" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 4"
			state="Indication04" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 5"
			state="Indication05" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 6"
			state="Indication06" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 7"
			state="Indication07" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication 8"
			state="Indication08" />
	</l:VerticalLayout>
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<Label text="Inverted ObjectStatus with different states and indication states." design="Bold" wrapping="true" class="sapUiSmallMarginTop"/>
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Unknown"
			inverted="true"
			state="None" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Inverted Indication1"
			inverted="true"
			state="Indication01" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Indication active"
			inverted="true"
			active="true"
			state="Indication03" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Product Shipped"
			inverted="true"
			icon="sap-icon://sys-enter-2"
			state="Success" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Currently closed (click)"
			inverted="true"
			active="true"
			icon="sap-icon://information"
			state="Information" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Product Damaged"
			active="true"
			inverted="true"
			state="Error"
			icon="sap-icon://error" />

		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Inverted Indication6"
			active="true"
			inverted="true"
			state="Indication06" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Inverted Indication7"
			active="true"
			inverted="true"
			state="Indication07" />
		<ObjectStatus
			class="sapUiSmallMarginBottom"
			text="Inverted Indication8"
			active="true"
			inverted="true"
			state="Indication08" />
	</l:VerticalLayout>
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<Label text="ObjectStatus with style sapMObjectStatusLarge applied" design="Bold" wrapping="true" class="sapUiSmallMarginTop"/>
		<ObjectStatus
			class="sapMObjectStatusLarge"
			title="Product status"
			text="Shipped"
			state="Success"
			icon="sap-icon://sys-enter-2" />
	</l:VerticalLayout>
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<Label text="ObjectStatus with and without sapMObjectStatusLongText CSS class" design="Bold" wrapping="true" class="sapUiSmallMarginTop"/>
		<Table>
			<columns>
				<Column>
					<Text text="ObjectStatus with default text wrapping"></Text>
				</Column>
				<Column>
					<Text text="ObjectStatus with enchanced text wrapping via 'sapMObjectStatusLongText' CSS class"></Text>
				</Column>
			</columns>
			<ColumnListItem>
				<cells>
					<ObjectStatus
						class=""
						title="Product status"
						text="VeryLongTextToDemonstrateWrappingVeryLongTextToDemonstrateWrappingVeryLongTextToDemonstrateWrappingVeryLongTextToDemonstrateWrapping"/>

					<ObjectStatus
						class="sapMObjectStatusLongText"
						title="Product status"
						text="VeryLongTextToDemonstrateWrappingVeryLongTextToDemonstrateWrappingVeryLongTextToDemonstrateWrappingVeryLongTextToDemonstrateWrapping"/>
				</cells>
			</ColumnListItem>
		</Table>
	</l:VerticalLayout>
</mvc:View>