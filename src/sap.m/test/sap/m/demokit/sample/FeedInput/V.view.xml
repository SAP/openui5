<mvc:View
	controllerName="sap.m.sample.FeedInput.C"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Label text="Without Icon" class="sapUiSmallMarginTop sapUiTinyMarginBottom" />
	<FeedInput
		post="onPost"
		showIcon="false" />

	<Label text="With Icon Placeholder" class="sapUiSmallMarginTop sapUiTinyMarginBottom" />
	<FeedInput
		post="onPost"
		showIcon="true" />

	<Label text="With Icon" class="sapUiSmallMarginTop sapUiTinyMarginBottom" />
	<FeedInput
		post="onPost"
		showIcon="true"
		icon="test-resources/sap/m/images/george_washington.jpg" />

	<Label text="Disabled" class="sapUiSmallMarginTop sapUiTinyMarginBottom" />
	<FeedInput
		post="onPost"
		enabled="false"
		showIcon="true"
		icon="test-resources/sap/m/images/george_washington.jpg" />

	<Label text="Rows Set to 5" class="sapUiSmallMarginTop sapUiTinyMarginBottom" />
	<FeedInput
		post="onPost"
		rows="5" />

	<Label text="With Exceeded Text" class="sapUiSmallMarginTop sapUiTinyMarginBottom" />
	<FeedInput
		post="onPost"
		maxLength="20"
		showExceededText="true" />

	<Label text="With Growing" class="sapUiSmallMarginTop sapUiTinyMarginBottom" />
	<FeedInput
		post="onPost"
		growing="true" />
</mvc:View>