<mvc:View
	controllerName="sap.m.sample.SelectDialog.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Select Dialog"
				press="handleSelectDialogPress" />
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Select Dialog (Multi)"
				press="handleSelectDialogPress">
				<customData>
					<core:CustomData
						key="multi"
						value="true" />
				</customData>
			</Button>
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Select Dialog (Remember)"
				press="handleSelectDialogPress">
				<customData>
					<core:CustomData
						key="multi"
						value="true" />
					<core:CustomData
						key="remember"
						value="true" />
				</customData>
			</Button>
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Select Dialog (growing=true and growingThreshold=15)"
				press="handleSelectDialogPress">
				<customData>
					<core:CustomData
						key="multi"
						value="true" />
					<core:CustomData
						key="remember"
						value="true" />
					<core:CustomData
						key="growing"
						value="true" />
					<core:CustomData
						key="threshold"
						value="15" />
				</customData>
			</Button>
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Select Dialog (growing=false)"
				press="handleSelectDialogPress">
				<customData>
					<core:CustomData
						key="multi"
						value="true" />
					<core:CustomData
						key="remember"
						value="true" />
					<core:CustomData
						key="growing"
						value="false" />
				</customData>
			</Button>
		</l:content>
	</l:VerticalLayout>
</mvc:View>