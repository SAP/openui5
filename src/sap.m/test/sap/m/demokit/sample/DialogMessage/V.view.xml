<mvc:View
	controllerName="sap.m.sample.DialogMessage.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Button
				text="Message Dialog"
				width="230px"
				press="onMessageDialogPress"
				class="sapUiSmallMarginBottom" />

			<Button
				text="Message Dialog (Success)"
				width="230px"
				press="onMessageSuccessDialogPress"
				class="sapUiSmallMarginBottom" />

			<Button
				text="Message Dialog (Warning)"
				width="230px"
				press="onMessageWarningDialogPress"
				class="sapUiSmallMarginBottom" />

			<Button
				text="Message Dialog (Error)"
				width="230px"
				press="onMessageErrorDialogPress"
				class="sapUiSmallMarginBottom" />
		</l:content>
	</l:VerticalLayout>
</mvc:View>