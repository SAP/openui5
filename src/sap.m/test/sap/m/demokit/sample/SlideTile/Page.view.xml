<core:View controllerName="sap.m.sample.SlideTile.Page"
	xmlns="sap.m" xmlns:core="sap.ui.core">
	<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout">
		<tiles>
			<GenericTile
				backgroundImage="test-resources/sap/m/demokit/sample/SlideTile/images/NewsImage2.png"
				frameType="TwoByOne" press="pressOnTileOne">
				<tileContent>
					<TileContent footer="August 21, 2016">
						<content>
							<NewsContent
								contentText="SAP Unveils Powerful New Player Comparision Tool Exclusively on NFL.com"
								subheader="Today, SAP News">
							</NewsContent>
						</content>
					</TileContent>
				</tileContent>
			</GenericTile>
			<GenericTile
				backgroundImage="test-resources/sap/m/demokit/sample/SlideTile/images/NewsImage1.png"
				frameType="TwoByOne" press="pressOnTileTwo">
				<tileContent>
					<TileContent footer="August 21, 2016">
						<content>
							<NewsContent
								contentText="Wind Map: Monitoring Real-Time and Forecasted Wind Conditions across the Globe"
								subheader="Today, SAP News">
							</NewsContent>
						</content>
					</TileContent>
				</tileContent>
			</GenericTile>
		</tiles>
	</SlideTile>
	<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" transitionTime="250" displayTime="2500">
		<tiles>
			<GenericTile
				backgroundImage="test-resources/sap/m/demokit/sample/SlideTile/images/NewsImage1.png"
				frameType="TwoByOne" press="pressOnTileOne">
				<tileContent>
					<TileContent footer="August 21, 2016">
						<content>
							<NewsContent
								contentText="Wind Map: Monitoring Real-Time and Forecasted Wind Conditions across the Globe"
								subheader="Today, SAP News">
							</NewsContent>
						</content>
					</TileContent>
				</tileContent>
			</GenericTile>
			<GenericTile
				backgroundImage="test-resources/sap/m/demokit/sample/SlideTile/images/NewsImage2.png"
				frameType="TwoByOne" state="Failed">
				<tileContent>
					<TileContent footer="August 21, 2016">
						<content>
							<NewsContent
								contentText="SAP Unveils Powerful New Player Comparision Tool Exclusively on NFL.com"
								subheader="Today, SAP News">
							</NewsContent>
						</content>
					</TileContent>
				</tileContent>
			</GenericTile>
		</tiles>
	</SlideTile>
</core:View>