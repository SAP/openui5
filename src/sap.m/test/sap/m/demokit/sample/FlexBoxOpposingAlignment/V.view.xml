<mvc:View
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout width="100%" >
		<l:content>

			<Panel>
				<headerToolbar>
					<Toolbar>
						<Title level="H2" text="Horizontally opposing flex items" />
					</Toolbar>
				</headerToolbar>
				<FlexBox
					alignItems="Start"
					justifyContent="SpaceBetween">
					<items>
						<Button text="1" type="Accept" />
						<Button text="2" type="Reject" />
					</items>
				</FlexBox>
			</Panel>

		</l:content>
	</l:VerticalLayout>
</mvc:View>