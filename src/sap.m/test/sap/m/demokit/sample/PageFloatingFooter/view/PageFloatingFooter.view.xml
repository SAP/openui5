<mvc:View
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	controllerName="sap.m.sample.PageFloatingFooter.controller.PageFloatingFooter">
	<Page
		id="floatingFooterPage"
		title="Floating Footer Example"
		floatingFooter="true"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer sapUiResponsivePadding--floatingFooter">

		<Button text="Toggle floating footer" press="toggleFooter"/>
		<Button text="Toggle footer visibility" press="toggleVisibility"/>
		<Button text="Add Panel" press="addPanel"/>
		<Button text="Remove Panel" press="removePanel"/>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>