<mvc:View
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="navigationExamples"
		width="100%" >
		<l:content>

			<Panel>
				<headerToolbar>
					<Toolbar>
						<Title text="Variable width" />
					</Toolbar>
				</headerToolbar>

			<FlexBox
				class="ne-flexbox1"
				width="95%"
				renderType="List"
				justifyContent="Center"
				alignItems="Center">
				<items>
					<core:HTML content="&lt;a href='javascript:return false;'&gt;Item 1&lt;/a&gt;" />
					<core:HTML content="&lt;a href='javascript:return false;'&gt;Long item 2&lt;/a&gt;" />
					<core:HTML content="&lt;a href='javascript:return false;'&gt;Item 3&lt;/a&gt;" />
				</items>
			</FlexBox>
			</Panel>

			<Panel>
				<headerToolbar>
					<Toolbar>
						<Title text="Same width, transition effect" />
					</Toolbar>
				</headerToolbar>

				<FlexBox
					class="ne-flexbox2"
					width="95%"
					renderType="List"
					justifyContent="SpaceBetween"
					alignItems="Center">
					<items>
						<core:HTML
							content="&lt;a href='javascript:return false;'&gt;Item 1&lt;/a&gt;">
							<core:layoutData>
								<FlexItemData growFactor="1" />
							</core:layoutData>
						</core:HTML>
						<core:HTML
							content="&lt;a href='javascript:return false;'&gt;Long item 2&lt;/a&gt;">
							<core:layoutData>
								<FlexItemData growFactor="1" />
							</core:layoutData>
						</core:HTML>
						<core:HTML
							content="&lt;a href='javascript:return false;'&gt;Item 3&lt;/a&gt;">
							<core:layoutData>
								<FlexItemData growFactor="1" />
							</core:layoutData>
						</core:HTML>
					</items>
				</FlexBox>

			</Panel>
		</l:content>
	</l:VerticalLayout>
</mvc:View>