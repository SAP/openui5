<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<VBox class="navigationExamples">
		<Panel headerText="Variable width">
			<FlexBox
				class="ne-flexbox1"
				renderType="List"
				justifyContent="Center"
				alignItems="Center">
				<core:HTML content="&lt;a &gt;Item 1&lt;/a&gt;" />
				<core:HTML content="&lt;a &gt;Long item 2&lt;/a&gt;" />
				<core:HTML content="&lt;a &gt;Item 3&lt;/a&gt;" />
			</FlexBox>
		</Panel>

		<Panel headerText="Same width, transition effect">
			<FlexBox
				class="ne-flexbox2"
				renderType="List"
				justifyContent="SpaceBetween"
				alignItems="Center">
				<core:HTML content="&lt;a &gt;Item 1&lt;/a&gt;">
					<core:layoutData>
						<FlexItemData growFactor="1" baseSize="25%" />
					</core:layoutData>
				</core:HTML>
				<core:HTML content="&lt;a &gt;Long item 2&lt;/a&gt;">
					<core:layoutData>
						<FlexItemData growFactor="1" baseSize="25%" />
					</core:layoutData>
				</core:HTML>
				<core:HTML content="&lt;a &gt;Item 3&lt;/a&gt;">
					<core:layoutData>
						<FlexItemData growFactor="1" baseSize="25%" />
					</core:layoutData>
				</core:HTML>
			</FlexBox>
		</Panel>
	</VBox>
</mvc:View>