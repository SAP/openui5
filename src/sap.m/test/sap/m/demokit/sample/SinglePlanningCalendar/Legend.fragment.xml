<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:core="sap.ui.core"
		xmlns:u="sap.ui.unified">
	<ResponsivePopover
			id="legendPopover"
			title="Legend"
			placement="Bottom"
			showHeader="true">
		<PlanningCalendarLegend
				appointmentItems="{
					path : '/supportedAppointmentItems',
					templateShareable: true
				}">
			<appointmentItems>
				<u:CalendarLegendItem text="{text}" type="{type}" tooltip="{text}"/>
			</appointmentItems>
		</PlanningCalendarLegend>
	</ResponsivePopover>
</core:FragmentDefinition>