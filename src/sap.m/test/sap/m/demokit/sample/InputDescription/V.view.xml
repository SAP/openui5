<mvc:View
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout">
	<l:VerticalLayout class="sapUiContentPadding" width="100%">
		<Input
			value="10"
			description="PC"
			width="100px"
			fieldWidth="60%"
			class="sapUiSmallMarginBottom" />
		<Input
			value="220"
			description="EUR / 5 pieces"
			width="200px"
			fieldWidth="60px"
			class="sapUiSmallMarginBottom" />
		<Input
			value="220.00"
			description="EUR"
			width="250px"
			fieldWidth="80%"
			showClearIcon="true"
			class="sapUiSmallMarginBottom" />
		<Input
			value="007"
			description="Bastian Schweinsteiger"
			width="300px"
			fieldWidth="50px"
			class="sapUiSmallMarginBottom" />
		<Input
			value="EDP_LAPTOP"
			ariaDescribedBy="descriptionNodeId"
			description="IT Laptops"
			width="400px"
			fieldWidth="75%"
			class="sapUiSmallMarginBottom" />
		<core:InvisibleText id="descriptionNodeId" text="Additional input description refferenced by aria-describedby." />
	</l:VerticalLayout>
</mvc:View>