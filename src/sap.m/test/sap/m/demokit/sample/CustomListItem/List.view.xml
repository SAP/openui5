<mvc:View
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<List
		headerText="Custom Content" >
		<CustomListItem type="Inactive">
				<Label text="A first custom list item ..."  class="content"/>
				<Button text="Press me!" class="content"/>
		</CustomListItem>
		<CustomListItem type="Navigation">
			<core:Icon
				src="sap-icon://lab"
				size="2em"
				class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
			<Label text="... and another one ..."   class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
			<core:Icon
				src="sap-icon://competitor"
				size="2em"
				class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
		</CustomListItem>
		<CustomListItem type="Navigation">
			<Switch state="true"  class="content"/>
			<Switch state="false"  class="content"/>
			<Label text="... followed by the very last." class="content" />
		</CustomListItem>
	</List>
</mvc:View>