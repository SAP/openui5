<mvc:View
	height="100%"
	controllerName="sap.m.sample.MultiComboBoxCustomFiltering.controller.MultiComboBoxCustomFiltering"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<Label text="MultiComboBox with &quot;starts with&quot; filtering: enter a search term, e.g. &quot;N&quot;, and see filtering results."/>
		<MultiComboBox
			id="multiCombo1"
			width="500px"
			items="{
				path: '/ProductCollection',
				sorter: { path: 'Name' }
			}">
			<core:Item key="{ProductId}" text="{Name}" />
		</MultiComboBox>
		<Label text="MultiComboBox with &quot;contains&quot; filtering: enter a search term, e.g. &quot;40&quot;, and see filtering results."/>
		<MultiComboBox
				id="multiCombo2"
				width="500px"
				items="{
				path: '/ProductCollection',
				sorter: { path: 'Name' }
			}">
			<core:Item key="{ProductId}" text="{Name}" />
		</MultiComboBox>
	</l:VerticalLayout>
</mvc:View>
