<mvc:View
	controllerName="sap.m.sample.LinkSubtle.Link"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	
	<Table id="idProductsTable"
		inset="false"
		items="{
			path: '/ProductCollection',
			sorter: {
				path: 'Name'
			}
		}">
		<headerToolbar>
			<Toolbar>
				<Title text="Products" level="H2"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column
				width="12em">
				<Text text="Name" />
			</Column>
			<Column>
				<Text text="Id" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Supplier" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Right">
				<Text text="Category" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Right">
				<Text text="Picture" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Link
						text="{Name}"
						href="{ProductPicUrl}" />
					<Link
						text="{ProductId}"
						subtle="true"
						press="handleLinkPress" />
					<Link
						text="{SupplierName}"
						subtle="true"
						press="handleLinkPress"/>
					<Link
						text="{Category}"
						subtle="true"
						press="handleLinkPress" />
					<Link
						text="picture"
						subtle="true"
						href="{ProductPicUrl}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>