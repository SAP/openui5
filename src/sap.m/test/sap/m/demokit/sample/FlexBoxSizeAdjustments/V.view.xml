				<Button text="1" width="100%" type="Emphasized" class="sapUiSmallMarginEnd" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Button>
				<Button text="2" width="100%" type="Reject" class="sapUiSmallMarginEnd">
