		xmlns:l="sap.ui.layout"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m">
	<l:VerticalLayout
			class="sapUiContentPadding"
			width="100%">
		<l:content>

			<List>
				<NotificationListGroup
						title="Orders"
						datetime="1 hour"
						showCloseButton="true"
