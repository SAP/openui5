								<Button text="Accept" type="Accept" press="onAcceptPress"></Button>
								<Button text="Reject" type="Reject" press="onRejectPress"></Button>
							</buttons>
						</NotificationListItem>
					</items>
					<buttons>
						<Button text="Accept All" type="Accept" press="onAcceptPress"></Button>
						<Button text="Reject All" type="Reject" press="onRejectPress"></Button>
					</buttons>
				</NotificationListGroup>
			</List>
		</l:content>
	</l:VerticalLayout>
