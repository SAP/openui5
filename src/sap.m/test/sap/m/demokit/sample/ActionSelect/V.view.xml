<mvc:View
	controllerName="sap.m.sample.ActionSelect.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	class="sapUiSmallMargin">
	<l:VerticalLayout>
		<l:content>
			<ActionSelect
				id="select"
				class="sapUiSmallMarginBottom"
				items="{
					path: '/ProductCollection',
					sorter: { path: 'Name' }
				}">
				<items>
					<core:Item key="{ProductId}" text="{Name}" />
				</items>
			</ActionSelect>
		</l:content>
	</l:VerticalLayout>
</mvc:View>