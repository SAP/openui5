<mvc:View
	controllerName="sap.m.sample.IconTabBarResponsivePadding.C"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<IconTabBar
		id="idIconTabBar"
		select="handleIconTabBarSelect"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--content">
		<items>
			<IconTabFilter
				showAll="true"
				count="{/ProductCollectionStats/Counts/Total}"
				text="Products"
				key="All" />
			<IconTabSeparator />
			<IconTabFilter
				icon="sap-icon://begin"
				iconColor="Positive"
				count="{/ProductCollectionStats/Counts/Weight/Ok}"
				text="Ok"
				key="Ok" />
			<IconTabFilter
				icon="sap-icon://compare"
				iconColor="Critical"
				count="{/ProductCollectionStats/Counts/Weight/Heavy}"
				text="Heavy"
				key="Heavy" />
			<IconTabFilter
				icon="sap-icon://inventory"
				iconColor="Negative"
				count="{/ProductCollectionStats/Counts/Weight/Overweight}"
				text="Overweight"
				key="Overweight" />
		</items>
	</IconTabBar>
</mvc:View>