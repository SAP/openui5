<mvc:View
	height="100%"
	controllerName="sap.m.sample.HeaderContainerLazyLoading.Page"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<ObjectHeader
		id="oh1"
		responsive="true"
		binding="{/ProductCollection/}"
		intro="{Description}"
		title="{Name}"
		number="{Price}"
		numberUnit="{CurrencyCode}"
		showMarkers="true"
		markFlagged="true"
		markFavorite="true"
		numberState="Success"
		backgroundDesign="Translucent">
		<attributes>
			<ObjectAttribute
				title="Manufacturer"
				text="{SupplierName}"/>
		</attributes>
		<statuses>
			<ObjectStatus
				title="Approval"
				text="Pending"
				state="Warning"/>
		</statuses>
		<headerContainer>
			<HeaderContainer scrollStep="200" id="headerContainer" scroll="onScroll" content="{/ContentData/}">
				<NumericContent size="S" scale="M" value="{value}" valueColor="{color}" indicator="{growth}" press="press" />
			</HeaderContainer>
		</headerContainer>
	</ObjectHeader>
</mvc:View>