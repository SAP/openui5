<mvc:View
	controllerName="sap.m.sample.DynamicMessageStripGenerator.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns="sap.m">

	<l:VerticalLayout
		class="sapUiContentPadding"
		id="oVerticalContent"
		width="100%">
		<l:content>
			<Button
				text="Generate MessageStrip"
				class="sapUiSmallMarginBottom"
				press="showMsgStrip"
				width="250px"/>
		</l:content>
	</l:VerticalLayout>
</mvc:View>
