<mvc:View
	controllerName="sap.m.sample.ListNavType.List"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<List
		headerText="Products"
		binding="{/ProductCollection}" >
		<StandardListItem
			title="{0/Name}"
			description="{0/ProductId}"
			icon="{0/ProductPicUrl}" 
			iconDensityAware="false"
			iconInset="false"
			type="Navigation" />
		<StandardListItem
			title="{1/Name}"
			description="{1/ProductId}"
			icon="{1/ProductPicUrl}"
			iconDensityAware="false"
			iconInset="false"
			type="Navigation" />
		<StandardListItem
			title="{2/Name}"
			description="{2/ProductId}"
			icon="{2/ProductPicUrl}"
			iconDensityAware="false"
			iconInset="false" />
	</List>
</mvc:View>