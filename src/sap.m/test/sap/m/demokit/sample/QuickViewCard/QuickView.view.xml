<core:View height="100%"
		   xmlns:core="sap.ui.core"
		   xmlns="sap.m"
		   xmlns:l="sap.ui.layout"
		   xmlns:html="http://www.w3.org/1999/xhtml"
		   controllerName="sap.m.sample.QuickViewCard.QuickView">
	<Page showHeader="false" class="sapUiContentPadding" showNavButton="false">
		<content>
			<l:HorizontalLayout class="sapUiSmallMarginBottom">
				<l:content>
					<Button id="buttonBack"
							enabled="false"
							text="Navigate Back"
							press="onButtonBackClick"
							class="sapUiSmallMarginEnd">
					</Button>
					<Button id="buttonHideScroll"
							text="Hide Scroll"
							press="onHideScrollClick"
							class="sapUiSmallMarginEnd">
					</Button>
					<Button id="buttonShowScroll"
							text="Show Scroll"
							press="onShowScrollClick"
							class="sapUiSmallMarginEnd">
					</Button>
					<Button id="buttonHideHeader"
							text="Hide Header"
							press="onHideHeaderClick"
							class="sapUiSmallMarginEnd">
					</Button>
					<Button id="buttonShowHeader"
							text="Show Header"
							press="onShowHeaderClick"
							class="sapUiSmallMarginEnd">
					</Button>
				</l:content>
			</l:HorizontalLayout>
			<core:Fragment fragmentName="sap.m.sample.QuickViewCard.QuickView" type="XML" />
		</content>
	</Page>
</core:View>
