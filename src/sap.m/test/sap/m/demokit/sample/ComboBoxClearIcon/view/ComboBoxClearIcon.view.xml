<mvc:View
	height="100%"
	controllerName="sap.m.sample.ComboBoxClearIcon.controller.ComboBoxClearIcon"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page showHeader="false" class="sapUiContentPadding">
		<content>
			<ComboBox
				width="300px"
				showClearIcon="true"
				items="{/ProductCollection}">
				<core:Item key="{ProductId}" text="{Name}" />
			</ComboBox>
		</content>
	</Page>
</mvc:View>