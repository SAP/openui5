<mvc:View
	height="100%"
	controllerName="sap.m.sample.RefreshResponsive.controller.RefreshResponsive"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		id="page"
		showHeader="false" >
		<subHeader>
			<Bar
				id="searchBar">
				<contentMiddle>
					<SearchField
						id="searchField"
						showRefreshButton="{device>/isNoTouch}"
						search="handleRefresh"
						width="100%" >
					</SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<PullToRefresh
				id="pullToRefresh"
				visible="{device>/isTouch}"
				refresh="handleRefresh" />
			<List id="list" items="{/ProductCollection}">
				<StandardListItem
					title="{Name}"
					description="{ProductId}"
					icon="{ProductPicUrl}"
					iconDensityAware="false"
					iconInset="false" />
			</List>
		</content>
	</Page>
</mvc:View>