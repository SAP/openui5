<mvc:View
	height="100%"
	controllerName="sap.m.sample.ObjectHeaderResponsiveIV.Page"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<ObjectHeader
		id="oh1"
		responsive="true"
		fullScreenOptimized="false"
		binding="{/ProductCollection/3}"
		icon="{ProductPicUrl}"
		iconAlt="{Name}"
		intro="{Description}"
		title="{Name}"
		titleActive="true"
		titlePress="handleTitlePress"
		number="{
			parts:[{path:'Price'},{path:'CurrencyCode'}],
			type: 'sap.ui.model.type.Currency',
			formatOptions: {showMeasure: false}
		}"
		numberUnit="{CurrencyCode}"
		showTitleSelector="true"
		titleSelectorPress="onPress"
		showMarkers="true"
		markFlagged="true"
		markFavorite="true"
		numberState="Success"
		backgroundDesign="Translucent"
		class="sapUiResponsivePadding--header" >
		<ObjectAttribute
			title="ProductID"
			text="{ProductId}"/>
		<ObjectAttribute
			title="Manufacturer"
			text="{SupplierName}"/>
		<ObjectAttribute
			title="Category"
			text="{Category}"/>
		<ObjectAttribute
			title="Weight per unit"
			text="{WeightMeasure} {WeightUnit}"/>
		<ObjectAttribute
			title="Dimension per unit"
			text="{Width} x {Depth} x {Height} {DimUnit}"/>
		<statuses>
 			<ObjectStatus
				title="Approval"
				text="Pending"
				state="Warning"/>
		</statuses>
		<headerContainer>
			<IconTabBar
				id="itb1"
				selectedKey="key3"
				upperCase="true"
				class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter
						key="info"
						icon="sap-icon://hint">
						<Text text="Info content goes here ..." />
					</IconTabFilter>
					<IconTabFilter
						key="attachments"
						icon="sap-icon://attachment"
						count="3">
						<Text text="Attachments go here ..." />
					</IconTabFilter>
					<IconTabFilter
						key="notes"
						icon="sap-icon://notes"
						count="12">
						<Text text="Notes go here ..." />
					</IconTabFilter>
					<IconTabFilter
						key="people"
						icon="sap-icon://group">
						<Text text="People content goes here ..." />
					</IconTabFilter>
					<IconTabFilter
						key="info2"
						icon="sap-icon://hint">
						<Text text="Info content goes here ..." />
					</IconTabFilter>
					<IconTabFilter
						key="attachments2"
						icon="sap-icon://attachment"
						count="3">
						<Text text="Attachments go here ..." />
					</IconTabFilter>
					<IconTabFilter
						key="notes2"
						icon="sap-icon://notes"
						count="12">
						<Text text="Notes go here ..." />
					</IconTabFilter>
					<IconTabFilter
						key="people2"
						icon="sap-icon://group">
						<Text text="People content goes here ..." />
					</IconTabFilter>
				</items>
			</IconTabBar>
		</headerContainer>
	</ObjectHeader>
</mvc:View>
