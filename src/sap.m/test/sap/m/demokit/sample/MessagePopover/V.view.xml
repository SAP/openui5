<mvc:View
		controllerName="sap.m.sample.MessagePopover.C"
		height="100%"
		xmlns:l="sap.ui.layout"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m">
	<Page
			showHeader="false"
			class="sapUiContentPadding"
			height="100%">
		<content>
			<l:VerticalLayout
					class="sapUiContentPadding"
					width="100%">
				<l:content>
					<Button
							text="Show MessagePopover (collapsed)"
							press="handleMessagePopoverPress3"
							class="sapUiSmallMarginBottom"/>

					<Button
							text="Show MessagePopover (expanded)"
							press="handleMessagePopoverPress1"/>

				</l:content>
			</l:VerticalLayout>
		</content>
		<footer>
			<Toolbar>
				<Button icon="sap-icon://alert" text="{/messagesLength}" type="Emphasized"
						press="handleMessagePopoverPress2"/>
				<ToolbarSpacer/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
