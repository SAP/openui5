<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="sap.m.sample.DateTimePickerValueState.DateTimePicker"
	xmlns="sap.m">
	<FlexBox items="{path: '/modelData'}" direction="Column">
		<VBox class="sapUiTinyMargin" >
			<Label text="{label}" labelFor="DTP" />
			<DateTimePicker
				id="DTP"
				width="100%"
				valueState="{valueState}"
				valueStateText="{valueStateText}"/>
		</VBox>
	</FlexBox>
</mvc:View>