<mvc:View controllerName="sap.m.sample.GenericTileLineMode.Page"
          height="100%"
          xmlns="sap.m"
          xmlns:core="sap.ui.core"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:l="sap.ui.layout">
	<Page showHeader="true">
		<customHeader>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Label text="Enforce small size:"/>
				<Switch id="enforceSmallSwitch" change="changeEnforceSmall" state="false"/>
				<Label text="Tile Actions:"/>
				<ComboBox selectedKey="{/scope}" items="{ path: '/scopes' }">
					<core:Item key="{key}" text="{text}"/>
				</ComboBox>
			</OverflowToolbar>
		</customHeader>
		<content>
			<MessageStrip showIcon="true"
			              type="Information"
			              text="Compare same content of Generic Tiles in regular and in line mode; no line mode equivalent for Slide Tile."
			              class="sapUiTinyMargin"/>
			<VBox class="sapUiTinyMargin">
				<l:HorizontalLayout id="TileContainerExpanded"
				                    allowWrapping="true"
				                    content="{/tiles}"
				                    class="sapUiTinyMarginTopBottom">
					<GenericTile header="{title}"
					             subheader="{subtitle}"
					             state="{=${state} || 'Loaded'}"
					             scope="{/scope}"
					             press="press"
					             class="sapUiTinyMarginEnd"
					             sizeBehavior="{/sizeBehavior}">
						<TileContent unit="{unit}" footer="{footer}">
							<NumericContent withMargin="false"
							                value="{kpivalue}"
							                valueColor="{color}"
							                indicator="{trend}"
							                scale="{scale}"/>
						</TileContent>
					</GenericTile>
				</l:HorizontalLayout>
				<l:HorizontalLayout id="SlideTileContainer"
				                    allowWrapping="true"
				                    class="sapUiTinyMarginTopBottom">
					<SlideTile id="slideTile1"
					           tiles="{/slideTile1}"
					           scope="{=${/actionsScope} ? 'Actions' : 'Display'}"
					           tooltip="SlideTile 1"
					           press="pressSlideTile"
					           class="sapUiTinyMarginEnd"
					           sizeBehavior="{/sizeBehavior}">
						<GenericTile id="tile6"
						             backgroundImage="{backgroundImage}"
						             state="{=${state} || 'Loaded'}"
						             tooltip="{tooltip}"
						             frameType="TwoByOne"
						             press="press"
						             sizeBehavior="{/sizeBehavior}">
							<TileContent footer="{footer}">
								<NewsContent contentText="{contentText}"
								             subheader="{subtitle}"/>
							</TileContent>
						</GenericTile>
					</SlideTile>
					<SlideTile id="slideTile2"
					           tiles="{/slideTile2}"
					           scope="{=${/actionsScope} ? 'Actions' : 'Display'}"
					           tooltip="SlideTile 2"
					           press="pressSlideTile"
					           transitionTime="250" displayTime="2500"
					           sizeBehavior="{/sizeBehavior}">
						<GenericTile id="tile7"
						             backgroundImage="{backgroundImage}"
						             state="{=${state} || 'Loaded'}"
						             tooltip="{tooltip}"
						             frameType="TwoByOne"
						             press="press"
						             sizeBehavior="{/sizeBehavior}">
							<TileContent footer="{footer}">
								<NewsContent contentText="{contentText}"
								             subheader="{subtitle}"/>
							</TileContent>
						</GenericTile>
					</SlideTile>
				</l:HorizontalLayout>
				<l:HorizontalLayout id="tileContainerCollapsed"
				                    allowWrapping="true"
				                    content="{/tiles}"
				                    class="sapMSampleTileContainer">
					<GenericTile id="tile4"
					             header="{title}"
					             subheader="{subtitle}"
					             state="{=${state} || 'Loaded'}"
					             scope="{=${/actionsScope} ? 'Actions' : 'Display'}"
					             mode="LineMode"
					             press="press"
					             sizeBehavior="{/sizeBehavior}">
						<TileContent footer="{footer}">
							<NumericContent withMargin="false"
							                value="{kpivalue}"
							                valueColor="{color}"
							                indicator="{trend}"
							                scale="{scale}"/>
						</TileContent>
					</GenericTile>
				</l:HorizontalLayout>
			</VBox>
		</content>
	</Page>
</mvc:View>
