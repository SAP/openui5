<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		id="myPopover"
		title="Select Product"
		placement="Bottom">
		<List
			mode="SingleSelectMaster"
			includeItemInSelection="true"
			selectionChange="handleItemSelect"
			items="{/ProductCollection}">
			<StandardListItem title="{Name}" />
		</List>
	</ResponsivePopover>
</core:FragmentDefinition>