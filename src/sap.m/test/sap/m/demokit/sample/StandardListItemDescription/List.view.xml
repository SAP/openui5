<mvc:View
	controllerName="sap.m.sample.StandardListItemDescription.List"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<List 
		id="ShortProductList"
		headerText="Products"
		items="{
			path: '/ProductCollection',
			sorter: {
				path: 'Name'
			}
		}">
		<items>
			<StandardListItem
				title="{Name}"
				description="{ProductId}" />
		</items>
	</List>
</mvc:View>