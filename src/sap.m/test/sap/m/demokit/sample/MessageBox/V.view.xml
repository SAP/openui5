<mvc:View
	controllerName="sap.m.sample.MessageBox.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Text
				text="Default Behavior"/>
			<Button
				text="Confirm"
				class="sapUiSmallMarginBottom"
				press="handleConfirmationMessageBoxPress"
				width="250px"/>
			<Button
				text="Alert"
				class="sapUiSmallMarginBottom"
				press="handleAlertMessageBoxPress"
				width="250px"/>
			<Button
				text="Error"
				class="sapUiSmallMarginBottom"
				press="handleErrorMessageBoxPress"
				width="250px"/>
			<Button
				text="Info"
				class="sapUiSmallMarginBottom"
				press="handleInfoMessageBoxPress"
				width="250px"/>
			<Button
				text="Warning"
				class="sapUiSmallMarginBottom"
				press="handleWarningMessageBoxPress"
				width="250px"/>
			<Button
				text="Success"
				class="sapUiSmallMarginBottom"
				press="handleSuccessMessageBoxPress"
				width="250px"/>

			<Text
				text="Different Ways of Setting Initial Focus"/>
			<Button
				text="Action"
				class="sapUiSmallMarginBottom"
				press="handleConfirmMessageBoxPress_InitialFocus"
				width="250px"/>
			<Button
				text="Custom button"
				class="sapUiSmallMarginBottom"
				press="handleShowMessageBoxPress_InitialFocus"
				width="250px"/>
			<Button
				text="Control"
				class="sapUiSmallMarginBottom"
				press="handleShowMessageBoxPress_InitialFocus_Control"
				width="250px"/>
		</l:content>
	</l:VerticalLayout>
</mvc:View>
