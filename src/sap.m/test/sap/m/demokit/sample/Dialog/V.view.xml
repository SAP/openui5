<mvc:View
	controllerName="sap.m.sample.Dialog.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Button
				text="Show Dialog"
				press="onStdDialogPress"
				class="sapUiSmallMarginBottom" />
			<Button
				text="Show Message Dialog"
				press="onMsgDialogPress"
				class="sapUiSmallMarginBottom" />
		</l:content>
	</l:VerticalLayout>
</mvc:View>