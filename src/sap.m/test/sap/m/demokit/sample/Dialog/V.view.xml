<mvc:View
	controllerName="sap.m.sample.Dialog.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout class="sapUiContentPadding" width="100%">
		<Button
			text="Dialog"
			width="230px"
			press=".onDefaultDialogPress"
			class="sapUiSmallMarginBottom"
			ariaHasPopup="Dialog" />
		<Button
			text="Dialog (Fixed Size)"
			width="230px"
			press=".onDialogWithSizePress"
			class="sapUiSmallMarginBottom"
			ariaHasPopup="Dialog" />
		<Button
			text="Dialog (Resizable)"
			width="230px"
			press=".onResizableDialogPress"
			class="sapUiSmallMarginBottom"
			ariaHasPopup="Dialog" />
		<Button
			text="Dialog (Draggable)"
			width="230px"
			press=".onDraggableDialogPress"
			class="sapUiSmallMarginBottom"
			ariaHasPopup="Dialog" />
		<Button
			text="Dialog with prevent close"
			width="230px"
			press=".onEscapePreventDialogPress"
			class="sapUiSmallMarginBottom"
			ariaHasPopup="Dialog" />
		<Button
			text="Dialog with responsive padding"
			width="230px"
			press=".onResponsivePaddingDialogPress"
			class="sapUiSmallMarginBottom"
			ariaHasPopup="Dialog" />
	</l:VerticalLayout>
</mvc:View>