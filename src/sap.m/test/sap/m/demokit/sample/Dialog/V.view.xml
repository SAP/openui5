<mvc:View
	controllerName="sap.m.sample.Dialog.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Button
				text="Dialog"
				width="230px"
				press="onDialogPress"
				class="sapUiSmallMarginBottom" />

			<Button
				text="Dialog (Fixed Size)"
				width="230px"
				press="onDialogWithSizePress"
				class="sapUiSmallMarginBottom" />
		</l:content>
	</l:VerticalLayout>
</mvc:View>