<mvc:View
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		title="Bar can center a Title."
		titleLevel="H2"
		class="sapUiContentPadding"
		showNavButton="true" >
		<headerContent>
			<Button icon="sap-icon://action" />
		</headerContent>
		<subHeader>
			<Toolbar>
				<Button type="Back" />
				<ToolbarSpacer></ToolbarSpacer>
				<Title text="Toolbar center" level="H3"></Title>
				<ToolbarSpacer></ToolbarSpacer>
			</Toolbar>
		</subHeader>
		<content>
            <MessageStrip text="A Toolbar's centering technique will be slightly off the center if there is a button on the left." class="sapUiTinyMargin" />
			<Toolbar>
				<Label text="Toolbar can shrink content in case of overflow.">
					<layoutData>
							<ToolbarLayoutData shrinkable="false" />
					</layoutData>
				</Label>
				<Button text="Accept" type="Accept">
					<layoutData>
							<ToolbarLayoutData shrinkable="true" />
					</layoutData>
				</Button>
				<Label text="This is a long non-shrinkable label.">
					<layoutData>
							<ToolbarLayoutData shrinkable="false" />
					</layoutData>
				</Label>
				<Button text="Reject" type="Reject">
					<layoutData>
							<ToolbarLayoutData shrinkable="true" />
					</layoutData>
				</Button>
				<Button text="Big Big Big Big Big Big Big Big Button">
					<layoutData>
							<ToolbarLayoutData shrinkable="true" />
					</layoutData>
				</Button>
			</Toolbar>

            <Label/>

			<Bar>
				<contentLeft>
					<Label text="Bar cannot really handle overflow it just cuts the content."></Label>
				</contentLeft>
				<contentMiddle>
					<Button text="Accept" type="Accept" />
					<Label text="Bar is not very performant."></Label>
					<Button text="Reject" type="Reject" />
					<Button text="Edit" />
					<Button text="Big Big Big Big Big Big Big Big Button" />
				</contentMiddle>
			</Bar>

            <Label/>

            <OverflowToolbar>
                <Label text="OverflowToolbar provides a See more (...) button for overflow.">
                    <layoutData>
                        <ToolbarLayoutData shrinkable="false" />
                    </layoutData>
                </Label>
                <Button text="Accept" type="Accept">
                    <layoutData>
                        <ToolbarLayoutData shrinkable="true" />
                    </layoutData>
                </Button>
                <Label text="This is a long non-shrinkable label">
                    <layoutData>
                        <ToolbarLayoutData shrinkable="false" />
                    </layoutData>
                </Label>
                <Button text="Reject" type="Reject">
                    <layoutData>
                        <ToolbarLayoutData shrinkable="true" />
                    </layoutData>
                </Button>
                <Button text="Big Big Big Big Big Big Big Big Button">
                    <layoutData>
                        <ToolbarLayoutData shrinkable="true" />
                    </layoutData>
                </Button>
            </OverflowToolbar>

		</content>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>