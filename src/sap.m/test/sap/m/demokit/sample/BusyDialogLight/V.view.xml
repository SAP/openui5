<mvc:View
	controllerName="sap.m.sample.BusyDialogLight.C"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Button text="Show Light Busy Dialog" 
				press="handlePress"
				class="sapUiSmallMarginBottom" />
		</l:content>
		<l:dependents>
			<core:Fragment fragmentName="sap.m.sample.BusyDialogLight.BusyDialog" type="XML">
			</core:Fragment>
		</l:dependents>
	</l:VerticalLayout>
</mvc:View>