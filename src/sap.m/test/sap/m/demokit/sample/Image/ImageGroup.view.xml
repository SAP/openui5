<mvc:View
	controllerName="sap.m.sample.Image.ImageGroup"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<HBox>
				<Image
					src="{img>/products/pic1}"
					densityAware="false"
					width="{/imageWidth}" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Image>
				<Image
					src="{img>/products/pic2}"
					densityAware="false"
					width="{/imageWidth}" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Image>
				<Image
					src="{img>/products/pic3}"
					densityAware="false"
					width="{/imageWidth}"
					press="handleImage3Press" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Image>
			</HBox>
		</l:content>
	</l:VerticalLayout>
</mvc:View>
