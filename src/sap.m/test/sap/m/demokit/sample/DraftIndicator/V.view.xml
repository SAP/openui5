<core:View height="100%"
		   xmlns:core="sap.ui.core"
		   xmlns="sap.m"
		   xmlns:l="sap.ui.layout"
		   xmlns:html="http://www.w3.org/1999/xhtml"
		   controllerName="sap.m.sample.DraftIndicator.C">
	<Page showHeader="false" class="sapUiContentPadding" showNavButton="false">
		<l:VerticalLayout>
			<l:content>
				<Button id="setSavingDraft"
						class="sapUiSmallMarginBottom"
						text="Set Saving Draft state"
						width="200px"
						press="handleSetSavingDraftPress" />
				<Button id="setSavedDraft"
						class="sapUiSmallMarginBottom"
						text="Set Draft Saved state"
						width="200px"
						press="handleShowDraftSavedPress" />
				<Button id="setClearDraft"
						class="sapUiSmallMarginBottom"
						text="Clear Draft state"
						width="200px"
						press="handleClearDraftStatePress" />
				
				<DraftIndicator id="draftIndi"></DraftIndicator>
			</l:content>
		</l:VerticalLayout>
	</Page>
</core:View>