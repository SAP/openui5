<mvc:View
	controllerName="sap.m.sample.TableAlternateRowColors.Table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Table id="idProductsTable"
		inset="false"
		alternateRowColors="true"
		items="{
			path: '/ProductCollection',
			sorter: {
				path: 'Name'
			}
		}">
		<headerToolbar>
			<Toolbar>
				<Title text="Products" level="H2"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column
				width="12em">
				<Text text="Product" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Supplier" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="End">
				<Text text="Dimensions" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier
						title="{Name}"
						text="{ProductId}"/>
					<Text
						text="{SupplierName}" />
					<Text
						text="{Width} x {Depth} x {Height} {DimUnit}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>