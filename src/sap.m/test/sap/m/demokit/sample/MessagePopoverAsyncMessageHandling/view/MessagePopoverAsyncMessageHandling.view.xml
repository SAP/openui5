<mvc:View
		controllerName="sap.m.sample.MessagePopoverAsyncMessageHandling.controller.MessagePopoverAsyncMessageHandling"
		height="100%"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m">
	<Page
		showHeader="false">
		<content>

		</content>
		<footer>
			<OverflowToolbar>
				<Button id="messagePopoverBtn"
					icon="{ path: '/', formatter: '.buttonIconFormatter' }"
					type="{ path: '/', formatter: '.buttonTypeFormatter' }"
					text= "{path: '/', formatter: '.highestSeverityMessages' }"
					press=".handleMessagePopoverPress"
					ariaHasPopup="Dialog"/>
				<ToolbarSpacer/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>
