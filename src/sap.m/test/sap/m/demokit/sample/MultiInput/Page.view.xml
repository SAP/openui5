<mvc:View height="100%" controllerName="sap.m.sample.MultiInput.Page"
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m">
	<Label text="Type in MultiInput to search and add product as token, e.g. 'H'" width="100%" labelFor="multiInput"/>
	<MultiInput width="500px"
		id="multiInput"
		suggestionItems="{
            path: '/ProductCollection',
            sorter: { path: 'Name' }
        }"
		showValueHelp="false">
		<core:Item key="{ProductId}" text="{Name}" />
	</MultiInput>
</mvc:View>
