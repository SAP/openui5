<mvc:View
	controllerName="sap.m.sample.FacetFilterCustomFilters.FacetFilter"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<VBox id="idVBox">
		<FacetFilter
			id="idFacetFilter"
			type="Simple"
			showPersonalization="true"
			liveSearch="false"
			showReset="true"
			reset="handleFacetFilterReset"
			confirm="handleConfirm"
			lists="{/ProductCollectionStats/Filters}">
				<FacetFilterList
					title="{type}"
					key="{key}"
					mode="MultiSelect"
					search="handleSearch">
				</FacetFilterList>
		</FacetFilter>

		<!-- A demo table will be appended here -->
	</VBox>
</mvc:View>