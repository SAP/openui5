<mvc:View
	height="100%"
	controllerName="sap.m.sample.MultiComboBoxTwoColumnsLayout.controller.MultiComboBoxTwoColumnsLayout"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<MultiComboBox
			showSecondaryValues= "true"
			width="500px"
			items="{
				path: '/ProductCollection',
				sorter: { path: 'Name' }
			}">
			<core:ListItem key="{ProductId}" text="{Name}" additionalText="{ProductId}"/>
		</MultiComboBox>
	</l:VerticalLayout>
</mvc:View>
