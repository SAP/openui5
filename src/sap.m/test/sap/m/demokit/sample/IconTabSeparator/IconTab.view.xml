<mvc:View
	height="100%"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Label text="No icon(='') used as separator, the separator will be a vertical line."></Label>
		</l:content>
	</l:VerticalLayout>
	<IconTabBar
		id="idIconTabBarSeparatorNoIcon"
		expanded="false"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter
				icon="sap-icon://hint"
				iconColor="Positive">
				<Text text="Info content goes here ..." />
			</IconTabFilter>
			<IconTabSeparator icon=""/>
			<IconTabFilter
				icon="sap-icon://attachment"
				iconColor="Neutral"
				count="3">
				<Text text="Attachments go here ..." />
			</IconTabFilter>
			<IconTabFilter
				icon="sap-icon://notes"
				count="12">
				<Text text="Notes go here ..." />
			</IconTabFilter>
			<IconTabSeparator icon=""/>
			<IconTabFilter
				icon="sap-icon://group"
				iconColor="Negative">
				<Text text="People content goes here ..." />
			</IconTabFilter>
		</items>
	</IconTabBar>
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Label text="Icon used as separator, you are free to choose an icon you want."></Label>
		</l:content>
	</l:VerticalLayout>
	<IconTabBar
		id="idIconTabBarSeparatorIcon"
		expanded="false"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter
				icon="sap-icon://hint"
				iconColor="Neutral">
				<Text text="Info content goes here ..." />
			</IconTabFilter>
			<IconTabFilter
				icon="sap-icon://attachment"
				iconColor="Neutral"
				count="3">
			<Text text="Attachments go here ..." />
			</IconTabFilter>
			<IconTabSeparator icon="sap-icon://process"/>
			<IconTabFilter
				icon="sap-icon://notes"
				iconColor="Positive"
				count="12">
				<Text text="Notes go here ..." />
			</IconTabFilter>
			<IconTabSeparator icon="sap-icon://process"/>
			<IconTabFilter
				icon="sap-icon://group"
				iconColor="Negative">
				<Text text="People content goes here ..." />
			</IconTabFilter>
		</items>
	</IconTabBar>
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Label text="Different separators used."></Label>
		</l:content>
	</l:VerticalLayout>
	<IconTabBar
		id="idIconTabBarSeparatorMixed"
		expanded="false"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter
				icon="sap-icon://hint"
				iconColor="Critical">
				<Text text="Info content goes here ..." />
			</IconTabFilter>
			<IconTabSeparator icon=""/>
			<IconTabFilter
				icon="sap-icon://attachment"
				iconColor="Neutral"
				count="3">
			<Text text="Attachments go here ..." />
			</IconTabFilter>
			<IconTabSeparator icon="sap-icon://vertical-grip"/>
			<IconTabFilter
				icon="sap-icon://notes"
				iconColor="Positive"
				count="12">
				<Text text="Notes go here ..." />
			</IconTabFilter>
			<IconTabSeparator icon="sap-icon://process"/>
			<IconTabFilter
				icon="sap-icon://group"
				iconColor="Negative">
				<Text text="People content goes here ..." />
			</IconTabFilter>
		</items>
	</IconTabBar>
</mvc:View>