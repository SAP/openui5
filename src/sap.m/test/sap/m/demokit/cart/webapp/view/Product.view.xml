<mvc:View
	controllerName="sap.ui.demo.cart.controller.Product"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page"
		title="{Name}"
		showNavButton="{device>/system/phone}"
		navButtonPress="onNavButtonPress" >
		<landmarkInfo>
			<PageAccessibleLandmarkInfo
				rootRole="Region"
				rootLabel="{i18n>Product_rootLabel}"
				contentRole="Main"
				contentLabel="{i18n>Product_contentLabel}"
				headerRole="Region"
				headerLabel="{i18n>Product_headerLabel}"
				footerRole="Region"
				footerLabel="{i18n>Product_footerLabel}" />
		</landmarkInfo>
		<headerContent>
			<Button
				icon="sap-icon://cart"
				visible="{device>/system/phone}"
				tooltip="{i18n>toCartButtonTooltip}"
				press="onCartButtonPress" />
			<ToolbarSpacer/>
			<Button
				icon="sap-icon://customer"
				press="onAvatarPress"
				tooltip="{i18n>avatarButtonTooltip}"/>
		</headerContent>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					icon="sap-icon://cart-3"
					press="onAddButtonPress" />
			</Toolbar>
		</footer>
		<content>
			<ObjectHeader
				title="{Name}"
				titleLevel="H3"
				number="{
					path : 'Price',
					formatter : '.formatter.price'
				}"
				numberUnit="EUR">
				<attributes>
					<ObjectAttribute
						title="{i18n>productSupplierAttributeText}"
						text="{SupplierName}" />
					<ObjectAttribute
						title="{i18n>productDescriptionAttributeText}"
						text="{ShortDescription}" />
					<ObjectAttribute
						title="{i18n>productWeightAttributeText}"
						text="{Weight} {WeightUnit}"/>
					<ObjectAttribute
						title="{i18n>productMeasuresAttributeText}"
						text="{DimensionWidth} {Unit}, {DimensionDepth} {Unit}, {DimensionHeight} {Unit}"/>
				</attributes>
				<statuses>
					<ObjectStatus
						text="{
							path : 'Status',
							formatter : '.formatter.statusText'
						}"
						state="{
							path : 'Status',
							formatter : '.formatter.statusState'
						}" />
				</statuses>
			</ObjectHeader>
			<VBox
				alignItems="Center"
				renderType="Div">
				<Image
					id="productImage"
					src="{PictureUrl}"
					decorative="true"
					densityAware="false"
					class="sapUiSmallMargin"
					width="100%"
					height="100%">
					<detailBox>
						<LightBox id="lightBox">
							<imageContent>
								<LightBoxItem
									imageSrc="{PictureUrl}"
									title="{Name}"/>
							</imageContent>
						</LightBox>
					</detailBox>
				</Image>
			</VBox>
		</content>

	</Page>
</mvc:View>
