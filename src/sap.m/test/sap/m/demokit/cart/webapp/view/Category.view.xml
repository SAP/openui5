<mvc:View
	controllerName="sap.ui.demo.cart.controller.Category"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page"
		title="{CategoryName}"
		showNavButton="true"
		navButtonPress="onNavButtonPress"
		showFooter="{device>/isNoPhone}" >
		<headerContent>
			<ToggleButton
				icon="sap-icon://complete"
				tooltip="{i18n>categoryAvailabilityFilterTooltip}"
				press="onAvailabilityFilterToggle"
				pressed="{ui>/availabilityFilterOn}"/>
			<Button
				icon="sap-icon://cart"
				tooltip="{i18n>toCartButtonTooltip}"
				press="onCartButtonPress">
			</Button>
		</headerContent>
		<content>
			<List
				id="productList"
				mode="{device>/listMode}"
				select="onProductListSelect"
				noDataText="{i18n>categoryNoData}"
				busyIndicatorDelay="0"
				items="{
					path : 'Products',
					sorter : {
						path : 'Name',
						descending : false
					}
				}">
				<items>
					<ObjectListItem
						type="{device>/listItemType}"
						icon="{
							path : 'PictureUrl',
							formatter : '.formatter.pictureUrl'
						}"
						title="{Name}"
						number="{
							path : 'Price',
							formatter : '.formatter.price'
						}"
						numberUnit="{CurrencyCode}"
						press="onProductListItemPress"
						iconDensityAware="false" >
						<attributes>
							<ObjectAttribute text="{SupplierName}"/>
						</attributes>
						<firstStatus>
							<ObjectStatus
								text="{
									path : 'Status',
									formatter : '.formatter.statusText'
								}"
								state="{
									path : 'Status',
									formatter : '.formatter.statusState'
								}" />
						</firstStatus>
					</ObjectListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>
