<mvc:View
	controllerName="sap.ui.demo.poa.view.Detail"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" >
	<Page
		id="page"
		class="sapUiFioriObjectPage"
		title=" {i18n>detailTitle}"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavBack" >
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					text="{i18n>approveButtonText}"
					type="Accept"
					enabled="{cfg>/actionsEnabled}"
					press="handleApprove" />
				<Button
					text="{i18n>rejectButtonText}"
					type="Reject"
					enabled="{cfg>/actionsEnabled}"
					press="handleReject" />
				<Button
					icon="sap-icon://forward"
					enabled="{cfg>/actionsEnabled}"
					press="handleForward" />
			</Toolbar>
		</footer>
		<content>
			<ObjectHeader
				title="{ID}"
				number="{Amount}"
				numberUnit="{CurrencyCode}" >
				<attributes>
					<ObjectAttribute
						title="{i18n>detailCreatedAt}"
						text="{
							path:'CreatedAt',
							formatter:'sap.ui.demo.poa.util.formatter.Date'
						}" />
					<ObjectAttribute
						title="{i18n>detailCreatedByName}"
						text="{CreatedByName}" />
				</attributes>
				<firstStatus>
					<ObjectStatus
						title="{i18n>detailStatus}"
						text="{OrderingStatusDesc}"
						state="{
							path:'OrderingStatusDesc',
							formatter:'sap.ui.demo.poa.util.formatter.StatusState'
						}" />
				</firstStatus>
			</ObjectHeader>
			<IconTabBar
				expanded="{device>/isNoPhone}"
				select="handleTabSelect" >
				<items>
					<IconTabFilter
						key="Info"
						text="{i18n>detailTabInfo}">
						<mvc:XMLView viewName="sap.ui.demo.poa.view.DetailInfo"></mvc:XMLView>
					</IconTabFilter>
					<IconTabFilter
						key="Notes"
						text="{i18n>detailTabNotes}">
						<!-- content is lazy loaded -->
					</IconTabFilter>
					<IconTabFilter
						key="Attachments"
						text="{i18n>detailTabAttachments}">
						<!-- content is lazy loaded -->
					</IconTabFilter>
				</items>
			</IconTabBar>
			<Table
				id="lineItemList"
				items="{path:'PurchaseOrder_Items'}" >
				<headerToolbar>
					<Toolbar>
						<Label text="{i18n>lineItemTableHeader}" />
						<ToolbarSpacer />
						<Button
							id="lineItemViewButton"
							icon="sap-icon://drop-down-list"
							press="handleLineItemViewChange" />
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<header><Label text="Product" /></header>
					</Column>
					<Column
						width="4em"
						minScreenWidth="Tablet"
						demandPopin="true"
						hAlign="Center">
						<header><Label text="Quantity" /></header>
					</Column>
					<Column
						width="7em"
						minScreenWidth="Tablet"
						demandPopin="true"
						hAlign="Center" >
						<header><Label text="Delivery Date" /></header>
					</Column>
					<Column
						hAlign="Right" >
						<header><Label text="Price" /></header>
					</Column>
				</columns>
				<ColumnListItem
					type="Navigation"
					press="handleLineItemPress" >
					<cells>
						<ObjectIdentifier
							title="{PurchaseOrderItemID}"
							text="{ProductName}"/>
							<Text
								text="{
									path:'Quantity',
									formatter:'sap.ui.demo.poa.util.formatter.Quantity'
								}"/>
							<Text
								text="{
									path:'DeliveryDate',
									formatter:'sap.ui.demo.poa.util.formatter.Date'
								}"/>
						<ObjectNumber
							number="{Amount}"
							unit="{CurrencyCode}" />
					</cells>
				</ColumnListItem>
			</Table>
		</content>
	</Page>
</mvc:View>