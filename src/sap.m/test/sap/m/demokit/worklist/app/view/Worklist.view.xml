<mvc:View
	controllerName="sap.ui.demo.worklist.controller.Worklist"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page
		id="page"
		title="{i18n>worklistViewTitle}">
		<content>
			<Table
				id="table"
				width="auto"
				class="sapUiResponsiveMargin"
				items="{
					path: '/Objects',
					sorter: {
						path: 'Name',
						descending: false
						}
					}"
				noDataText="{i18n>tableNoDataText}"
				growing="true"
				growingThreshold="10"
				growingScrollToLoad="true"
				enableBusyIndicator="false"
				updateFinished="onUpdateFinished">
				<headerToolbar>
					<Toolbar>
						<Label id="tableHeader" text="{view>/worklistTableTitle}"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column id="nameColumn">
						<Text text="{i18n>TableNameColumnTitle}" id="nameColumnTitle"/>
					</Column>
					<Column id="unitNumberColumn">
						<Text text="{i18n>TableUnitNumberColumnTitle}" id="unitNumberColumnTitle"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem
						type="Navigation"
						press="onPress">
						<cells>
							<ObjectIdentifier
								title="{Name}"/>
							<ObjectNumber
									number="{
										path: 'UnitNumber',
										formatter: 'sap.ui.demo.worklist.model.formatter.numberUnit'
									}"
									unit="{UnitOfMeasure}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<footer>
			<Toolbar id="footerToolbar">
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
