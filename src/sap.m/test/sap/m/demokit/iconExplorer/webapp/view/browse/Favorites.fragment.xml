<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Table
		id="results"
		width="auto"
		class="sapUiSmallMargin"
		mode="SingleSelectMaster"
		selectionChange=".onSelectionChange"
		items="{
			path: 'fav>/icons',
			sorter: {
				path: 'name',
				descending: false
			},
			templateShareable: true
		}"
		growing="true"
		growingThreshold="{view>/growingThreshold}"
		updateFinished=".onUpdateFinished">
		<columns>
			<Column
				id="iconColumn"
				width="3rem"
				vAlign="Middle">
				<Text
					id="iconColumnTitle"
					text="{i18n>tableIconColumnTitle}"/>
			</Column>
			<Column
				id="nameColumn"
				width="15%"
				vAlign="Middle">
				<Text
					id="nameColumnTitle"
					text="{i18n>tableNameColumnTitle}"/>
			</Column>
			<Column width="4rem">
				<Text text="{i18n>previewCopyTitle}"/>
			</Column>
			<Column width="7rem">
				<Text text="{i18n>tableNameLibrary}"/>
			</Column>
			<Column
				id="codeColumn"
				width="25%"
				minScreenWidth="Desktop"
				demandPopin="true"
				vAlign="Middle">
				<Text
					id="codeColumnTitle"
					text="{i18n>tableCodeColumnTitle}"/>
			</Column>
			<Column
				id="tagsColumn"
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End"
				vAlign="Middle">
				<Text
					id="tagsColumnTitle"
					text="{i18n>tableTagsColumnTitle}"/>
			</Column>
			<Column
				id="favColumn"
				width="2rem"
				vAlign="Middle"/>
		</columns>
		<items>
			<ColumnListItem
				type="Active">
				<cells>
					<core:Icon
						size="2rem"
						src="sap-icon://{fav>iconPath}{fav>name}"
						color="Default"
						useIconTooltip="false"/>
					<Label
						design="Bold"
						text="{fav>name}"/>
					<Button
						icon="sap-icon://copy"
						type="Transparent"
						tooltip="{i18n>previewCopyIconToClipboard}"
						press=".handleCopyToClipboardClick"
						ariaLabelledBy="labelCopyButton"/>
					<Text text="{
							path: 'view>/fontName',
							formatter: '.formatter.fontName'
						}"/>
					<Text
						text="sap-icon://{fav>iconPath}{fav>name}"/>
					<Tokenizer
						renderMode="Narrow"
						editable="false"
						width="100%"
							tokens="{
								path: 'fav>tags',
								templateShareable: true
							}">
						<Token
							text="{fav>name}"
							press=".onTagSelect"
							editable="false"/>
					</Tokenizer>
					<RatingIndicator
						iconUnselected="sap-icon://unfavorite"
						value="{
							path: 'fav>name',
							formatter: '.formatter.favoriteRating'
						}"
						maxValue="1"
						change=".onToggleFavorite"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>