<mvc:View
	controllerName="sap.ui.demo.iconexplorer.controller.Overview"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:semantic="sap.m.semantic">
	<semantic:FullscreenPage
		id="page"
		navButtonPress="onNavBack"
		showNavButton="true"
		showFooter="false"
		title="{i18n>overviewViewTitle}">
		<semantic:content>
			<IconTabBar
				id="iconTabBar"
				select="onTabSelect"
				stretchContentHeight="true"
				expandable="false"
				class="sapUiNoContentPadding">
				<items>
					<IconTabFilter
						showAll="true"
						count="{view>/iconFilterCount}"
						text="{i18n>overviewTabAllText}"
						tooltip="{i18n>overviewTabAllTooltip}"
						key="all"/>
					<IconTabSeparator/>
					<IconTabFilter
						icon="sap-icon://grid"
						text="{i18n>overviewTabGridText}"
						tooltip="{i18n>overviewTabDetailsTooltip}"
						key="grid"/>
					<IconTabFilter
						icon="sap-icon://list"
						text="{i18n>overviewTabDetailsText}"
						tooltip="{i18n>overviewTabDetailsTooltip}"
						key="details"/>
					<IconTabFilter
						icon="sap-icon://palette"
						text="{i18n>overviewTabVisualText}"
						tooltip="{i18n>overviewTabVisualTooltip}"
						key="visual"/>
					<IconTabFilter
						icon="sap-icon://favorite-list"
						text="{i18n>overviewTabFavoritesText}"
						tooltip="{i18n>overviewTabFavoritesTooltip}"
						key="favorites"/>
				</items>
				<content>
					<l:ResponsiveSplitter id="splitter" defaultPane="default">
						<l:PaneContainer>
							<l:SplitPane requiredParentWidth="400" id="default">
								<ScrollContainer id="resultContainer" vertical="true" horizontal="false" height="100%">
									<FlexBox
										width="auto"
										class="sapUiSmallMargin sapUiNoMarginBottom"
										alignItems="Stretch"
										renderType="Bare">
										<items>
											<SearchField
												id="searchField"
												tooltip="{i18n>overviewSearchTooltip}"
												liveChange="onSearch"
												class="sapUiTinyMarginEnd"
												width="auto">
												<layoutData>
													<FlexItemData growFactor="1"/>
												</layoutData>
											</SearchField>
											<ComboBox
												id="categorySelection"
												items="{/groups}"
												class=" sapUiTinyMarginEnd"
												tooltip="{i18n>overviewSelectCategoryTooltip}"
												selectionChange="onSelectCategory"
												visible="{= ${device>/system/phone} ? false : true}"
												width="auto">
												<layoutData>
													<FlexItemData growFactor="1"/>
												</layoutData>
												<core:Item
													key="{name}"
													text="{text}"/>
											</ComboBox>
										</items>
									</FlexBox>
									<OverflowToolbar
										id="tagSelection"
										visible="{= ${view>/iconFilterCount} !== 0 &amp;&amp; (${device>/system/phone} ? false : true)}"
										width="auto"
										design="Transparent"
										content="{
											path: '/groups/0/tags',
											factory: '._tagSelectionFactory',
											length: 50
										}"
										tooltip="{i18n>overviewSelectTagsTooltip}">
									</OverflowToolbar>
								</ScrollContainer>
							</l:SplitPane>
							<l:SplitPane requiredParentWidth="800">
								<ScrollContainer id="preview" visible="false">
									<layoutData><l:SplitterLayoutData size="350px"/></layoutData>
									<l:VerticalLayout width="100%" class="sapUiContentPadding">
										<Panel id="previewCopy" headerText="{i18n>previewCopyTitle}" class="previewCopy">
											<l:FixFlex
												fixFirst="false"
												vertical="false">
												<l:flexContent>
													<Input
														id="previewCopyCode"
														editable="false"
														value="sap-icon://{name}"
														class="sapUiCopyCode"/>
												</l:flexContent>
												<l:fixContent>
													<Button
														icon="sap-icon://copy"
														type="Emphasized"
														tooltip="{i18n>previewCopyToClipboard}"
														press="onCopyCodeToClipboard"
														class="sapUiTinyMarginBegin"/>
												</l:fixContent>
											</l:FixFlex>
											<l:FixFlex fixFirst="false" vertical="false">
												<l:flexContent>
													<FormattedText
														id="previewCopyIcon"
														htmlText=""
														class="sapUiCopyIcon sapMInputBaseReadonlyInner"/>
												</l:flexContent>
												<l:fixContent>
													<Button
														icon="sap-icon://copy"
														type="Emphasized"
														tooltip="{i18n>previewCopyToClipboard}"
														press="onCopyIconToClipboard"
														class="sapUiTinyMarginBegin"/>
												</l:fixContent>
											</l:FixFlex>
											<l:FixFlex fixFirst="false" vertical="false">
												<l:flexContent>
													<Input
														id="previewCopyUnicode"
														editable="false"
														value="{path: 'name', formatter: '.formatter.getUnicodeTextByName'}"
														class="sapUiCopyCode"/>
												</l:flexContent>
												<l:fixContent>
													<Button
														icon="sap-icon://copy"
														type="Emphasized"
														tooltip="{i18n>previewCopyToClipboard}"
														press="onCopyUnicodeToClipboard"
														class="sapUiTinyMarginBegin"/>
												</l:fixContent>
											</l:FixFlex>
										</Panel>
										<Panel headerText="{i18n>previewIconTitle}" backgroundDesign="Solid" class="sapUiContentPadding">
											<l:BlockLayout
													class="centeredBlockCells"
													background="Accent">
												<l:BlockLayoutRow>
													<l:BlockLayoutCell>
														<core:Icon id="previewIcon" src="sap-icon://{name}" class="previewIcon" />
													</l:BlockLayoutCell>
												</l:BlockLayoutRow>
											</l:BlockLayout>
										</Panel>
										<Panel id="previewUseCases" headerText="{i18n>previewUseCasesTitle}">
											<l:BlockLayout
												id="useCaseLayout"
												class="centeredBlockCells"
												background="Accent">
												<l:BlockLayoutRow>
												<l:BlockLayoutCell>
													<!-- Preview for only icon buttons -->
													<Button
														icon="sap-icon://{name}"
														class="sapUiTinyMarginEnd"
														tooltip="{i18n>previewIconButton}"/>
													<Button
														icon="sap-icon://{name}"
														type="Accept"
														class="sapUiTinyMarginEnd"
														tooltip="{i18n>previewIconButton}"/>
													<Button
														icon="sap-icon://{name}"
														type="Reject"
														class="sapUiTinyMarginEnd"
														tooltip="{i18n>previewIconButton}"/>
													<Button
														icon="sap-icon://{name}"
														type="Emphasized"
														class="sapUiTinyMarginEnd"
														tooltip="{i18n>previewIconButton}"/>
												</l:BlockLayoutCell>
												<l:BlockLayoutCell>
													<!-- Preview for only icon buttons in Toolbar -->
													<OverflowToolbar
														id="previewToolbar"
														design="Solid"
														class="sapContrast sapContrastPlus">
														<Label
															text="{i18n>previewIconButtonText}"
															class="sapUiTinyMarginBegin"/>
														<ToolbarSpacer/>
														<Button
															icon="sap-icon://{name}"
															tooltip="{i18n>previewIconButton}"/>
														<Button
															icon="sap-icon://{name}"
															type="Accept"
															tooltip="{i18n>previewIconButton}"/>
														<Button
															icon="sap-icon://{name}"
															type="Reject"
															tooltip="{i18n>previewIconButton}"/>
														<Button
															icon="sap-icon://{name}"
															type="Emphasized"
															tooltip="{i18n>previewIconButton}"/>
													</OverflowToolbar>
												</l:BlockLayoutCell>
											</l:BlockLayoutRow>
											<l:BlockLayoutRow>
												<l:BlockLayoutCell>
													<StandardListItem
														id="previewListItem"
														title="{i18n>listItemText}"
														description="sap-icon://{name}"
														icon="sap-icon://{name}"
														infoState="Warning"
														highlight="Warning"/>
												</l:BlockLayoutCell>
												<l:BlockLayoutCell>
													<IconTabBar
														id="previewIconTabBar"
														expanded="true"
														expandable="false"
														headerBackgroundDesign="Solid"
														selectedKey="1"
														class="sapUiNoContentPadding semiTransparentITB">
														<items>
															<IconTabFilter
																icon="sap-icon://{name}"
																key="1"
																class=""/>
															<IconTabFilter
																icon="sap-icon://{name}"
																key="1"
																iconColor="Positive"/>
															<IconTabFilter
																icon="sap-icon://{name}"
																key="1"
																iconColor="Critical"/>
															<IconTabFilter
																icon="sap-icon://{name}"
																key="1"
																iconColor="Negative"/>
														</items>
														<content>
															<Label
																text="{i18n>previewIconTabBarText}"
																class="sapUiTinyMargin"/>
														</content>
													</IconTabBar>
												</l:BlockLayoutCell>
											</l:BlockLayoutRow>
											<l:BlockLayoutRow>
												<l:BlockLayoutCell>
													<GenericTile
														id="previewGenericTile"
														header="GenericTile"
														class="previewGenericTile"
														subheader="with Icon">
														<tileContent>
															<TileContent footer="Footer">
																<content>
																	<NumericContent
																		value="42"
																		scale="EUR"
																		valueColor="Neutral"
																		indicator="Up"
																		state="Loaded"
																		icon="sap-icon://{name}"/>
																</content>
															</TileContent>
														</tileContent>
													</GenericTile>
												</l:BlockLayoutCell>
												<l:BlockLayoutCell>
													<f:Avatar
														src="sap-icon://{name}"
														displaySize="L"
														class="sapUiTinyMarginBottom"/>
													<Text
														width="100%"
														textAlign="Center"
														text="{i18n>avatarText}"/>
												</l:BlockLayoutCell>
											</l:BlockLayoutRow>
										</l:BlockLayout>
									</Panel>
									<Panel
										id="previewInfo"
										headerText="{i18n>previewInfoTitle}">
										<ObjectAttribute
											id="unicodeInfo"
											title="{i18n>previewInfoUnicode}"
											text="?"/>
										<ObjectAttribute
											title="{i18n>previewInfoCSSClass}"
											text="icon-{name}"/>
										<ObjectAttribute
											id="categoryInfo"
											title="{i18n>previewInfoCategory}"
											text="?"/>
										<ObjectAttribute title="{i18n>previewInfoTag}"/>
										<Tokenizer
											width="100%"
											tokens="{
												path: 'tags',
												templateShareable: true
											}"
											editable="false"
											class="tagsArea" >
											<Token text="{name}" press="onTagSelect"/>
										</Tokenizer>
									</Panel>
									</l:VerticalLayout>
							</ScrollContainer>
						</l:SplitPane>
					</l:PaneContainer>
				</l:ResponsiveSplitter>
				</content>
			</IconTabBar>
		</semantic:content>

		<semantic:customHeaderContent>
			<Button
				id="surprise"
				visible="{= ${device>/system/phone} ? false : true}"
				tooltip="{i18n>overviewRandomIconButtonTooltip}"
				icon="sap-icon://activate"
				press="onSurpriseMe"/>
			<Button
				id="download"
				visible="{= ${device>/system/phone} ? false : true}"
				tooltip="{i18n>overviewDownloadButtonTooltip}"
				icon="sap-icon://download"
				press="onDownload"/>
		</semantic:customHeaderContent>

	</semantic:FullscreenPage>

</mvc:View>
