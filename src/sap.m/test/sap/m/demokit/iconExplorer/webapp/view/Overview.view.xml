<mvc:View
	controllerName="sap.ui.demo.iconexplorer.controller.Overview"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	busy="{view>/busy}">
	<f:DynamicPage
		class="sapUiNoContentPadding"
		toggleHeaderOnTitleClick="false"
		id="page">
		<f:landmarkInfo>
			<f:DynamicPageAccessibleLandmarkInfo
				rootRole="Region"
				rootLabel="{i18n>Overview_rootLabel}"
				contentRole="Main"
				contentLabel="{i18n>Overview_contentLabel}"
				headerRole="Banner"
				headerLabel="{i18n>Overview_headerLabel}"/>
		</f:landmarkInfo>
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Icon Explorer"/>
				</f:heading>
				<f:actions>
					<Button
						text="{i18n>infoTitle}"
						iconFirst="false"
						icon="sap-icon://forward"
						type="Transparent"
						press=".onNavToInfo"/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<core:Fragment fragmentName="sap.ui.demo.iconexplorer.view.browse.OverviewHeader" type="XML" />
		</f:header>
		<f:content>
			<VBox renderType="Bare" justifyContent="Center" height="100%">
				<IllustratedMessage visible="{= ${view>/getSomeResultsVisible} }" illustrationType="sapIllus-SearchEarth"/>
				<IllustratedMessage visible="{= ${view>/noResultsVisible} }" illustrationType="sapIllus-SearchFolder" title="{view>/overviewNoDataText}"/>
				<f:SidePanel visible="{= ${view>/contentVisible} }" id="mySidePanel" toggle="onToggle">
					<f:mainContent>
						<core:Fragment fragmentName="sap.ui.demo.iconexplorer.view.browse.OverviewMainContent" type="XML" />
					</f:mainContent>
					<f:items>
						<core:Fragment fragmentName="sap.ui.demo.iconexplorer.view.browse.OverviewSideContent" type="XML" />
					</f:items>
				</f:SidePanel>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>
