<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<List
		id="results"
		width="auto"
		class="sapUiTinyMargin sapUiNoContentPadding wrappingList"
		items="{
			path: 'groups/0/icons',
			length: '200',
			sorter: {
				path: 'name',
				descending: false
			},
			templateShareable: true
		}"
		noDataText="{view>/overviewNoDataText}"
		growing="true"
		growingScrollToLoad="true"
		growingThreshold="{view>/growingThreshold}"
		updateFinished="onUpdateFinished">

		<CustomListItem class="wrappingListItem sapUiTinyMargin">
			<l:VerticalLayout
				width="130px"
				class="sapThemeBaseBG-asBackgroundColor gridLayoutCell sapMLIB sapMLIBFocusable sapMFocusable">
				<core:Icon
					size="2.5rem"
					src="sap-icon://{view>/iconPath}{name}"
					color="Default"
					useIconTooltip="false"/>
				<Label
					text="{name}"
					textAlign="center"
					class="sapUiTinyMarginTopBottom"/>
				<RatingIndicator
					iconUnselected="sap-icon://unfavorite"
					value="{
						path: 'name',
						formatter: '.formatter.favoriteRating'
					}"
					maxValue="1"
					change="onToggleFavorite"/>
			</l:VerticalLayout>
		</CustomListItem>
	</List>
</core:FragmentDefinition>
