<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:core="sap.ui.core">
	<f:GridList
		id="results"
		width="auto"
		class="sapUiTinyMargin sapUiNoContentPadding"
		items="{
			path: 'groups/0/icons',
			length: '200',
			sorter: {
				path: 'name',
				descending: false
			},
			templateShareable: true
		}"
		growing="true"
		growingScrollToLoad="true"
		growingThreshold="{view>/growingThreshold}"
		updateFinished=".onUpdateFinished">

		<f:customLayout>
			<grid:GridBoxLayout boxWidth="8.125rem"/>
		</f:customLayout>

		<f:GridListItem class="sapUiTinyMargin">
			<VBox alignItems="Center">
				<core:Icon
					class="sapUiTinyMarginTop"
					size="2.5rem"
					src="sap-icon://{view>/iconPath}{name}"
					color="Default"
					useIconTooltip="false"/>
				<Label
					text="{name}"
					textAlign="Center"
					width="6rem"
					class="sapUiTinyMarginTop"/>
				<HBox>
					<RatingIndicator
						iconUnselected="sap-icon://unfavorite"
						value="{
							path: 'name',
							formatter: '.formatter.favoriteRating'
						}"
						maxValue="1"
						change=".onToggleFavorite"/>
					<Button
						icon="sap-icon://copy"
						type="Transparent"
						tooltip="{i18n>previewCopyIconToClipboard}"
						press=".handleCopyToClipboardClick"
						class="sapUiTinyMarginBegin"
						ariaLabelledBy="labelCopyButton"/>
				</HBox>
				</VBox>
		</f:GridListItem>
	</f:GridList>
</core:FragmentDefinition>
