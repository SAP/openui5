<mvc:View
	controllerName="sap.ui.demo.mdskeleton.view.Master"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		title="{i18n>masterTitle}">
		<content>
			<List
				id="list"
				items="{/Products}"
				noDataText="{i18n>masterListNoDataText}"
				mode="{
					path: 'device>isPhone',
					formatter: 'sap.ui.demo.mdskeleton.util.formatter.listMode'
				}"
				select="onSelect">

				<items>
					<ObjectListItem
						type="{
							path: 'device>isPhone',
							formatter: 'sap.ui.demo.mdskeleton.util.formatter.listItemType'
						}"
						press="onSelect"
						title="{ProductName}"
						number="{
							path: 'UnitPrice',
							formatter: 'sap.ui.demo.mdskeleton.util.formatter.currencyValue'
						}"
						numberUnit="USD">
					</ObjectListItem>
				</items>
			</List>
		</content>
		<!-- just to show a black empty line -->
		<footer>
			<Toolbar/>
		</footer>
	</Page>
</mvc:View>