<View
	controllerName="sap.ui.demo.mdtemplate.view.LineItem"
	xmlns="sap.m">
	<Page id="lineItemPage"
		navButtonPress="onNavBack"
		title="{i18n>lineItemTitle}"
		showNavButton="true" >
	    <headerContent>
	      <Button id="btnPrevious" icon="sap-icon://up" press="onNavToPrevLineItem" /><Button id="btnNext" icon="sap-icon://down" press="onNavToNextLineItem" />
	    </headerContent>
		<content>
			<ObjectHeader
				title="{i18n>lineItemTitle}: {LineItemID}"
				number="{UnitNumber}"
				numberUnit="{UnitOfMeasure}">
			</ObjectHeader>
		</content>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
	</Page>
</View>