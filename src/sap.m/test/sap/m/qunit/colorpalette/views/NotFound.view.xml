<mvc:View
	controllerName="cp.opa.test.app.controllers.NotFound"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">

	<IllustratedMessage
		title="{i18n>notFoundTitle}"
		description="{i18n>notFoundText}"
		illustrationType="sapIllus-PageNotFound"
		id="notFoundPage">
		<additionalContent>
			<Link id="backToMainPage" text="{i18n>backToMainPage}" press="onLinkPressed" />
		</additionalContent>
	</IllustratedMessage>

</mvc:View>