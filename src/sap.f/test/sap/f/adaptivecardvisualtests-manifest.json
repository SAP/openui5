{
	"_version": "1.17.0",
	"sap.app": {
		"id": "adativecard.embedded",
		"type": "card"
	},
	"sap.card": {
		"configuration": {
			"enableMarkdown": true
		},
		"header": {
			"title": "Adaptive Card - Inputs",
				"subTitle": "sap.ui.integration",
				"icon": {
					"src": "sap-icon://sap-ui5"
				},
				"status": {
					"text": "11.12.2019"
				}
		},
		"type": "AdaptiveCard",
		"content": {
			"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
			"type": "AdaptiveCard",
			"version": "1.0",
			"body": [
				{
				"type": "ColumnSet",
				"columns": [
				{
					"type": "Column",
					"width": "400px",
					"items": [
						{
							"type": "Container",
							"spacing": "default",
							"items": [
								{
									"type": "TextBlock",
									"size": "extraLarge",
									"weight": "bolder",
									"isSubtle": "true",
									"text": "Input.Text elements",
									"horizontalAlignment": "center"
								},
								{
									"type": "TextBlock",
									"text": "style: text",
									"id": "TextInputTextBlock",
									"color": "emphasis"
								},
								{
									"type": "Input.Text",
									"separator": true,
									"placeholder": "Name",
									"style": "text",
									"id": "SimpleVal",
									"value": "Some text"
								},
								{
									"type": "TextBlock",
									"text": "style: url",
									"color": "good"
								},
								{
									"type": "Input.Text",
									"placeholder": "Homepage",
									"style": "url",
									"id": "UrlVal",
									"value": "https://www.google.com"
								},
								{
									"type": "TextBlock",
									"text": "style: email",
									"color": "attention"
								},
								{
									"type": "Input.Text",
									"placeholder": "Email",
									"style": "email",
									"maxLength": 0,
									"id": "EmailVal",
									"value": "123@gmail.com"
								},
								{
									"type": "TextBlock",
									"text": "style: tel",
									"color": "warning"
								},
								{
									"type": "Input.Text",
									"placeholder": "Phone",
									"style": "tel",
									"maxLength": 10,
									"id": "TelVal",
									"value": "123456789"
								},
								{
									"type": "TextBlock",
									"text": "style: text, isMultiLine: true",
									"color": "accent"
								},
								{
									"type": "Input.Text",
									"placeholder": "Comments",
									"style": "text",
									"isMultiline": true,
									"maxLength": 30,
									"id": "MultiLineVal",
									"value": "The maximum length is reached."
								}
							]
						},
						{
							"type": "Container",
							"style": "emphasis",
							"spacing": "padding",
							"items": [
								{
									"type": "TextBlock",
									"text": "Input.Number element",
									"fontType": "monospace",
									"size": "large",
									"weight": "bolder",
									"horizontalAlignment": "center"
								},
								{
									"type": "Input.Number",
									"placeholder": "Quantity",
									"min": -5,
									"max": 5,
									"value": "1",
									"id": "NumVal"
								}
							]
						},
						{
							"type": "Container",
							"style": "good",
							"spacing": "medium",
							"items": [
								{
									"type": "TextBlock",
									"text": "Input.Date element",
									"size": "medium",
									"weight": "bolder",
									"horizontalAlignment": "center"
								},
								{
									"type": "Input.Date",
									"placeholder": "Due Date",
									"id": "DateVal",
									"value": "2019-09-20",
									"min": "2019-01-01",
									"max": "2020-01-01"
								}
							]
						},
						{
							"type": "Container",
							"style": "attention",
							"spacing": "small",
							"items": [
								{
									"type": "TextBlock",
									"text": "Input.Time element",
									"color": "dark",
									"size": "small",
									"weight": "bolder",
									"horizontalAlignment": "center"
								},
								{
									"type": "Input.Time",
									"id": "TimeVal",
									"value": "13:59",
									"min": "12:00",
									"max": "17:00"
								}
							]
						}
					]
				},
				{
					"type": "Column",
					"width": "400px",
					"items": [
						{
							"type": "Container",
							"spacing": "extraLarge",
							"style": "warning",
							"items": [
								{
									"type": "TextBlock",
									"size": "default",
									"weight": "bolder",
									"text": "Input.ChoiceSet elements",
									"horizontalAlignment": "center"
								},
								{
									"type": "TextBlock",
									"text": "style: compact, isMultiSelect: false"
								},
								{
									"type": "Input.ChoiceSet",
									"id": "CompactSelectVal",
									"style": "compact",
									"value": "1",
									"placeholder": "Enter a value",
									"choices": [
										{
										"title": "Red",
										"value": "1"
										},
										{
										"title": "Green",
										"value": "2"
										},
										{
										"title": "Blue",
										"value": "3"
										}
									]
								},
								{
									"type": "TextBlock",
									"text": "style: expanded, isMultiSelect: false"
								},
								{
									"type": "Input.ChoiceSet",
									"id": "SingleSelectVal",
									"style": "expanded",
									"value": "2",
									"choices": [
										{
										"title": "Red",
										"value": "1"
										},
										{
										"title": "Green",
										"value": "2"
										},
										{
										"title": "Blue",
										"value": "3"
										}
									]
								},
								{
									"type": "TextBlock",
									"text": "isMultiSelect: true"
								},
								{
									"type": "Input.ChoiceSet",
									"id": "MultiSelectVal",
									"isMultiSelect": true,
									"value": "1,3",
									"wrap": true,
									"choices": [
										{
										"title": "Red",
										"value": "1"
										},
										{
										"title": "Green",
										"value": "2"
										},
										{
										"title": "Blue",
										"value": "3"
										}
									]
								}
							]
						},
						{
							"type": "Container",
							"style": "accent",
							"spacing": "large",
							"items": [
								{
									"type": "TextBlock",
									"size": "medium",
									"color": "light",
									"weight": "bolder",
									"text": "Input.Toggle",
									"horizontalAlignment": "center"
								},
								{
									"type": "Input.Toggle",
									"title": "Unchecked toggle input with value 'Truethy value' when checked and 'Falsy value' when not checked",
									"id": "ValueOffValueOn",
									"value": "true",
									"wrap": true,
									"valueOff": "Falsy value",
									"valueOn": "Truthy value"
								},
								{
									"type": "Input.Toggle",
									"title": "Value is 'true' when checked and 'false' when not",
									"id": "Unchecked",
									"wrap": true,
									"value": "false"
								},
								{
									"type": "Input.Toggle",
									"title": "The toggle input is checked",
									"id": "Checked",
									"wrap": true,
									"value": "true",
									"valueOn": "true"
								},
								{
									"type": "Input.Toggle",
									"title": "Checked with 'false' as value and when unchecked - the value is 'Falsy value'",
									"id": "FalseValueOn",
									"wrap": true,
									"value": "false",
									"valueOn": "false",
									"valueOff": "Falsy value"
								}
							]
						}
					]
				},
				{
					"type": "Column",
					"items": [
						{
							"type": "Container",
							"spacing": "default",
							"items": [
								{
									"type": "TextBlock",
									"text": "This is some **bold** text"
								},
								{
									"type": "TextBlock",
									"text": "This is some _italic_ text"
								},
								{
									"type": "TextBlock",
									"text": "- Bullet \r- List \r",
									"wrap": true
								},
								{
									"type": "TextBlock",
									"text": "1. Numbered\r2. List\r",
									"wrap": true
								},
								{
									"type": "TextBlock",
									"text": "Check out [Adaptive Cards](http://adaptivecards.io)"
								}
							]
						}
					]
				}]
				}
			],
			"actions": [
				{
					"type": "Action.Submit",
					"title": "Action.Submit"
				},
				{
					"type": "Action.ShowCard",
					"title": "Action.ShowCard",
					"card": {
						"type": "AdaptiveCard",
						"body": [
							{
								"type": "Input.Date",
								"id": "dueDate"
							}
						],
						"actions": [
							{
							"type": "Action.Submit",
							"title": "OK"
							}
						]
					}
				},
				{
					"type": "Action.OpenUrl",
					"title": "More Information",
					"url": "http://www.company_a.example.com"
				}
			]
		}
	}
}