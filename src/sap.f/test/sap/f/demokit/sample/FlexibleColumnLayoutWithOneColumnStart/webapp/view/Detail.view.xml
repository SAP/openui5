<m:View displayBlock="true" controllerName="sap.f.FlexibleColumnLayoutWithOneColumnStart.controller.Detail" height="100%"
		xmlns="sap.uxap"
		xmlns:m="sap.m"
		xmlns:f="sap.f"
		xmlns:form="sap.ui.layout.form">

	<ObjectPageLayout id="ObjectPageLayout"
					 showTitleInHeaderContent="true"
					alwaysShowContentHeader="false"
					preserveHeaderStateOnScroll="false"
					headerContentPinnable="true"
					isChildPage="true">
                <headerTitle>
                    <ObjectPageDynamicHeaderTitle>
                        <expandedHeading>
							<m:Title text="{products>Name}" wrapping="true" class="sapUiSmallMarginEnd"/>
                        </expandedHeading>

                        <snappedHeading>
                            <m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
                                <m:FlexBox wrap="NoWrap" fitContainer="true" alignItems="Center" class="sapUiTinyMarginEnd">
                                    <f:Avatar src="../../../../../../../{products>ProductPicUrl}" displaySize="S"/>
                                    <m:Title text="{products>Name}" wrapping="true" class="sapUiTinyMarginEnd"/>
                                </m:FlexBox>
                            </m:FlexBox>
                        </snappedHeading>

                        <content>
							<m:HBox>
								<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
									<m:Label text="Main Category"/>
									<m:Text text="{products>MainCategory}"/>
								</m:VBox>
								<m:VBox class="sapUiSmallMarginEnd">
									<m:Label text="Subcategory"/>
									<m:Text text="{products>Category}"/>
								</m:VBox>
								<m:VBox class="sapUiSmallMarginEnd">
									<m:Label text="Price"/>
									<m:ObjectNumber
										number="{products>CurrencyCode} {products>Price}"/>
								</m:VBox>
							</m:HBox>
                        </content>

                        <navigationActions>
                            <m:OverflowToolbarButton type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen" tooltip="Enter Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
							<m:OverflowToolbarButton type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen" tooltip="Exit Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
                            <m:OverflowToolbarButton type="Transparent" icon="sap-icon://decline" press="handleClose"  tooltip="Close column" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
                        </navigationActions>

                    </ObjectPageDynamicHeaderTitle>
                </headerTitle>

                <headerContent>
                    <m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
                        <f:Avatar src="../../../../../../../{products>ProductPicUrl}"
								  displaySize="L">
                        </f:Avatar>
                    </m:FlexBox>
                </headerContent>
		<sections>
			<ObjectPageSection title="General Information">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<form:SimpleForm
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanL="12"
								labelSpanM="12"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="1"
								columnsM="1">
								<form:content>
									<m:Label text="Product ID"/>
									<m:Text text="{products>ProductId}"/>
									<m:Label text="Description"/>
									<m:Text text="{products>Description}"/>
									<m:Label text="Supplier"/>
									<m:Text text="{products>SupplierName}"/>
								</form:content>
							</form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="Suppliers">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:List
								width="auto"
								items="{
									path : 'products>/ProductCollectionStats/Filters/1/values'
								}">
								<m:items>
									<m:ObjectListItem
										title="{products>text}"
										type="Navigation"
										press="handleItemPress">
									</m:ObjectListItem>
								</m:items>
							</m:List>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</m:View>