							  objectSubtitle="Senior Developer"
							  objectImageURI="test-resources/sap/uxap/images/imageID_273624.png"
							  objectImageShape="Circle"
							  isObjectIconAlwaysVisible="false"
							  isObjectTitleAlwaysVisible="false"
							  isObjectSubtitleAlwaysVisible="false"
							  isActionAreaAlwaysVisible="true"
							  showPlaceholder="true">
				<actions>
					<ObjectPageHeaderActionButton icon="sap-icon://full-screen" press="handleFullScreen" tooltip="Enter Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"></ObjectPageHeaderActionButton>
					<ObjectPageHeaderActionButton icon="sap-icon://exit-full-screen" press="handleExitFullScreen" tooltip="Exit Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"></ObjectPageHeaderActionButton>
					<ObjectPageHeaderActionButton icon="sap-icon://decline" press="handleClose" tooltip="Close column" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"></ObjectPageHeaderActionButton>
				</actions>
			</ObjectPageHeader>
		</headerTitle>
		<headerContent>
			<layout:VerticalLayout>
				<m:Link text="denise-smith"/>
				<m:Button text="To detail detail" press="handleDetailPress" />
				<m:Link text="DeniseSmith@sap.com"/>
				<layout:HorizontalLayout>
				</layout:HorizontalLayout>
			</layout:VerticalLayout>
			<m:Text width="200px"
					text="Hi, I'm Denise. I am passionate about what I do and I'll go the extra mile to make the customer win."/>
			<layout:VerticalLayout>
				<m:Label text="Profile completion"/>
				<m:ProgressIndicator
						percentValue="30"
						displayValue="30%"
						showValue="true"
						state="None"/>
			</layout:VerticalLayout>
		</headerContent>
