<mvc:View
	controllerName="sap.f.cardsdemo.controller.ListContent"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:w="sap.ui.integration.widgets"
	displayBlock="true">
	<Page title="{i18n>appTitle}">
		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="List Card" />
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader>
		<mvc:View viewName="sap.f.cardsdemo.view.common.CommonCardSettings" type="XML" async="true"></mvc:View>
		<f:GridContainer
			id="gridCont"
			class="sapUiSmallMargin"
			inlineBlockLayout="true"
		>
			<w:Card id="card1" baseUrl="{cardsPlayground>/playgroundBaseUrl}" manifest="{listContentManifests>/tasksContent}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="3" />
				</w:layoutData>
			</w:Card>
			<w:Card id="card2" baseUrl="{cardsPlayground>/playgroundBaseUrl}" manifest="{listContentManifests>/listWithAvatars}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="3" />
				</w:layoutData>
			</w:Card>
			<w:Card id="card3" baseUrl="{cardsPlayground>/playgroundBaseUrl}" manifest="{listContentManifests>/listCardWithProducts}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="3" />
				</w:layoutData>
			</w:Card>
			<w:Card manifest="{cardsPlayground>/playgroundBaseUrl}/bundles/listQuickActions/manifest.json" action=".onAction">
			<w:layoutData>
				<f:GridContainerItemLayoutData columns="4" />
			</w:layoutData>
			</w:Card>
			<w:Card id="card4" manifest="{cardsPlayground>/playgroundBaseUrl}/cardcontent/listContent/quickActions.json" action=".onAction">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="4" />
				</w:layoutData>
			</w:Card>
			<w:Card id="card5" baseUrl="{cardsPlayground>/playgroundBaseUrl}" manifest="{listContentManifests>/listAttributes}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="4" />
				</w:layoutData>
			</w:Card>
			<w:Card baseUrl="{cardsPlayground>/playgroundBaseUrl}" manifest="{listContentManifests>/listAttributesIconChart}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="4" />
				</w:layoutData>
			</w:Card>
			<w:Card id="card6" baseUrl="{cardsPlayground>/playgroundBaseUrl}" manifest="{listContentManifests>/listAttributesActions}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="4" />
				</w:layoutData>
			</w:Card>
			<w:Card id="card7" baseUrl="{cardsPlayground>/playgroundBaseUrl}" manifest="{listContentManifests>/listTitleAndChart}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="4" />
				</w:layoutData>
			</w:Card>
			<w:Card id="card8" baseUrl="{cardsPlayground>/playgroundBaseUrl}" manifest="{listContentManifests>/listStackedBar}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="4" />
				</w:layoutData>
			</w:Card>
			<w:Card id="card9" baseUrl="{cardsPlayground>/playgroundBaseUrl}" manifest="{listContentManifests>/listWithMinItems}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="4" />
				</w:layoutData>
			</w:Card>
			<w:Card id="card10" baseUrl="{cardsPlayground>/playgroundBaseUrl}" manifest="{listContentManifests>/listDefaultIcons}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="4" />
				</w:layoutData>
			</w:Card>
			<w:Card baseUrl="{cardsPlayground>/playgroundBaseUrl}" manifest="{listContentManifests>/listInvisibleDescription}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="3" />
				</w:layoutData>
			</w:Card>
			<w:Card baseUrl="{cardsPlayground>/playgroundBaseUrl}" manifest="{listContentManifests>/listInvisibleCharts}">
				<w:layoutData>
					<f:GridContainerItemLayoutData columns="3" />
				</w:layoutData>
			</w:Card>
		</f:GridContainer>
	</Page>
</mvc:View>