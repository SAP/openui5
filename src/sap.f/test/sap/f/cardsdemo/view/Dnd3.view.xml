<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:w="sap.ui.integration.widgets"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:card="sap.f.cards"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:viz.data="sap.viz.ui5.data"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    displayBlock="true"
	controllerName="sap.f.cardsdemo.controller.Dnd3">

	<Page title="{i18n>appTitle}">

		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="Using drag and drop with sap.f.GridContainer, Example 3"/>
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader>

		<content>

			<Panel headerText="Tiles Group 1">
				<f:GridContainer id="grid1" items="{
						path: '/',
						key: 'uniqueId',
						factory: '.createItem'
					}">
				</f:GridContainer>
			</Panel>

			<Panel headerText="Tiles Group 2">
				<f:GridContainer id="grid2" items="{
						path: '/',
						factory: '.createItem'
					}">
				</f:GridContainer>
			</Panel>

			<Panel headerText="Card Group 1">
				<f:GridContainer id="grid3" snapToRow="true" items="{
						path: '/',
						factory: '.createItem'
					}">
				</f:GridContainer>
			</Panel>

			<Panel headerText="Links (test)">
				<List width="200px" id="links1" items="{
						path: '/',
						factory: '.createItem'
					}">
					<CustomListItem>
						<HBox>
							<Link id="link1" class="sapUiSmallMargin" text="{header}" target="_blank" href="{href}" />
						</HBox>
					</CustomListItem>
				</List>
			</Panel>

			<Panel headerText="Grid List">
				<f:GridList
					id="gridList1"
					items="{
						path: '/'
					}"
					growing="true"
					growingThreshold="9">

					<f:headerToolbar>
						<Toolbar>
							<content>
								<Title text="GridList, header (not droppable)" />
								<ToolbarSpacer/>
								<SearchField width="15rem"/>
							</content>
						</Toolbar>
					</f:headerToolbar>

					<f:customLayout>
						<grid:GridBoxLayout/>
					</f:customLayout>

					<CustomListItem>
						<VBox >
							<VBox class="sapUiSmallMargin">
								<layoutData>
									<FlexItemData growFactor="1" shrinkFactor="0" />
								</layoutData>
								<Title text="{title}" wrapping="true" />
								<Label text="{subtitle}" wrapping="true" />
							</VBox>
						</VBox>
					</CustomListItem>
				</f:GridList>
			</Panel>
		</content>
	</Page>
</mvc:View>