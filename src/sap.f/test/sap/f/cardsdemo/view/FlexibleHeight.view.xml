<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:grid="sap.ui.layout.cssgrid"
    controllerName="sap.f.cardsdemo.controller.FlexibleHeight"
    displayBlock="true">

	<Page title="{i18n>appTitle}">

		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="Adding list items sap.ui.layout.cssgrid.CSSGrid"/>
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader>

		<content>

			<Panel expandable="true" headerText="Notes">
				<VBox>
					<Text text="The example uses sap.ui.layout.cssgrid.CSSGrid"/>
					<Text text="Every card has a dimension (2x2, 6x2, etc...)"/>
					<Text text="The Grid defines the meaning of card dimensions"/>
					<Text text="Cards tries to fill empty spaces if any (Done by grid configuration)."/>
					<Text text="Breathing works."/>
					<Text text="The Grid is configured by the Fiori 3 specification."/>
					<Text text="The list card dimensions are updated when new items are added pushing the other cards."/>
				</VBox>
			</Panel>

			<Panel>
				<Label text="Grid Auto Flow - Dense (If the cards should try to fill empty spaces in the grid)"/>
				<Switch change="onSwitchChange" state="true"/>
				<Button text="Add List Item" press="onAddItemPress"/>
			</Panel>

			<Panel>
				<grid:CSSGrid id="cssgrid" wrapItemsWithDiv="true">

					<grid:customLayout>
						<grid:GridResponsiveLayout>
							<grid:layoutS>
								<grid:GridSettings
									gridTemplateColumns="repeat(4, 1fr)"
									gridAutoRows="80px"
									gridAutoFlow="RowDense"
									gridRowGap="8px"
									gridColumnGap="8px"/>
							</grid:layoutS>
							<grid:layoutM>
								<grid:GridSettings
									gridTemplateColumns="repeat(8, 1fr)"
									gridAutoRows="80px"
									gridAutoFlow="RowDense"
									gridRowGap="16px"
									gridColumnGap="16px"/>
							</grid:layoutM>
							<grid:layoutL>
								<grid:GridSettings
									gridTemplateColumns="repeat(12, 1fr)"
									gridAutoRows="80px"
									gridAutoFlow="RowDense"
									gridRowGap="16px"
									gridColumnGap="16px"/>
							</grid:layoutL>
							<grid:layoutXL>
								<grid:GridSettings
									gridTemplateColumns="repeat(16, 1fr)"
									gridAutoRows="80px"
									gridAutoFlow="RowDense"
									gridRowGap="16px"
									gridColumnGap="16px"/>
							</grid:layoutXL>
						</grid:GridResponsiveLayout>
					</grid:customLayout>

					<grid:items>

						<f:Card id="default2x2" manifest="{manifests>/flexibleHeight/card1}">
							<f:layoutData>
								<grid:GridItemLayoutData gridRow="span 2" gridColumn="span 2" />
							</f:layoutData>
						</f:Card>

						<f:Card id="default4x2withcomponent" manifest="sap.f.cardsdemo.cardcontent.listcomponent">
							<f:layoutData>
								<grid:GridItemLayoutData gridRow="span 2" gridColumn="span 4" />
							</f:layoutData>
						</f:Card>

						<f:Card id="default1x1" manifest="{manifests>/flexibleHeight/card2}">
							<f:layoutData>
								<grid:GridItemLayoutData gridColumn="span 2" />
							</f:layoutData>
						</f:Card>

						<f:Card id="default2x1" manifest="{manifests>/flexibleHeight/card3}">
							<f:layoutData>
								<grid:GridItemLayoutData gridColumn="span 2"/>
							</f:layoutData>
						</f:Card>

						<f:Card id="ddefault1x1" manifest="{manifests>/flexibleHeight/card4}">
							<f:layoutData>
								<grid:GridItemLayoutData gridColumn="span 2"/>
							</f:layoutData>
						</f:Card>

						<f:Card id="default4x1" manifest="{manifests>/flexibleHeight/card5}">
							<f:layoutData>
								<grid:GridItemLayoutData gridColumn="span 4"/>
							</f:layoutData>
						</f:Card>

						<f:Card id="ddefault6x2" manifest="{manifests>/flexibleHeight/card6}">
							<f:layoutData>
								<grid:GridItemLayoutData gridRow="span 6" gridColumn="span 2" />
							</f:layoutData>
						</f:Card>

						<f:Card id="default4x4" manifest="{manifests>/flexibleHeight/card7}">
							<f:layoutData>
								<grid:GridItemLayoutData gridRow="span 4" gridColumn="span 4" />
							</f:layoutData>
						</f:Card>

						<f:Card id="default4x4Image" manifest="{manifests>/flexibleHeight/card8}">
							<f:layoutData>
								<grid:GridItemLayoutData gridRow="span 4" gridColumn="span 4" />
							</f:layoutData>
						</f:Card>

						<f:Card id="1default2x2" manifest="{manifests>/flexibleHeight/card9}">
							<f:layoutData>
								<grid:GridItemLayoutData gridRow="span 2" gridColumn="span 2" />
							</f:layoutData>
						</f:Card>

						<f:Card id="2default2x2" manifest="{manifests>/flexibleHeight/card10}">
							<f:layoutData>
								<grid:GridItemLayoutData gridRow="span 2" gridColumn="span 2" />
							</f:layoutData>
						</f:Card>

						<f:Card id="default6x4" manifest="{manifests>/flexibleHeight/card11}">
							<f:layoutData>
								<grid:GridItemLayoutData gridRow="span 4" gridColumn="span 6" />
							</f:layoutData>
						</f:Card>

						<f:Card id="2default6x4" manifest="{manifests>/flexibleHeight/card12}">
							<f:layoutData>
								<grid:GridItemLayoutData gridRow="span 4" gridColumn="span 6" />
							</f:layoutData>
						</f:Card>

					</grid:items>
				</grid:CSSGrid>
			</Panel>
		</content>
	</Page>
</mvc:View>