{
	"itemsContent": {
		"sap.app": {
			"id": "itemsContent",
			"type": "card"
		},
		"sap.card": {
			"type": "List",
			"header": {
				"title": "Request List Content Card",
				"subTitle": "Card subtitle",
				"icon": {
					"src": "sap-icon://accept"
				}
			},
			"content": {
				"data": {
					"request": {
						"url": "./cardcontent/listContent/items.json"
					}
				},
				"item": {
					"icon": {
						"src": "{icon}"
					},
					"title": {
						"value": "{Name}"
					},
					"description": {
						"value": "{Description}"
					},
					"highlight": "{state}",
					"info": {
						"value": "{info}",
						"state": "{infoState}"
					}
				}
			}
		}
	},
	"paramsListCard": {
		"sap.app": {
			"id": "paramsListCard",
			"type": "card"
		},
		"sap.card": {
			"configuration": {
				"parameters": {
					"city": {},
					"country": {
						"value": ""
					}
				}
			},
			"type": "List",
			"header": {
				"title": "Params List Card Example"
			},
			"content": {
				"data": {
					"request": {
						"url": "./cardcontent/someitems.json"
					}
				},
				"item": {
					"icon": {
						"src": "{icon}"
					},
					"title": {
						"value": "{Name}, {parameters>/TODAY_ISO}"
					},
					"description": {
						"value": "Stationed in: {parameters>/city/value}, {parameters>/country/value}"
					},
					"highlight": "{state}"
				}
			}
		}
	},
