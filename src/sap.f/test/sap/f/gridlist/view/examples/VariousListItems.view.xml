<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:f="sap.f"
	controllerName="sap.f.gridlist.controller.Main">

	<f:GridList
		headerText="GridList with mode 'SingleSelectLeft' and BoxLayout"
		id="GridListSingleSelectLeft"
		mode="SingleSelectLeft">
		<f:GridListItem counter="25" highlight="Success" type="DetailAndActive">
			<VBox class="sapUiSmallMargin">
				<Title text="GridListItem (Recommended)" wrapping="true" />
			</VBox>
		</f:GridListItem>
		<CustomListItem counter="30" highlight="Warning" type="DetailAndActive">
			<VBox class="sapUiSmallMargin">
				<Title text="CustomListItem (NOT Recommended)" wrapping="true" />
			</VBox>
		</CustomListItem>
	</f:GridList>

</mvc:View>