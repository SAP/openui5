<mvc:View
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<VBox
		class="sapUiSmallMargin" >
		<items>
			<HBox id="stable-hbox-1">
				<Switch state="true">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Switch>
				<Switch state="false" id="stable-switch-1">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Switch>
				<Switch state="true" id="stable-switch-2" enabled="false">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Switch>
			</HBox>

			<HBox id="stable-hbox-2">
				<Switch state="true" customTextOn="Yes" customTextOff="No">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Switch>
				<Switch state="false" customTextOn="Yes" customTextOff="No">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Switch>
				<Switch state="true" customTextOn="Yes" customTextOff="No" enabled="false">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Switch>
			</HBox>
		</items>
	</VBox>
</mvc:View>