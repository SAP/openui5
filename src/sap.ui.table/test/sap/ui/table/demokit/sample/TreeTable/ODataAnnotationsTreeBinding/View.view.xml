<mvc:View
    xmlns="sap.ui.table"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <TreeTable
        id="treeTable"
        selectionMode="Single"
        enableColumnReordering="false"
        rows="{
            path : '/Nodes',
            parameters : {
                countMode: 'Inline',
                numberOfExpandedLevels: 1
            }
        }">

        <columns>

            <Column>
                <m:Label text="Description"/>
                <template>
                    <m:Text text="{Description}" wrapping="false" />
                </template>
            </Column>

            <Column>
                <m:Label text="HierarchyLevel"/>
                <template>
                    <m:Text text="{HierarchyLevel}" wrapping="false" />
                </template>
            </Column>

            <Column>
                <m:Label text="NodeID"/>
                <template>
                    <m:Text text="{NodeID}" wrapping="false" />
                </template>
            </Column>

            <Column>
                <m:Label text="ParentNodeID"/>
                <template>
                    <m:Text text="{ParentNodeID}" wrapping="false" />
                </template>
            </Column>

        </columns>

    </TreeTable>

</mvc:View>
