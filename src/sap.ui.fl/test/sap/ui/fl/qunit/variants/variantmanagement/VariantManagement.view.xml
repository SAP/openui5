<mvc:View
	height="100%"
	controllerName="sap.ui.fl.sample.variantmanagement.VariantManagement"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns="sap.ui.fl.variants">
	<l:VerticalLayout>
	<m:HBox fitContainer="true">
		<m:Button id="idMarkAsChangedBtn" text="Mark as Changed" press="onMarkAsChanged" />
	</m:HBox>
		<m:Label text="Variants"/>
		<VariantManagement id="idVariantManagementCtrl" variantMgmtId="M0" select="onSelect" save="onSave"  manage="onManage" showExecuteOnSelection="true" showShare="true" showFavorites="true" />
	</l:VerticalLayout>
</mvc:View>